<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorPrimary">#00a99d</item>
        <item name="colorPrimaryDark">#00796B</item>
        <item name="colorAccent">#da4336</item>
        <item name="colorButtonNormal">#da4336</item>
        <item name="actionOverflowButtonStyle">@style/Widget.AppCompat.Light.ActionButton.Overflow</item>
        <item name="actionBarWidgetTheme">@style/Theme.AppCompat</item>
        <item name="android:animateOnClick">true</item>
        <item name="actionBarPopupTheme">@style/Theme.AppCompat.Light</item>
        <item name="alertDialogTheme">@style/Theme.AppCompat.Light.Dialog</item>
        <item name="actionButtonStyle">@style/Widget.AppCompat.ActionButton</item>

    </style>

    <style name="SplashTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#00a99d</item>
        <item name="colorPrimaryDark">#00796B</item>
        <item name="colorAccent">#da4336</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>

    </style>

    <style name="AppTheme_sherlock" parent="@style/Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/MyActionBar_sherlock</item>
        <item name="colorPrimary">#00a99d</item>
        <item name="colorPrimaryDark">#00796B</item>
        <item name="colorAccent">#da4336</item>
        <item name="colorButtonNormal">#da4336</item>
        <item name="android:textColor">@color/black</item>
        <item name="actionOverflowButtonStyle">@style/Widget.AppCompat.Light.ActionButton.Overflow</item>
        <item name="actionBarWidgetTheme">@style/Theme.AppCompat</item>
        <item name="android:animateOnClick">true</item>
        <item name="actionBarPopupTheme">@style/Theme.AppCompat.Light</item>
        <item name="alertDialogTheme">@style/Theme.AppCompat.Light.Dialog</item>
        <item name="actionButtonStyle">@style/Widget.AppCompat.ActionButton</item>

    </style>

    <style name="MyMaterialTheme" parent="Theme.MaterialComponents.Light">
        <!-- Add attributes here -->
        <item name="actionBarStyle">@style/MyActionBar_sherlock</item>
        <item name="colorPrimary">#00a99d</item>
        <item name="colorPrimaryDark">#00796B</item>
        <item name="colorAccent">#da4336</item>
        <item name="colorButtonNormal">#da4336</item>
        <item name="android:textColor">@color/black</item>
        <item name="actionOverflowButtonStyle">@style/Widget.AppCompat.Light.ActionButton.Overflow</item>
        <item name="actionBarWidgetTheme">@style/Theme.AppCompat</item>
        <item name="android:animateOnClick">true</item>
        <item name="actionBarPopupTheme">@style/Theme.AppCompat.Light</item>
        <item name="alertDialogTheme">@style/Theme.AppCompat.Light.Dialog</item>
        <item name="actionButtonStyle">@style/Widget.AppCompat.ActionButton</item>
        <item name="textAppearanceButton">@style/AppTextAppearance.Button</item>
    </style>
    <!--To fix rendering in preview -->
    <style name="AppTextAppearance.Button" parent="TextAppearance.MaterialComponents.Button">

    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#00a99d</item>
    </style>

    <style name="MyActionBar_sherlock" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="background">@color/ColorPrimary</item>
        <item name="windowNoTitle">true</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="actionOverflowButtonStyle">@style/Widget.AppCompat.Light.ActionButton.Overflow</item>
        <item name="actionBarWidgetTheme">@style/Theme.AppCompat</item>
        <item name="actionBarPopupTheme">@style/Theme.AppCompat.Light</item>
        <item name="actionButtonStyle">@style/Widget.AppCompat.ActionButton</item>

    </style>

    <style name="AppTheme_NoActionBar" parent="@style/Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorAccent">#da4336</item>
        <item name="colorPrimary">#00a99d</item>
        <item name="colorPrimaryDark">#00796B</item>
        <item name="colorButtonNormal">#00a99d</item>

    </style>

    <style name="AppTheme_NoActionBar2" parent="@style/Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorAccent">#da4336</item>
        <item name="colorPrimary">#00a99d</item>
        <item name="colorPrimaryDark">#00796B</item>
        <item name="colorButtonNormal">#da4336</item>

    </style>

    <style name="ButtonText">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">1.0dip</item>
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">2.0</item>
    </style>

    <style name="cust_dialog" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorPrimary">#00a99d</item>
        <item name="colorPrimaryDark">#00796B</item>
        <item name="colorAccent">#da4336</item>
        <item name="colorButtonNormal">#da4336</item>
    </style>

    <style name="dialog_title_stylee" parent="android:Widget.TextView">
        <item name="android:background">@color/itemedit</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="notitle" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">#00a99d</item>
        <item name="colorPrimaryDark">#00796B</item>
        <item name="colorAccent">#da4336</item>
    </style>

    <style name="timepicker_date_dialog" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorPrimary">#00a99d</item>
        <item name="colorPrimaryDark">#00796B</item>
        <item name="colorAccent">#da4336</item>
        <item name="colorButtonNormal">#da4336</item>
    </style>

    <style name="r_timepicker_date_dialog" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorPrimary">#00a99d</item>
        <item name="colorPrimaryDark">#00796B</item>
        <item name="colorAccent">#da4336</item>
        <item name="colorButtonNormal">#da4336</item>

    </style>

    <style name="cust_dialogg1" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:windowTitleStyle">@style/dialog_title_stylee</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>
    <style name="styleCustDlg" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="spinnerTheme">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="spinnerThemePopup">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="MswipeDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/primaryColorDark</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <!-- Used for the background -->
        <item name="android:background">@color/white</item>
        <item name="android:windowMinWidthMajor">96%</item>
        <item name="android:windowMinWidthMinor">96%</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#46bdbf</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#46bdbf
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>
</resources>
