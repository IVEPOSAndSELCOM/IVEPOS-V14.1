<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:id="@+id/re"
    android:layout_height="match_parent"
    android:background="@color/ColorPrimary">

    <TextView
        android:layout_width="match_parent"
        android:textSize="12sp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/copyrights"
        android:paddingBottom="4dp"
        android:id="@+id/copy"
        android:layout_alignParentBottom="true"
        android:background="#e6e6e6"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/copy"
        android:id="@+id/sv_scroll"
        android:background="#e6e6e6"
        >
        <LinearLayout
            android:id="@+id/login_wrapper"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:weightSum="2.88"
            android:padding="0dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="#00e6e6e6">

            <FrameLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="1dp"
                android:background="#007f7f7f">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#00ffffff"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="0.87"
                        android:orientation="vertical"
                        android:layout_height="0dp"
                        android:gravity="center"
                        android:padding="0dp"
                        android:background="#0000a99d"
                        android:layout_marginBottom="5dp">

                        <ImageView
                            android:layout_width="wrap_content" android:layout_centerInParent="true"
                            android:src="@drawable/ic_ivepos_logo_48dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="18sp" android:layout_marginTop="5dp"
                            android:textColor="#000000"
                            android:layout_height="wrap_content"
                            android:text="@string/enter_your_pin" />
                        <TextView
                            android:layout_width="match_parent"
                            android:visibility="invisible"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="#da4336"
                            android:text="@string/wrong_pin"
                            android:id="@+id/wrong"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:layout_weight="@string/Button9"
                            android:padding="1dp">
                            <TextView
                                android:layout_width="match_parent" android:id="@+id/box1"
                                android:layout_height="wrap_content"
                                style="@style/Widget.AppCompat.EditText"
                                android:imeOptions="actionNext"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:gravity="center"
                                android:textSize="24sp"
                                android:padding="10dp"
                                android:nextFocusForward="@+id/box2"
                                android:password="true"
                                android:singleLine="true"
                                android:maxLength="@string/Button9"/>
                        </FrameLayout>
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="@string/Button9"
                            android:layout_margin="3dp"
                            android:padding="1dp">
                            <TextView
                                android:layout_width="match_parent" android:id="@+id/box2"
                                android:layout_height="wrap_content"
                                style="@style/Widget.AppCompat.EditText"
                                android:imeOptions="actionNext"
                                android:nextFocusForward="@+id/box3"
                                android:gravity="center"
                                android:textSize="24sp"
                                android:padding="10dp"
                                android:password="true"
                                android:singleLine="true"
                                android:maxLength="@string/Button9" />
                        </FrameLayout>
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="@string/Button9"
                            android:layout_margin="3dp"
                            android:padding="1dp">
                            <TextView
                                android:layout_width="match_parent" android:id="@+id/box3"
                                android:layout_height="wrap_content"
                                style="@style/Widget.AppCompat.EditText"
                                android:imeOptions="actionNext"
                                android:nextFocusForward="@+id/box4"
                                android:gravity="center"
                                android:textSize="24sp"
                                android:padding="10dp"
                                android:password="true"
                                android:singleLine="true"
                                android:maxLength="@string/Button9"/>
                        </FrameLayout>
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="@string/Button9"
                            android:layout_margin="3dp"
                            android:padding="1dp">
                            <TextView
                                android:layout_width="match_parent" android:id="@+id/box4"
                                android:layout_height="wrap_content"
                                style="@style/Widget.AppCompat.EditText"
                                android:imeOptions="actionDone"
                                android:gravity="center"
                                android:textSize="24sp"
                                android:padding="10dp"
                                android:password="true"
                                android:singleLine="true"
                                android:maxLength="@string/Button9"/>
                        </FrameLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Button
                            android:layout_width="match_parent" android:id="@+id/one"
                            android:layout_height="wrap_content"
                            android:layout_weight="@string/Button9"
                            android:text="@string/Button9"
                            android:textStyle="bold"
                            android:paddingTop="18dp"
                            android:paddingBottom="18dp"/>
                        <Button
                            android:layout_width="match_parent" android:id="@+id/two"
                            android:layout_height="wrap_content"
                            android:layout_weight="@string/Button9"
                            android:text="@string/Button10"
                            android:textStyle="bold"
                            android:paddingTop="18dp"
                            android:paddingBottom="18dp"/>
                        <Button
                            android:layout_width="match_parent" android:id="@+id/three"
                            android:layout_height="wrap_content"
                            android:layout_weight="@string/Button9"
                            android:text="@string/Button11"
                            android:textStyle="bold"
                            android:paddingTop="18dp"
                            android:paddingBottom="18dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Button
                            android:layout_width="match_parent" android:id="@+id/four"
                            android:layout_height="wrap_content"
                            android:layout_weight="@string/Button9"
                            android:text="@string/Button5"
                            android:textStyle="bold"
                            android:paddingTop="18dp"
                            android:paddingBottom="18dp"/>
                        <Button
                            android:layout_width="match_parent" android:id="@+id/five"
                            android:layout_height="wrap_content"
                            android:layout_weight="@string/Button9"
                            android:text="@string/Button6"
                            android:textStyle="bold"
                            android:paddingTop="18dp"
                            android:paddingBottom="18dp"/>
                        <Button
                            android:layout_width="match_parent" android:id="@+id/six"
                            android:layout_height="wrap_content"
                            android:layout_weight="@string/Button9"
                            android:text="@string/Button7"
                            android:textStyle="bold"
                            android:paddingTop="18dp"
                            android:paddingBottom="18dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Button
                            android:layout_width="match_parent" android:id="@+id/seven"
                            android:layout_height="wrap_content"
                            android:layout_weight="@string/Button9"
                            android:text="@string/Button1"
                            android:textStyle="bold"
                            android:paddingTop="18dp"
                            android:paddingBottom="18dp"/>
                        <Button
                            android:layout_width="match_parent" android:id="@+id/eight"
                            android:layout_height="wrap_content"
                            android:layout_weight="@string/Button9"
                            android:text="@string/Button2"
                            android:textStyle="bold"
                            android:paddingTop="18dp"
                            android:paddingBottom="18dp"/>
                        <Button
                            android:layout_width="match_parent" android:id="@+id/nine"
                            android:layout_height="wrap_content"
                            android:layout_weight="@string/Button9"
                            android:text="@string/Button3"
                            android:textStyle="bold"
                            android:paddingTop="18dp"
                            android:paddingBottom="18dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Button
                            android:layout_width="match_parent" android:id="@+id/clear"
                            android:layout_height="wrap_content"
                            android:layout_weight="@string/Button9"
                            android:text="@string/Button25"
                            android:textStyle="bold"
                            android:paddingTop="18dp"
                            android:paddingBottom="18dp"/>
                        <Button
                            android:layout_width="match_parent" android:id="@+id/zero"
                            android:layout_height="wrap_content"
                            android:layout_weight="@string/Button9"
                            android:text="@string/Button13"
                            android:textStyle="bold"
                            android:paddingTop="18dp"
                            android:paddingBottom="18dp"/>
                        <ImageButton
                            android:layout_width="match_parent" android:id="@+id/backspace"
                            android:layout_height="match_parent"
                            android:layout_weight="@string/Button9"
                            android:src="@drawable/ic_backspace_black_24dp"
                            android:textStyle="bold"
                            android:paddingTop="18dp"
                            android:paddingBottom="18dp"/>
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

            <TextView
                android:id="@+id/forgotpassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:layout_below="@+id/login_wrapper"
                android:text="@string/forgot_password_need_help"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp"
                android:textColor="#da4336"
                android:clickable="true"
                android:background="@drawable/light_black_click"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/settings_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="@string/recovery_settings"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp"
                android:textColor="@color/DarkBlack"
                android:clickable="true"
                android:background="@drawable/light_black_click"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/default_pin" android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="@string/default_pin_0000"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp"
                android:textColor="@color/DarkBlack"
                android:clickable="true"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/assets_test" android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="@string/test"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp"
                android:textColor="@color/DarkBlack"
                android:clickable="true"
                android:background="@drawable/light_black_click"
                android:textStyle="bold"/>

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:elevation="6dp"
        android:layout_centerInParent="true"
        android:id="@+id/progressbar11">

        <ProgressBar
            android:id="@+id/circle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            style="?android:attr/progressBarStyleLarge"/>

        <ImageView
            android:id="@+id/progress_image1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/white_shape_circle"
            android:padding="8dp"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/progress_text11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/circle1"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/progressbar_checkingstore"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="#80000000"
        android:elevation="6dp"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/circle"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/progress_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:background="@drawable/white_shape_circle"
            android:padding="8dp" />

        <TextView
            android:id="@+id/progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/circle"
            android:layout_centerHorizontal="true"
            android:text="@string/loading"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ColorPrimary"
        android:elevation="6dp"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:id="@+id/progressbar12">
        <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/progressbar1"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_centerInParent="true"
            card_view:cardCornerRadius="80dp"
            android:visibility="gone"
            android:background="@color/green"
            >

            <!--       <ProgressBar
                    android:id="@+id/circle1"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@android:color/white"
                    android:progressBackgroundTint="@android:color/black"
                    android:visibility="gone"
                    />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/progress_text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/downloading_and_initializing_pos" />

                    <ProgressBar
                        android:id="@+id/updatebar"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="120dp"
                        android:layout_height="8dp"
                        android:layout_margin="5dp"
                        android:progressDrawable="@drawable/progress_drawable" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ProgressBar
                            style="?android:attr/progressBarStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true" />

                        <TextView
                            android:id="@+id/tv_perc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:textSize="12sp"
                            android:text="@string/_0Per" />
                    </RelativeLayout>

                </LinearLayout>


                <TextView
                    android:id="@+id/tv_salesdata"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@string/sales_data"
                    android:visibility="gone" />

                <ProgressBar
                    android:id="@+id/updatebarsales"
                    style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:visibility="gone" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

</RelativeLayout>
