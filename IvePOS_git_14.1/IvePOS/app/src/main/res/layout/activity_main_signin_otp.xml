                    android:layout_height="match_parent"
                    android:layout_weight="@string/Button9"
                    android:text="@string/dine"
                    android:textSize="18sp"
                    android:textColor="#000000"/>

                <RadioButton
                    android:layout_width="match_parent"
                    android:id="@+id/radio_qsr"
                    android:layout_height="match_parent"
                    android:layout_weight="@string/Button9"
                    android:text="@string/qsr"
                    android:textSize="18sp"
                    android:textColor="#000000"/>

                <RadioButton
                    android:layout_width="match_parent"
                    android:id="@+id/radio_retail"
                    android:layout_height="match_parent"
                    android:layout_weight="@string/Button9"
                    android:textSize="18sp"
                    android:text="@string/retail"
                    android:textColor="#000000"/>
            </RadioGroup>

            <Button
                android:id="@+id/login1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/red_click_shape_rounded_corners"
                android:minWidth="240dp"
                android:text="@string/log_in"
                android:textColor="#ffffff"
                android:textStyle="bold" />


            <Button
                android:id="@+id/login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/light_black_click_shape_rounded_corners"
                android:minWidth="240dp"
                android:onClick="signUp"
                android:text="@string/login"
                android:textColor="@color/ColorAccentDark"
                android:textStyle="bold" />

            <TextView
