<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:id="@+id/relativeLayout1"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent" android:layout_centerVertical="true"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:text="@string/tax">
        </TextView>
        <TextView
            android:layout_width="wrap_content" android:id="@+id/open"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" android:layout_toRightOf="@+id/label"
            android:text="("/>
        <TextView
            android:layout_width="wrap_content" android:id="@+id/value"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" android:layout_toRightOf="@+id/open"
            android:text="@string/Button6"/>
        <TextView
            android:layout_width="wrap_content" android:id="@+id/percent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" android:layout_toRightOf="@+id/value"
            android:text="%"/>
        <TextView
            android:layout_width="wrap_content" android:id="@+id/close"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" android:layout_toRightOf="@+id/percent"
            android:text=")"/>
    </LinearLayout>


    <CheckBox
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:clickable="false"
        android:layout_centerVertical="true"
        style="@style/Widget.AppCompat.CompoundButton.CheckBox">
    </CheckBox>

</RelativeLayout>