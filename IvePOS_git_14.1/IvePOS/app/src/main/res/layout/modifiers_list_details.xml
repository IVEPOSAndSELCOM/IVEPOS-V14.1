<?xml version="1.0" encoding="utf-8"?><!-- Layout for a single list item -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:orientation="horizontal"
    android:padding="16dp"
    android:layout_gravity="center">


    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="@string/Button9"
        android:text="@string/_name"
        android:layout_toLeftOf="@+id/item_selection"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical"
        android:paddingTop="5dp"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/options"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="@string/Button9"
        android:text="@string/name1111"
        android:layout_toLeftOf="@+id/item_selection"
        android:layout_below="@+id/name"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical"/>

    <Button
        android:layout_width="wrap_content" android:id="@+id/item_selection"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:text="@string/add_item"
        android:layout_alignParentRight="true"
        android:background="@drawable/light_black_click_shape_rounded_corners"/>

</RelativeLayout>