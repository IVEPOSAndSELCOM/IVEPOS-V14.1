<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/view_margin_12px"
    android:layout_marginRight="@dimen/view_margin_12px"
    android:background="@drawable/ms_round_rect_layout_bg_white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/top_bar_REL_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|left"
        android:orientation="vertical"
        android:padding="@dimen/view_margin_15px">

        <TextView
            android:id="@+id/customdlg_sdk_TXT_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_normal"
            android:background="@android:color/transparent"
            android:maxLines="@string/Button7"
            android:text="@string/loginactivity_login"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/font_size_RH7"
            android:visibility="gone" />

        <TextView
            android:id="@+id/customdlg_sdk_TXT_Info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:gravity="center"
            android:maxLines="@string/Button2"
            android:text="@string/hello"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/font_size_RH2" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/customdlg_LIN_details"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/customdlg_sdk_RLT_yes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="@string/Button9"
            android:clickable="true"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/customdlg_img_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/customdlg_sdk_BTN_yes"
                    android:background="@drawable/ms_banner_yes" />

                <Button
                    android:id="@+id/customdlg_sdk_BTN_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-3dp"
                    android:background="@android:color/transparent"
                    android:clickable="false"
                    android:focusable="false"
                    android:text="@string/yes"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/font_size_RH8" />

            </LinearLayout>

        </RelativeLayout>


        <View
            android:id="@+id/customdlg_sdk_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/background" />

        <RelativeLayout
            android:id="@+id/customdlg_sdk_RLT_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="@string/Button9"
            android:clickable="true"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/customdlg_img_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/customdlg_sdk_BTN_no"
                    android:background="@drawable/ms_banner_cancel" />

                <Button
                    android:id="@+id/customdlg_sdk_BTN_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="-3dp"
                    android:background="@android:color/transparent"
                    android:clickable="false"
                    android:focusable="false"
                    android:gravity="center"
                    android:text="@string/no"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/font_size_RH8" />

            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>

</LinearLayout>