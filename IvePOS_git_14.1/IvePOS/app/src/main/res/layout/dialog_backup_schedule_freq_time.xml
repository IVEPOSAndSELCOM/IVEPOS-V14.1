<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:background="#e6e6e6">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingRight="10dp">
        <ImageView
            android:id="@+id/change_username_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_schedule_black_24dp"
            android:padding="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/change_username_pic"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:text="@string/scheduled_backup"/>
        <FrameLayout
            android:layout_width="match_parent" android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical">
            <Switch
                android:id="@+id/mySwitch" android:saveEnabled="false"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right|center_vertical"/>
            <!--<Switch-->
                <!--android:id="@+id/mySwitch" android:saveEnabled="false"-->
                <!--android:layout_width="wrap_content" style="@style/Theme.AppCompat.Light.Dialog"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_gravity="right|center_vertical"/>-->




            <!--<Switch-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginRight="10dp"-->
            <!--android:checked="true"-->
            <!--android:layout_gravity="right|center_vertical"/>-->
        </FrameLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent" android:id="@+id/linearLayout"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:elevation="2dp"
                android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="0dp" android:paddingRight="0dp"
                android:paddingBottom="1dp" android:paddingTop="0dp"
                android:background="#7f7f7f">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:paddingLeft="10dp" android:paddingRight="10dp"
                    android:paddingTop="5dp" android:paddingBottom="5dp"
                    android:text="@string/days"
                    android:textColor="#000000"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:paddingLeft="5dp" android:paddingRight="5dp"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal">
                    <Button
                        android:layout_width="match_parent" android:id="@+id/selectsunday"
                        android:layout_height="wrap_content"
                        android:layout_weight="@string/Button9" android:textSize="18sp"
                        android:padding="10dp"
                        android:layout_margin="2dp"
                        android:background="#00a99d"
                        android:text="@string/S"/>
                    <Button
                        android:layout_width="match_parent" android:id="@+id/selectmonday"
                        android:layout_height="wrap_content"
                        android:background="#00a99d"
                        android:layout_margin="2dp"
                        android:layout_weight="@string/Button9" android:textSize="18sp"
                        android:padding="10dp"
                        android:text="@string/M"/>
                    <Button
                        android:layout_width="match_parent" android:id="@+id/selecttuesday"
                        android:layout_height="wrap_content"
                        android:background="#00a99d"
                        android:layout_margin="2dp"
                        android:layout_weight="@string/Button9" android:textSize="18sp"
                        android:padding="10dp"
                        android:text="@string/T"/>
                    <Button
                        android:layout_width="match_parent" android:id="@+id/selectwednesday"
                        android:layout_height="wrap_content"
                        android:background="#00a99d"
                        android:layout_margin="2dp"
                        android:layout_weight="@string/Button9" android:textSize="18sp"
                        android:padding="10dp"
                        android:text="@string/W"/>
                    <Button
                        android:layout_width="match_parent" android:id="@+id/selectthursday"
                        android:layout_height="wrap_content"
                        android:background="#00a99d"
                        android:layout_weight="@string/Button9" android:textSize="18sp"
                        android:padding="10dp"
                        android:layout_margin="2dp"
                        android:text="@string/T"/>
                    <Button
                        android:layout_width="match_parent" android:id="@+id/selectfriday"
                        android:layout_height="wrap_content"
                        android:background="#00a99d" android:textSize="18sp"
                        android:padding="10dp"
                        android:layout_margin="2dp"
                        android:layout_weight="@string/Button9"
                        android:text="@string/F"/>
                    <Button
                        android:layout_width="match_parent" android:id="@+id/selectsatuday"
                        android:layout_height="wrap_content"
                        android:background="#00a99d"
                        android:layout_weight="@string/Button9" android:textSize="18sp"
                        android:padding="10dp"
                        android:layout_margin="2dp"
                        android:text="@string/S"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item_qty"
                    android:background="#ffffff"
                    android:paddingTop="0dp" android:paddingBottom="5dp"
                    android:paddingLeft="10dp" android:paddingRight="10dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="#ffffff"
                        android:weightSum="@string/Button5"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:paddingTop="5dp" android:paddingBottom="5dp">
                        <TextView
                            android:layout_width="wrap_content" android:id="@+id/one"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content" android:id="@+id/two"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content" android:id="@+id/three"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content" android:id="@+id/four"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content" android:id="@+id/five"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content" android:id="@+id/six"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content" android:id="@+id/seven"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/selected"/>
                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:elevation="2dp"
                android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="0dp" android:paddingRight="0dp"
                android:paddingBottom="0dp"
                android:background="#7f7f7f">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:paddingLeft="10dp" android:paddingRight="10dp"
                    android:paddingTop="5dp" android:paddingBottom="5dp"
                    android:text="@string/time_title"
                    android:textColor="#000000"/>

                <TextView
                    android:layout_width="match_parent" android:background="#ffffff" android:gravity="center"
                    android:layout_height="wrap_content" android:padding="20dp" android:id="@+id/timeget"
                    android:text="@string/_10_00_am" android:textSize="24sp" android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/search_content">
                <Button
                    android:layout_width="match_parent" android:id="@+id/cancel"
                    android:layout_height="wrap_content"
                    android:layout_weight="@string/Button9"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:background="@drawable/ok"
                    android:text="@string/subscription_prompt_cancel"
                    android:layout_marginRight="1dp"/>
                <Button
                    android:layout_width="match_parent" android:id="@+id/savetime"
                    android:layout_height="wrap_content"
                    android:layout_weight="@string/Button9"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:background="@drawable/ok"
                    android:text="@string/save"
                    android:layout_marginLeft="1dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>