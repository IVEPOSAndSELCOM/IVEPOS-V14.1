<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ColorPrimary"
    >

    <RelativeLayout
        android:id="@+id/action"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/white"
        android:elevation="3dp">

        <ImageView
            android:id="@+id/leftarrow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:paddingBottom="4dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="4dp"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/gotomainpage"
            android:layout_toRightOf="@+id/leftarrow"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/checking_store"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/store"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="15sp" />
            <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"-->
            <!--android:text="@string/recovery" />-->
        </LinearLayout>



    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/action"
        android:layout_marginTop="0dp"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:gravity="center_vertical"
            android:padding="6dp"
            android:visibility="gone">


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/r_new_login_stylesolid"
            android:elevation="6dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/storelayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:gravity="center_vertical"
                android:padding="6dp"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/store_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_action_store" />

                <Spinner
                    android:id="@+id/store_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/add_button"
                    android:layout_toRightOf="@+id/store_image" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/devicelayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:padding="6dp"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/device_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_action_device" />

                <Spinner
                    android:id="@+id/device_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/add_device"
                    android:layout_toRightOf="@+id/device_image" />


            </RelativeLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/textViewRegEmailLabel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/textViewUserRegCompanyMessage"
            android:layout_centerHorizontal="true"
            android:text=" "
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="15sp" />

        <!--<android.support.design.widget.TextInputLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:gravity="center_vertical">-->

        <EditText
            android:id="@+id/editTextRegEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_action_email"
            android:drawablePadding="10dp"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:visibility="gone" />

        <!--</android.support.design.widget.TextInputLayout>-->

        <TextView
            android:id="@+id/textViewRegEmailMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" "
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/alert"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/textViewRegUserPasswordLabel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/textViewRegEmailMessage"
            android:layout_centerHorizontal="true"
            android:text=" "
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="15sp" />


        <EditText
            android:id="@+id/editTextRegPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewRegUserPasswordLabel"
            android:layout_centerHorizontal="true"
            android:background="@drawable/text_border_selector"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textViewUserRegPasswordMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextRegPassword"
            android:layout_centerHorizontal="true"
            android:text=" "
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/alert"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textViewRegUserconfirmPasswordLabel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/textViewRegEmailMessage"
            android:layout_centerHorizontal="true"
            android:text=" "
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/editTextRegconfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewRegUserconfirmPasswordLabel"
            android:layout_centerHorizontal="true"
            android:background="@drawable/text_border_selector"
            android:hint="confirm Password"
            android:inputType="textPassword"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textViewUserRegconfirmPasswordMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextRegPassword"
            android:layout_centerHorizontal="true"
            android:text=" "
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/alert"
            android:textSize="15sp" />


    </LinearLayout>


    <RelativeLayout
        android:id="@+id/progressbar_checkingstore"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="#80000000"
        android:elevation="6dp"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/circle"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/progress_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:background="@drawable/white_shape_circle"
            android:padding="8dp" />

        <TextView
            android:id="@+id/progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/circle"
            android:layout_centerHorizontal="true"
            android:text="@string/loading"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/progressbar1"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_centerInParent="true"
        card_view:cardCornerRadius="80dp"
        android:visibility="gone"
        >

        <!--       <ProgressBar
                android:id="@+id/circle1"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:color/white"
                android:progressBackgroundTint="@android:color/black"
                android:visibility="gone"
                />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/progress_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/downloading_and_initializing_pos" />

                <ProgressBar
                    android:id="@+id/updatebar"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="120dp"
                    android:layout_height="8dp"
                    android:layout_margin="5dp"
                    android:progressDrawable="@drawable/progress_drawable" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ProgressBar
                        style="?android:attr/progressBarStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true" />

                    <TextView
                        android:id="@+id/tv_perc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textSize="12sp"
                        android:text="@string/_0Per" />
                </RelativeLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/tv_salesdata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/sales_data"
                android:visibility="gone" />

            <ProgressBar
                android:id="@+id/updatebarsales"
                style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:visibility="gone" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <!--    <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"

            >-->






