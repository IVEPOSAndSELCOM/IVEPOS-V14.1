<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp" android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="#e6e6e6">

    <RelativeLayout
        android:layout_width="320dp"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:background="#e6e6e6"
        android:layout_marginBottom="5dp">
        <ImageButton
            android:id="@+id/btncancel"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/light_black_click"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/subscription_prompt_cancel"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent" android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/btncancel"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/btnsave">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/feedback" android:textSize="18sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content" android:id="@+id/cust_name"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/customername"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/btnsave"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ok"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:src="@drawable/ic_done_black_24dp"
            android:text="@string/submit"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent" android:orientation="vertical"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp">
        <TextView
            android:layout_width="wrap_content" android:hint="Ambience"
            android:layout_height="wrap_content" />
        <RatingBar
            android:id="@+id/ratingBar_Ambience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" android:numStars="@string/Button6"
            style="@style/Widget.AppCompat.RatingBar"/>

        <TextView
            android:layout_width="wrap_content" android:hint="Product quality"
            android:layout_height="wrap_content" />
        <RatingBar
            android:id="@+id/ratingBar_prod_qual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            style="@style/Widget.AppCompat.RatingBar"/>

        <TextView
            android:layout_width="wrap_content" android:hint="Service"
            android:layout_height="wrap_content" />
        <RatingBar
            android:id="@+id/ratingBar_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            style="@style/Widget.AppCompat.RatingBar"/>

        <TextView
            android:layout_width="wrap_content" android:hint="Overall experience"
            android:layout_height="wrap_content" />
        <RatingBar
            android:id="@+id/ratingBar_all_exp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            style="@style/Widget.AppCompat.RatingBar"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--<EditText-->
                <!--android:layout_width="match_parent"-->
                <!--android:id="@+id/comment"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:ellipsize="end"-->
                <!--android:maxLines="@string/Button11"-->
                <!--android:hint="Comment"-->
                <!--android:textSize="15sp"-->
                <!--android:gravity="center_vertical"/>-->
            <EditText
                android:id="@+id/comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="@string/Button11"
                android:hint="Comment"
                android:textSize="15sp"/>
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
    </ScrollView>




</LinearLayout>