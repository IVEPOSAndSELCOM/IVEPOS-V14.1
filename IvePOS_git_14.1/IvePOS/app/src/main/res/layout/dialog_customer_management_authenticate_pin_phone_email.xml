<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/relativeLayout1"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:background="#e6e6e6"
    xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/change_username_pic"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:padding="15dp"
            android:text="@string/fill"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent" android:orientation="horizontal"
                android:layout_height="wrap_content" android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp">

                    <!--<android.support.design.widget.TextInputLayout-->
                    <!--android:layout_width="match_parent" android:id="@+id/phon1"-->
                    <!--android:layout_height="wrap_content">-->
                    <!--<EditText-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:id="@+id/enter_phone"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:singleLine="true"-->
                    <!--android:maxLines="@string/Button9"-->
                    <!--android:inputType="phone"-->
                    <!--android:maxLength="10"-->
                    <!--android:hint="Enter phone no."-->
                    <!--android:gravity="center_vertical"/>-->
                    <!--</android.support.design.widget.TextInputLayout>-->


                    <!--<android.support.design.widget.TextInputLayout-->
                    <!--android:layout_width="match_parent" android:id="@+id/conf_phon1"-->
                    <!--android:layout_height="wrap_content">-->

                    <!--<EditText-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:id="@+id/confirm_enter_phone"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:singleLine="true"-->
                    <!--android:maxLines="@string/Button9"-->
                    <!--android:inputType="phone"-->
                    <!--android:hint="Confirm phone no."-->
                    <!--android:gravity="center_vertical"/>-->
                    <!--</android.support.design.widget.TextInputLayout>-->

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent" android:id="@+id/email1"
                        android:layout_height="wrap_content">
                        <EditText
                            android:layout_width="match_parent"
                            android:id="@+id/enter_email"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:maxLines="@string/Button9"
                            android:inputType="textEmailAddress"
                            android:maxLength="10"
                            android:hint="Enter email"
                            android:gravity="center_vertical"/>
                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent" android:id="@+id/conf_email1"
                        android:layout_height="wrap_content">

                        <EditText
                            android:layout_width="match_parent"
                            android:id="@+id/confirm_enter_email"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:maxLines="@string/Button9"
                            android:inputType="textEmailAddress"
                            android:hint="Confirm email"
                            android:gravity="center_vertical"/>
                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/search_content">
                <Button
                    android:layout_width="match_parent" android:id="@+id/cancel"
                    android:layout_height="wrap_content"
                    android:layout_weight="@string/Button9"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:background="@drawable/ok"
                    android:text="@string/subscription_prompt_cancel"
                    android:layout_marginRight="1dp"/>
                <Button
                    android:layout_width="match_parent" android:id="@+id/savetime"
                    android:layout_height="wrap_content"
                    android:layout_weight="@string/Button9"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:background="@drawable/ok"
                    android:text="@string/save"
                    android:layout_marginLeft="1dp"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>