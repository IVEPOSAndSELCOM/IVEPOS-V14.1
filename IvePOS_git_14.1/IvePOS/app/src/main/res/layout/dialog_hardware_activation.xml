<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/relativeLayout1" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#e6e6e6"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#e6e6e6"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:elevation="2dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="21sp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_intuition_logo_green_72dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/ivepos_activation"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#757575"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_below="@+id/header"
        android:layout_marginTop="10dp"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:gravity="center"
        android:elevation="3dp">
        <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="Product Activation"-->
            <!--android:textSize="18sp"-->
            <!--android:textStyle="bold"-->
            <!--android:textColor="#da4336"-->
            <!--android:paddingTop="10dp"-->
            <!--android:paddingBottom="10dp"/>-->

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/activation_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:singleLine="true"
                android:maxLines="@string/Button9"
                android:imeOptions="actionGo"
                android:inputType="number"
                style="@style/Widget.AppCompat.EditText"
                android:hint="Enter activation code"/>

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnsave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/activate"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:padding="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#e6e6e6"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:elevation="5dp">
        <TextView
            android:layout_width="wrap_content" android:textSize="12sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/copyrights"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"/>
    </LinearLayout>

</RelativeLayout>