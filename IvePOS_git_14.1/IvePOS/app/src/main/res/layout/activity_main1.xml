<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#e2e2e2"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/paynear_payment_sdk_demo_version" />

    <Button
        android:id="@+id/sale1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="136dp"
        android:visibility="gone"
        android:text="@string/sale" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/paired_provider"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="32dp"
        android:text="@string/select_paired_device" />

    <Spinner
        android:id="@+id/paired_provider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:spinnerMode="dialog"
        android:background="@drawable/rounded_corners" />

    <Button
        android:id="@+id/prepaid"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sale"
        android:layout_alignRight="@+id/sale"
        android:layout_below="@+id/sale"
        android:layout_marginTop="24dp"
        android:text="@string/prepaid_card"
        android:visibility="gone" />

    <Button
        android:id="@+id/rki"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/prepaid"
        android:layout_alignRight="@+id/prepaid"
        android:layout_below="@+id/prepaid"
        android:layout_marginTop="18dp"
        android:text="@string/remote_process"
        android:visibility="gone" />

</RelativeLayout>