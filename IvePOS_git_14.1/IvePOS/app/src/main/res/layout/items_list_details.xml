<?xml version="1.0"   encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="?android:attr/activatedBackgroundIndicator"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <TextView
        android:id="@+id/code"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="@string/_1111" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/barcode_value"
        android:layout_toRightOf="@+id/code">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/x"
            android:text="@string/hii"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/x"
            android:text="@string/x"
            android:layout_marginLeft="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/qty"/>

        <TextView
            android:id="@+id/qty"
            android:text="@string/hii"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="5dp"/>

        <!--<TextView-->
            <!--android:text=")"-->
            <!--android:layout_marginLeft="2dp"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"/>-->

    </RelativeLayout>

    <TextView
        android:id="@+id/barcode_value"
        android:layout_toLeftOf="@+id/price_qty"
        android:text="@string/Button3"
        android:layout_centerVertical="true"
        android:layout_width="48dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/price_qty"
        android:layout_width="wrap_content"
        android:minWidth="48dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="end"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content" android:id="@+id/inn"
                android:layout_height="wrap_content"
                android:text="@string/Rs"/>

            <TextView
                android:id="@+id/price"
                android:text="999"
                android:gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>