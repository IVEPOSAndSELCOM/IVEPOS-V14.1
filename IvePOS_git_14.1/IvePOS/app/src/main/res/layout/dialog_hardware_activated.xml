<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:background="#e6e6e6"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_backup_success_green_48dp"/>
        <LinearLayout
            android:layout_width="wrap_content" android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textColor="#000000"
                android:text="@string/activation_successful_n"
                android:textSize="18sp" android:textStyle="bold"
                android:layout_marginLeft="10dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textColor="#000000"
                android:text="@string/loading_please_wait_for_a_while"
                android:layout_marginLeft="10dp" />
        </LinearLayout>

    </LinearLayout>
    <Button
        android:layout_width="match_parent" android:layout_weight="@string/Button9"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"
        android:visibility="gone"
        android:text="@string/Ok" android:id="@+id/donee"
        android:textStyle="bold"
        android:padding="10dp"/>

</LinearLayout>