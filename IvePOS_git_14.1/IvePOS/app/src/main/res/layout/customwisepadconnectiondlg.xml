<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#e6e6e6"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#00a99d">

            <!-- This is for the info image -->

            <ImageView
                android:id="@+id/customapplicationdlg_IMG_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:src="@android:drawable/ic_menu_info_details" />
            <!-- Title -->

            <TextView
                android:id="@+id/customwisepadconnectiondlg_TXT_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/message"
                android:textColor="#343434"
                android:textSize="22dip"
                android:textStyle="bold"
                android:typeface="sans" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="bottom"
        android:orientation="vertical">

        <!-- Underline with this bluish color -->

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#e2e2e2" />
        <!-- The message -->

    </LinearLayout>

    <LinearLayout
        android:id="@+id/customdlg_LNR_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#e2e2e2"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/select_device"
            android:textColor="#000000"
            android:textSize="18dp"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/customwisepadconnection_CHK_remembereddevcie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="2dp"
            android:text="@string/last_remembered_device"
            android:textColor="#000000"
            android:textSize="18dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/customwisepadconnection_LBL_remembereddevcie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="8dp"
            android:text=""
            android:textColor="#000000"
            android:textSize="18dp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#f5f5f5"
            android:orientation="horizontal"
            android:visibility="gone">

            <CheckBox
                android:id="@+id/customwisepadconnection_CHK_selectdevice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="2dp"
                android:text="@string/Paired_devices"
                android:textColor="#000000"
                android:textSize="18dp" />

            <Button
                android:id="@+id/customwisepadconnection_BTN_selectdevice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="2dp"
                android:text="@string/action_devices"
                android:textColor="#000000"
                android:textSize="18dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/customwisepadconnection_LBL_selecteddevice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="6dp"
            android:text=""
            android:textColor="#000000"
            android:textSize="18dp"
            android:visibility="gone" />

        <View
            android:layout_width="250dp"
            android:layout_height="0.3dp"
            android:layout_marginTop="10dp"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/customwisepadconnection_CHK_autoconnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="2dp"
            android:checked="true"
            android:text="@string/auto_connect"
            android:textColor="#000000"
            android:textSize="18dp" />

        <CheckBox
            android:id="@+id/customwisepadconnection_CHK_checkcard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="2dp"
            android:checked="true"
            android:text="@string/checkcard"
            android:textColor="#000000"
            android:textSize="18dp" />


        <Button
            android:id="@+id/customwisepadconnection_BTN_ok"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="6dp"
            android:background="#00a99d"
            android:text="@string/Ok"
            android:textSize="18dp" />
    </LinearLayout>


</LinearLayout>
