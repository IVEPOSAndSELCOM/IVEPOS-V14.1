<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="320dp"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent" android:gravity="center_vertical"
        android:layout_height="?android:attr/actionBarSize"
        android:background="#e6e6e6">
        <ImageButton
            android:id="@+id/btncancel"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/light_black_click"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/subscription_prompt_cancel"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#7f7f7f"
            android:layout_toRightOf="@+id/btncancel"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/search_selecteditem"
            android:layout_toLeftOf="@+id/btnsave"
            android:hint="@string/search"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/btncancel"
            android:textSize="15sp"
            style="@style/Widget.AppCompat.EditText"
            android:textStyle="bold"/>

        <ImageButton
            android:id="@+id/btnsave" android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_print_black_24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ok"
            android:textStyle="bold"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/submit"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#7f7f7f"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#e6e6e6">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp" >

            <TextView
                android:layout_width="wrap_content" android:id="@+id/items_pane"
                android:layout_height="wrap_content"
                android:text="@string/items"
                android:background="@drawable/green_click_shape_rounded_corners"
                android:padding="8dp"/>

            <TextView
                android:id="@+id/modifiers_pane" android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/green_click_shape_rounded_corners"
                android:padding="8dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/items_pane"
                android:text="@string/modifiers"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:elevation="2dp"
            android:orientation="vertical"
            android:background="@drawable/white_rounded_corners">

            <LinearLayout
                android:layout_width="wrap_content" android:visibility="gone"
                android:layout_height="wrap_content"
                android:padding="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_21"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/selected_items"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/nothing_sold"/>

                <ListView
                    android:layout_width="match_parent"
                    android:id="@+id/listview"
                    android:layout_height="wrap_content"
                    android:background="@color/white"/>

            </RelativeLayout>

