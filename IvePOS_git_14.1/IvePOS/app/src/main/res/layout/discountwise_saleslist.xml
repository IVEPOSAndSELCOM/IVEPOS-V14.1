                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_click_shape_left_rounded_corners"
                    android:elevation="2dp" android:layout_weight="@string/Button9"
                    android:layout_marginLeft="2dp" android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp" android:layout_marginRight="0.5dp"
                    android:id="@+id/relativeLayout">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/from"
                        style="@style/TextAppearance.Design.Hint"
                        android:layout_marginLeft="5dp"/>

                    <TextView
                        android:layout_width="match_parent" android:text="@string/hiiii"
                        android:background="@null" android:visibility="gone"
                        android:textColor="#000000" android:ellipsize="end"
                        android:paddingLeft="5dp" android:paddingRight="5dp"
                        android:paddingBottom="3dp" android:paddingTop="3dp"
                        android:maxLines="@string/Button9" android:textSize="15sp"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:id="@+id/editText1"/>
                    <!--<ImageView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:src="@drawable/ic_arrow_drop_down_black_18dp"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:layout_alignParentRight="true" />-->

                    <TextView
                        android:layout_width="match_parent" android:text="@string/_name"
                        android:textColor="#000000" android:ellipsize="end"
                        android:paddingLeft="5dp" android:paddingRight="5dp"
                        android:paddingBottom="3dp" android:paddingTop="13dp"
                        style="@style/Widget.AppCompat.Spinner"
                        android:maxLines="@string/Button9" android:textSize="15sp"
                        android:layout_height="40dp"
                        android:singleLine="true"
                        android:id="@+id/editText11"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_click_shape_right_rounded_corners"
                    android:elevation="2dp" android:layout_weight="@string/Button9"
                    android:layout_marginLeft="0.5dp" android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp" android:layout_marginRight="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/from" android:visibility="gone"
                        style="@style/TextAppearance.Design.Hint"
                        android:layout_marginLeft="5dp"/>

                    <TextView
                        android:layout_width="match_parent" android:text="@string/hiiii"
                        android:background="@null" android:visibility="gone"
                        android:textColor="#000000" android:ellipsize="end"
                        android:paddingLeft="5dp" android:paddingRight="5dp"
                        android:paddingBottom="3dp" android:paddingTop="3dp"
                        android:maxLines="@string/Button9" android:textSize="15sp"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:id="@+id/editText_from_day_hide"/>
                    <!--<ImageView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:src="@drawable/ic_arrow_drop_down_black_18dp"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:layout_alignParentRight="true" />-->

                    <TextView
                        android:layout_width="match_parent" android:text="@string/_name"
                        android:textColor="#000000" android:ellipsize="end"
                        android:paddingLeft="5dp" android:paddingRight="5dp"
                        android:paddingBottom="3dp" android:paddingTop="13dp"
                        style="@style/Widget.AppCompat.Spinner"
                        android:maxLines="@string/Button9" android:textSize="15sp"
                        android:layout_height="40dp"
                        android:singleLine="true"
                        android:id="@+id/editText_from_day_visible"/>

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1.4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp" android:orientation="horizontal"
                android:layout_marginRight="5dp"
                android:gravity="center">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_click_shape_left_rounded_corners"
                    android:elevation="2dp"
                    android:layout_marginLeft="2dp" android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp" android:layout_marginRight="0.5dp"
                    android:layout_weight="@string/Button9"
                    android:id="@+id/relativeLayout1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/To"
                        style="@style/TextAppearance.Design.Hint"
                        android:layout_marginLeft="5dp"/>

                    <TextView
                        android:layout_width="match_parent" android:text="@string/hiii" android:visibility="gone"
                        android:background="@null" android:gravity="center_vertical"
                        android:textColor="#000000" android:ellipsize="end"
                        android:paddingLeft="5dp" android:paddingRight="5dp"
                        android:paddingBottom="3dp" android:paddingTop="3dp"
                        android:maxLines="@string/Button9" android:textSize="15sp"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:id="@+id/editText2"/>
                    <!--<ImageView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:src="@drawable/ic_arrow_drop_down_black_18dp"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:layout_alignParentRight="true"/>-->

                    <TextView
                        android:layout_width="match_parent" android:text="@string/_name"
                        android:gravity="center_vertical"
                        android:textColor="#000000" android:ellipsize="end"
                        style="@style/Widget.AppCompat.Spinner"
                        android:paddingLeft="5dp" android:paddingRight="5dp"
                        android:paddingBottom="3dp" android:paddingTop="13dp"
                        android:maxLines="@string/Button9" android:textSize="15sp"
                        android:layout_height="40dp"
                        android:singleLine="true"
                        android:id="@+id/editText22"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_click_shape_right_rounded_corners"
                    android:elevation="2dp"
                    android:layout_weight="@string/Button9"
                    android:layout_marginLeft="0.5dp" android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp" android:layout_marginRight="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/To" android:visibility="gone"
                        style="@style/TextAppearance.Design.Hint"
                        android:layout_marginLeft="5dp"/>

                    <TextView
                        android:layout_width="match_parent" android:text="@string/hiii" android:visibility="gone"
                        android:background="@null" android:gravity="center_vertical"
                        android:textColor="#000000" android:ellipsize="end"
                        android:paddingLeft="5dp" android:paddingRight="5dp"
                        android:paddingBottom="3dp" android:paddingTop="3dp"
                        android:maxLines="@string/Button9" android:textSize="15sp"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:id="@+id/editText_to_day_hide"/>
                    <!--<ImageView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:src="@drawable/ic_arrow_drop_down_black_18dp"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:layout_alignParentRight="true"/>-->

                    <TextView
                        android:layout_width="match_parent" android:text="@string/_name"
                        android:gravity="center_vertical"
                        android:textColor="#000000" android:ellipsize="end"
                        style="@style/Widget.AppCompat.Spinner"
                        android:paddingLeft="5dp" android:paddingRight="5dp"
                        android:paddingBottom="3dp" android:paddingTop="13dp"
                        android:maxLines="@string/Button9" android:textSize="15sp"
                        android:layout_height="40dp"
                        android:singleLine="true"
                        android:id="@+id/editText_to_day_visible"/>

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:layout_width="0dp" android:id="@+id/okok"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="@string/go"
            android:textColor="#ffffff"
            android:textStyle="bold"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/MediumBlack"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e6e6e6"
            android:paddingTop="3dp" android:paddingBottom="3dp"
            android:paddingRight="5dp" android:paddingLeft="5dp">
            <LinearLayout
                android:id="@+id/total_discount."
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_marginLeft="5dp"
                android:background="#a3e0dc"
                android:paddingLeft="5dp" android:paddingRight="5dp"
                android:paddingTop="5dp" android:paddingBottom="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total_discount"
                    android:textSize="15sp" android:paddingRight="5dp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>
                <TextView
                    android:id="@+id/totaldiscount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:text="@string/Button13"
                    android:textColor="#000000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/total_discount.">
                <RelativeLayout
                    android:id="@+id/search_bar"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:orientation="horizontal"
                    android:background="@drawable/white_rounded_corners"
                    android:elevation="2dp"
                    android:layout_margin="2dp"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/search_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_search_black_24dp"
                        android:textSize="15sp"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        style="@style/ButtonText"/>
                    <EditText
                        android:id="@+id/searchView"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="#ffffff"
                        android:imeOptions="actionSearch"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/search_icon"
                        android:layout_toLeftOf="@+id/delete_icon"
                        android:hint="Search bill no/discount code"
                        android:paddingLeft="10dp" android:paddingRight="10dp"
                        android:paddingTop="5dp" android:paddingBottom="5dp"
                        android:textSize="15sp"
                        android:singleLine="true"/>
                    <ImageView
                        android:id="@+id/delete_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_clear_black_18dp"
                        android:background="@drawable/white_click"
                        android:clickable="true"
                        android:textSize="15sp"
                        android:paddingLeft="10dp" android:paddingRight="10dp"
                        android:paddingTop="5dp" android:paddingBottom="5dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:visibility="visible"
                        style="@style/ButtonText"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent" android:visibility="gone"
        android:layout_height="1dp"
        android:layout_below="@+id/header"
        android:background="#7f7f7f"
        android:id="@+id/septum"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="8.5"
            android:background="#7f7f7f">
<!--            <TextView-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_height="match_parent"-->
<!--                android:layout_weight="0.8"-->
<!--                android:paddingLeft="5dp" android:paddingRight="5dp"-->
<!--                android:paddingTop="8dp" android:paddingBottom="8dp"-->
<!--                android:gravity="start|center_vertical"-->
<!--                android:background="#e6e6e6"-->
<!--                android:text="@string/s_no_"-->
<!--                android:textStyle="bold"/>-->
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.1"
                android:paddingLeft="5dp" android:paddingRight="5dp"
                android:paddingTop="8dp" android:paddingBottom="8dp"
                android:gravity="start|center_vertical"
                android:background="#e6e6e6"
                android:text="@string/date"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:paddingLeft="5dp" android:paddingRight="5dp"
                android:paddingTop="8dp" android:paddingBottom="8dp"
                android:gravity="start|center_vertical"
                android:background="#e6e6e6"
                android:text="@string/time_title"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.8"
                android:paddingLeft="5dp" android:paddingRight="5dp"
                android:paddingTop="8dp" android:paddingBottom="8dp"
                android:gravity="start|center_vertical"
                android:background="#e6e6e6"
                android:text="@string/bill_no"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:paddingLeft="5dp" android:paddingRight="5dp"
                android:paddingTop="8dp" android:paddingBottom="8dp"
                android:gravity="start|center_vertical"
                android:background="#e6e6e6"
                android:text="@string/code"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="@string/Button9"
                android:paddingLeft="5dp" android:paddingRight="5dp"
                android:paddingTop="8dp" android:paddingBottom="8dp"
                android:gravity="start|center_vertical"
                android:background="#e6e6e6"
                android:text="@string/subtitle14"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.1"
                android:paddingLeft="5dp" android:paddingRight="5dp"
                android:paddingTop="8dp" android:paddingBottom="8dp"
                android:gravity="start|center_vertical"
                android:background="#e6e6e6"
                android:text="@string/sale"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="@string/Button9"
                android:paddingLeft="5dp" android:paddingRight="5dp"
                android:paddingTop="8dp" android:paddingBottom="8dp"
                android:gravity="start|center_vertical"
                android:background="#e6e6e6"
                android:text="@string/subtitle14"
                android:textStyle="bold"/>
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/MediumBlack"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:visibility="visible" android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent" android:text="" android:textSize="1sp"
            android:layout_height="wrap_content" />
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listView11"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="horizontal">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtTarget"
            android:layout_marginBottom="10dp"/>


        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spnModel"
            android:gravity="left"
            android:layout_marginBottom="5dp" />


        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spnLang"
            android:gravity="left"
            android:layout_marginBottom="10dp" />
    </LinearLayout>

</LinearLayout>