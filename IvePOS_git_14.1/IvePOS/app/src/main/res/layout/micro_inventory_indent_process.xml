<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/relativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#e6e6e6"
    xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#e6e6e6"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/closetext"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_vertical"
            android:background="?android:attr/selectableItemBackground"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:src="@drawable/ic_arrow_back_black_24dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/closetext"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_ro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_21"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ingredient_s"
                android:textColor="#000000"
                android:textSize="12sp" />
        </LinearLayout>


        <Button
            android:id="@+id/clear_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="right|center_vertical"
            android:layout_toLeftOf="@+id/quantitycontinue"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:src="@drawable/ic_delete_black_24dp"
            android:text="@string/clear_all"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/quantitycontinue"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/ok"
            android:text="@string/add"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:background="@drawable/white_rounded_corners"
        android:elevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <TextView
                android:id="@+id/Total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total"
                android:textStyle="bold"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/Total">
                <TextView
                    android:layout_width="wrap_content" android:layout_toLeftOf="@+id/total_amount"
                    android:layout_height="wrap_content" android:id="@+id/inn"
                    android:textStyle="bold"
                    android:text="@string/Rs"/>
                <TextView
                    android:layout_width="wrap_content" android:id="@+id/total_amount"
                    android:layout_height="wrap_content" android:layout_alignParentRight="true"
                    android:textStyle="bold"
                    android:text="@string/Button13"/>
            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <TextView
                android:id="@+id/bill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/DarkBlack"
                android:text="@string/bill_amount" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/bill">
                <TextView
                    android:layout_width="wrap_content" android:id="@+id/inn1"
                    android:layout_height="wrap_content" android:layout_toLeftOf="@+id/billamount"
                    android:textColor="@color/DarkBlack"
                    android:text="@string/Rs"/>
                <TextView
                    android:layout_width="wrap_content" android:id="@+id/billamount"
                    android:layout_height="wrap_content" android:layout_alignParentRight="true"
                    android:textColor="@color/DarkBlack"
                    android:text="@string/_9999"/>
            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent" android:id="@+id/tax_layout"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:background="?android:attr/selectableItemBackground">

            <LinearLayout
                android:id="@+id/tax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/DarkBlack"
                    android:text="@string/_tax"/>

                <TextView
                    android:id="@+id/percent_tax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/DarkBlack"
                    android:text="@string/Button13"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/DarkBlack"
                    android:text="%)"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/tax">
                <TextView
                    android:layout_width="wrap_content" android:id="@+id/inn2"
                    android:layout_height="wrap_content" android:layout_toLeftOf="@+id/amount_tax"
                    android:textColor="@color/DarkBlack"
                    android:text="@string/Rs"/>
                <TextView
                    android:layout_width="wrap_content" android:id="@+id/amount_tax"
                    android:layout_height="wrap_content" android:layout_alignParentRight="true"
                    android:textColor="@color/DarkBlack"
                    android:text="@string/Button13"/>
            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent" android:id="@+id/discount_layout"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:background="?android:attr/selectableItemBackground">

            <LinearLayout
                android:id="@+id/discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/DarkBlack"
                    android:text="@string/disc_adj"/>

                <TextView
                    android:id="@+id/percent_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/DarkBlack"
                    android:text="@string/Button13"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/DarkBlack"
                    android:text="%)"/>

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/discount">
                <TextView
                    android:layout_width="wrap_content" android:layout_toLeftOf="@+id/amount_discount"
                    android:layout_height="wrap_content" android:id="@+id/inn3"
                    android:textColor="@color/DarkBlack"
                    android:text="@string/Rs"/>
                <TextView
                    android:layout_width="wrap_content" android:id="@+id/amount_discount"
                    android:layout_height="wrap_content" android:layout_alignParentRight="true"
                    android:textColor="@color/DarkBlack"
                    android:text="@string/Button13"/>
            </RelativeLayout>


        </RelativeLayout>


        <!--<ImageView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:background="@color/MediumBlack"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/LightBlack"
            android:orientation="vertical">

            <ListView
                android:layout_width="match_parent" android:id="@+id/items_list"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

