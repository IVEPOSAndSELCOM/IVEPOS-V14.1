<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/relativeLayout1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="#e6e6e6"
    xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical">


    <RelativeLayout
        android:layout_width="320dp" android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:background="#e6e6e6"
        android:layout_marginBottom="5dp">

        <ImageButton
            android:id="@+id/btncancel"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/light_black_click"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/subscription_prompt_cancel"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/title16"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/btncancel"
            android:layout_toLeftOf="@+id/refill"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <RelativeLayout
            android:layout_width="match_parent" android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/btncancel" android:id="@+id/header"
            android:layout_toLeftOf="@+id/refill"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="wrap_content"
                android:id="@+id/btndelete"
                android:layout_toLeftOf="@+id/btnsave"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:text="@string/delete"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textStyle="bold"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/btnsave"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:src="@drawable/ic_done_black_24dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ok"
                android:textStyle="bold"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="@string/save"/>
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0px"
        android:layout_height="0px" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:isScrollContainer="false"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="wrap_content" android:id="@+id/add_item"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:visibility="visible">
            <LinearLayout
                android:layout_width="match_parent" android:layout_toLeftOf="@+id/line"
                android:layout_height="match_parent" android:id="@+id/closeadd"
                android:layout_alignParentLeft="true" android:orientation="horizontal"/>

            <ImageView
                android:layout_width="1dp" android:id="@+id/line"
                android:layout_height="match_parent" android:layout_toLeftOf="@+id/relativeLayout2"
                android:background="#7f7f7f"/>
            <LinearLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="320dp"
                android:layout_height="match_parent"
                android:background="#e6e6e6"
                android:orientation="vertical"
                android:layout_alignParentRight="true">


                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">



                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical">

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/dialog_layout_expensename"
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent">

                                    <EditText
                                        android:layout_width="match_parent"
                                        android:id="@+id/dialog_editText_expense_name"
                                        android:selectAllOnFocus="true"
                                        android:hint="@string/expense_name"
                                        android:textSize="15sp"
                                        android:nextFocusDown="@id/editText2"
                                        android:layout_height="wrap_content"
                                        android:singleLine="true"/>

                                </com.google.android.material.textfield.TextInputLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <com.google.android.material.textfield.TextInputLayout
                                        android:id="@+id/dialog_layout_expenseprice"
                                        android:layout_height="wrap_content"
                                        android:layout_width="match_parent"
                                        android:layout_weight="@string/Button9">

                                        <EditText
                                            android:layout_width="match_parent"
                                            android:id="@+id/dialog_editText_expense_price"
                                            android:hint="@string/price_star"
                                            android:textSize="15sp"
                                            android:selectAllOnFocus="true"
                                            android:inputType="numberDecimal"
                                            android:nextFocusDown="@id/editText3"
                                            android:layout_height="wrap_content"
                                            android:singleLine="true" />

                                    </com.google.android.material.textfield.TextInputLayout>

                                </LinearLayout>

                            </LinearLayout>

                        </RelativeLayout>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_weight="@string/Button9"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:paddingLeft="4dp"
                                    android:textColor="#000000"
                                    android:hint="@string/action_category"
                                    android:textSize="12sp"
                                    android:layout_height="wrap_content"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:orientation="horizontal"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/click">
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:textColor="#000000"
                                            android:ellipsize="end"
                                            android:maxLines="@string/Button9"
                                            android:textSize="15sp"
                                            android:layout_height="wrap_content"
                                            style="@style/Widget.AppCompat.Spinner.Underlined"
                                            android:id="@+id/chocolate_spinner"/>

                                    </LinearLayout>
                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_weight="@string/Button9"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:paddingLeft="4dp"
                                    android:textColor="#000000"
                                    android:hint="@string/action_user"
                                    android:textSize="12sp"
                                    android:layout_height="wrap_content"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:orientation="horizontal"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/click_username">
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:textColor="#000000"
                                            android:ellipsize="end"
                                            android:maxLines="@string/Button9"
                                            android:textSize="15sp"
                                            android:layout_height="wrap_content"
                                            style="@style/Widget.AppCompat.Spinner.Underlined"
                                            android:id="@+id/user_spinner"/>

                                    </LinearLayout>
                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:id="@+id/relativeLayout3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:layout_marginLeft="2dp"
                                android:layout_marginRight="0.5dp"
                                android:layout_marginTop="2dp"
                                android:layout_weight="0.9"
                                android:background="@drawable/white_click_shape_left_rounded_corners"
                                android:elevation="2dp">

                                <TextView
                                    style="@style/TextAppearance.Design.Hint"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:text="@string/from" />

                                <TextView
                                    android:id="@+id/editText1_dialog"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@null"
                                    android:ellipsize="end"
                                    android:maxLines="@string/Button9"
                                    android:paddingBottom="3dp"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"
                                    android:paddingTop="3dp"
                                    android:singleLine="true"
                                    android:text="@string/hiiii"
                                    android:textColor="#000000"
                                    android:textSize="15sp"
                                    android:visibility="gone" />
                                <!--<ImageView-->
                                <!--android:layout_width="wrap_content"-->
                                <!--android:layout_height="wrap_content"-->
                                <!--android:src="@drawable/ic_arrow_drop_down_black_18dp"-->
                                <!--android:layout_centerVertical="true"-->
                                <!--android:layout_alignParentRight="true" />-->

                                <TextView
                                    android:id="@+id/editText11_dialog"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:background="?android:attr/selectableItemBackground"
                                    android:ellipsize="end"
                                    android:gravity="center_vertical"
                                    android:maxLines="@string/Button9"
                                    android:paddingBottom="3dp"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"
                                    android:paddingTop="13dp"
                                    android:singleLine="true"
                                    android:text="@string/_name"
                                    android:textColor="#000000"
                                    android:textSize="12sp" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:layout_marginLeft="0.5dp"
                                android:layout_marginRight="2dp"
                                android:layout_marginTop="2dp"
                                android:layout_weight="1.1"
                                android:background="@drawable/white_click_shape_right_rounded_corners"
                                android:elevation="2dp">

                                <TextView
                                    style="@style/TextAppearance.Design.Hint"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:hint="@string/from"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/editText_from_day_hide_dialog"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@null"
                                    android:ellipsize="end"
                                    android:maxLines="@string/Button9"
                                    android:paddingBottom="3dp"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"
                                    android:paddingTop="3dp"
                                    android:singleLine="true"
                                    android:text="@string/hiiii"
                                    android:textColor="#000000"
                                    android:textSize="15sp"
                                    android:visibility="gone" />
                                <!--<ImageView-->
                                <!--android:layout_width="wrap_content"-->
                                <!--android:layout_height="wrap_content"-->
                                <!--android:src="@drawable/ic_arrow_drop_down_black_18dp"-->
                                <!--android:layout_centerVertical="true"-->
                                <!--android:layout_alignParentRight="true" />-->

                                <TextView
                                    android:id="@+id/editText_from_day_visible_dialog"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:background="?android:attr/selectableItemBackground"
                                    android:ellipsize="end"
                                    android:gravity="center_vertical"
                                    android:maxLines="@string/Button9"
                                    android:paddingBottom="3dp"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"
                                    android:paddingTop="13dp"
                                    android:singleLine="true"
                                    android:text="@string/_name"
                                    android:textColor="#000000"
                                    android:textSize="12sp" />

                            </RelativeLayout>
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <CheckBox
                                android:id="@+id/mySwitch" android:visibility="gone"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_width="wrap_content"
                                android:textColor="#000000"
                                android:layout_height="wrap_content"
                                android:text="@string/favourite"
                                android:drawablePadding="5dp"
                                android:button="@null"
                                android:layout_gravity="end"
                                android:drawableRight="?android:attr/listChoiceIndicatorMultiple" />

                        </RelativeLayout>

                    </LinearLayout>
                </ScrollView>

            </LinearLayout>
        </RelativeLayout>

    </ScrollView>

</LinearLayout>