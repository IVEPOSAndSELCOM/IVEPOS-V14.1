<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/relativeLayout1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="#e6e6e6"
    xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical">

    <RelativeLayout
        android:layout_width="320dp" android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:background="#e6e6e6"
        android:layout_marginBottom="5dp">

        <ImageButton
            android:id="@+id/btncancel"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/light_black_click"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/subscription_prompt_cancel"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/title16"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/btncancel"
            android:layout_toLeftOf="@+id/btndelete"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <Button
            android:layout_width="wrap_content"
            android:id="@+id/btndelete"
            android:layout_toLeftOf="@+id/btnsave"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:text="@string/delete"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textStyle="bold"
            android:textColor="#ffffff" />

        <ImageButton
            android:id="@+id/btnsave"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ok"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:src="@drawable/ic_done_black_24dp"
            android:text="@string/submit"
            android:textStyle="bold" />

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:isScrollContainer="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent" android:orientation="vertical"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp" android:paddingRight="10dp"
                android:paddingBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent" android:orientation="vertical"
                    android:layout_height="wrap_content" android:gravity="center_vertical"
                    android:layout_marginTop="5dp">

                    <LinearLayout android:focusable="true"
                        android:focusableInTouchMode="true" android:layout_width="0px"
                        android:layout_height="0px" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent" android:id="@+id/editText1_t_edit"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <EditText
                            android:layout_width="match_parent"
                            android:id="@+id/editText1_edit"
                            android:nextFocusDown="@+id/editText_barcode_edit" android:focusable="true"
                            android:layout_height="wrap_content" android:singleLine="true"
                            android:hint="@string/ingredient_name"
                            android:textSize="15sp"
                            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890_-()@. "/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <EditText
                            android:layout_width="match_parent"
                            android:id="@+id/editText_barcode_edit"
                            android:nextFocusDown="@+id/editText2_edit" android:focusable="true"
                            android:layout_height="wrap_content" android:singleLine="true"
                            android:hint="Barcode/id no."
                            android:textSize="15sp"
                            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890_-()@. "/>

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:hint="Requirement*"
                        android:layout_marginLeft="4dp"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent" android:id="@+id/editText2_t_edit"
                            android:layout_height="wrap_content"
                            android:layout_weight="@string/Button9"
                            android:layout_marginRight="5dp">
                            <!--<TextView-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:text="Min."-->
                            <!--android:textStyle="bold"/>-->
                            <EditText
                                android:layout_width="match_parent" android:inputType="numberDecimal"
                                android:id="@+id/editText2_edit"
                                android:nextFocusDown="@+id/editText4_edit" android:focusable="true"
                                android:layout_height="wrap_content" android:singleLine="true"
                                android:hint="Min"
                                android:textSize="15sp"/>

                        </com.google.android.material.textfield.TextInputLayout>


                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent" android:id="@+id/editText4_t_edit"
                            android:layout_height="wrap_content"
                            android:layout_weight="@string/Button9"
                            android:layout_marginLeft="5dp">
                            <!--<TextView-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:text="@string/max_"-->
                            <!--android:textStyle="bold"/>-->
                            <EditText
                                android:layout_width="match_parent" android:inputType="numberDecimal"
                                android:id="@+id/editText4_edit"
                                android:focusable="true"
                                android:layout_height="wrap_content" android:singleLine="true"
                                android:hint="Max"
                                android:textSize="15sp"/>

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="bottom">

                    <!--<android.support.design.widget.TextInputLayout-->
                    <!--android:layout_width="match_parent" android:id="@+id/editText5_t_edit"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:gravity="center_vertical"-->
                    <!--android:layout_weight="@string/Button9">-->

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="@string/Button9">
                        <!--<TextView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="@string/max_"-->
                        <!--android:textStyle="bold"/>-->
                        <EditText
                            android:layout_width="match_parent" android:inputType="numberDecimal"
                            android:id="@+id/editText5_edit"
                            android:focusable="true"
                            android:layout_height="wrap_content" android:singleLine="true"
                            android:hint="@string/current_stock"
                            android:textSize="15sp"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <!--</android.support.design.widget.TextInputLayout>-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="@string/Button9"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="@string/unit"
                            android:layout_marginLeft="4dp" />

                        <Spinner
                            android:id="@+id/unit_selection"
                            android:entries="@array/unit_type"
                            android:prompt="@string/choose_unit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/Widget.AppCompat.Spinner.Underlined"/>

                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_toLeftOf="@+id/item_usage"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:textColor="#000000"
                            android:hint="Items used"
                            android:layout_marginLeft="4dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical" />

                        <TextView
                            android:layout_width="match_parent"
                            android:textColor="#000000"
                            android:id="@+id/item_used_value"
                            android:layout_marginLeft="4dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="@string/_12"
                            android:textSize="15sp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:inputType="numberDecimal" />
                    </LinearLayout>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="true"
                        android:id="@+id/item_usage"
                        android:background="@drawable/light_black_click_shape_rounded_corners"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content"
                        android:text="@string/usage"
                        android:textStyle="bold" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="@string/Button9"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="24dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_marginLeft="4dp"
                            android:layout_toLeftOf="@+id/unit_price_value">

                            <TextView
                                android:hint="@string/avg_unit_price"
                                android:textColor="#000000"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"/>

                            <TextView
                                android:hint="("
                                android:textColor="#000000"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"/>

                            <TextView
                                android:hint="@string/Rs" android:id="@+id/inn"
                                android:textColor="#000000"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"/>

                            <TextView
                                android:hint=")"
                                android:textColor="#000000"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"/>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/unit_price_value1"
                            android:layout_width="wrap_content"
                            android:text="@string/_195"
                            android:layout_marginLeft="4dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:textColor="#000000"
                            android:layout_height="wrap_content"  />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="@string/Button9"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="4dp"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/unit_price_value">

                            <TextView
                                android:hint="Current requirement"
                                android:textColor="#000000"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"/>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/im_req_fill"
                                    android:visibility="gone"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/ic_failure_red_32dp"/>

                                <ImageView
                                    android:id="@+id/im_req_ok"
                                    android:visibility="visible"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/ic_success_green_32dp"/>

                            </RelativeLayout>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/unit_price_value"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:text="@string/Button5"
                            android:textSize="15sp"
                            android:layout_marginLeft="4dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:textColor="#000000"
                            android:layout_height="wrap_content"  />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent" android:orientation="vertical"
                    android:layout_marginTop="5dp" android:visibility="gone"
                    android:background="@drawable/light_black_click_shape_rounded_corners"
                    android:elevation="3dp"
                    android:padding="3dp"
                    android:layout_height="wrap_content" android:gravity="center">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="@string/Button9"
                            android:text="@string/opt"
                            android:visibility="invisible"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:padding="3dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="@string/Button9"
                            android:text="@string/mon"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:padding="3dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="@string/Button9"
                            android:text="@string/tue"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:padding="3dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="@string/Button9"
                            android:text="@string/wed"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:padding="3dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="@string/Button9"
                            android:text="@string/thu"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:padding="3dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="@string/Button9"
                            android:text="@string/fri"
                            android:textColor="#00a99d"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:padding="3dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="@string/Button9"
                            android:text="@string/sat"
                            android:textColor="#00a99d"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:padding="3dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="@string/Button9"
                            android:text="@string/sun"
                            android:textColor="#00a99d"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:padding="3dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="@string/Button9">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="@string/Button9"
                                android:text="@string/opt"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textSize="12sp"
                                android:padding="3dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="@string/Button9"
                                android:text="@string/max_"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textSize="12sp"
                                android:padding="3dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="@string/Button9">
                            <RadioGroup
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <RadioButton
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>

                                <RadioButton
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>

                            </RadioGroup>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="@string/Button9">
                            <RadioGroup
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <RadioButton
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>

                                <RadioButton
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>

                            </RadioGroup>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="@string/Button9">
                            <RadioGroup
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <RadioButton
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>

                                <RadioButton
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>

                            </RadioGroup>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="@string/Button9">
                            <RadioGroup
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <RadioButton
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>

                                <RadioButton
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>

                            </RadioGroup>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="@string/Button9">
                            <RadioGroup
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <RadioButton
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>

                                <RadioButton
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>

                            </RadioGroup>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="@string/Button9">
                            <RadioGroup
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <RadioButton
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>

                                <RadioButton
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>

                            </RadioGroup>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="@string/Button9">
                            <RadioGroup
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <RadioButton
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>

                                <RadioButton
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>

                            </RadioGroup>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>

            <Button
                android:layout_width="match_parent" android:textColor="#ffffff" android:visibility="gone"
                android:layout_height="wrap_content"
                android:text="@string/delete"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>