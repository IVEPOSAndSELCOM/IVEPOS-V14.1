<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:msreceipt="http://schemas.android.com/apk/res-auto"
android:id="@+id/login_REL_content"
android:layout_width="wrap_content"
android:layout_height="wrap_content">

<include
    android:id="@+id/topbar"
    layout="@layout/top_bar" />

<RelativeLayout
    android:id="@+id/action"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    android:background="@color/white"
    android:elevation="3dp">

    <ImageView
        android:id="@+id/leftarrow"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:visibility="invisible"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/ic_arrow_back_black_24dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/manual"
        android:layout_toRightOf="@+id/leftarrow"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:orientation="vertical">

        <TextView
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/card_pay"
            android:textSize="18sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
            android:text="@string/mSwipe" />
    </LinearLayout>


    <TextView
        android:id="@+id/done1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:minWidth="80dp"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:onClick="signUp1"
        android:padding="12dp"
        android:text="@string/close_sale"
        android:visibility="invisible"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:textColor="@color/ColorAccentDark"
        android:textStyle="bold" />

</RelativeLayout>

<RelativeLayout
    android:layout_width="450dp"
    android:layout_height="fill_parent"
    android:layout_above="@+id/creditsale_RLT_print"
    android:layout_below="@+id/action"
    android:layout_centerHorizontal="true"
    android:keepScreenOn="true">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_normal"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/creditsale_IMG_approved"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/margin_very_small"
                        android:background="@drawable/approved"
                        android:clickable="false" />


                    <!--android:text="@string/creditsale_singnatureview_transaction_approved"-->
                    <com.intuition.selcom.mSwipe.CustomTextViewRegular
                        android:id="@+id/creditsale_TXT_approved"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/creditsale_singnatureview_transaction_approved"
                        android:textColor="@color/green"
                        android:textSize="@dimen/label_font_very_large"
                        android:typeface="sans" />
                </LinearLayout>

                <com.intuition.selcom.mSwipe.CustomTextView
                    android:id="@+id/creditsale_TXT_removecard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:text="@string/creditsale_singnatureview_please_remove_the_card"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/label_font_medium" />


            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/divider_height_normal"
                android:background="@color/light_grey" />

            <RelativeLayout
                android:id="@+id/creditsale_REL_redceiptdetails"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_normal"
                android:orientation="vertical">


                <com.mswipetech.wisepad.sdk.component.CardSaleReceiptView
                    android:id="@+id/cardsalereceiptview_CSRV_receipt"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/sign_content_view_height" />

                <ImageButton
                    android:id="@+id/creditsale_BTN_clearr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin_normal"
                    android:visibility="invisible"
                    android:layout_marginTop="@dimen/sign_clear_top_margin"
                    android:background="@drawable/clear"
                    android:gravity="center"
                    android:scaleType="fitXY" />

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:id="@+id/details"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/transaction_id"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/a"
                        android:id="@+id/txnid"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/card_type"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/b"
                        android:id="@+id/card_type"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/transaction_amount"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/c"
                        android:id="@+id/txnamt"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/card_number"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/d"
                        android:id="@+id/cardno"/>
                </LinearLayout>


                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="e"-->
                <!--android:id="@+id/appln_name"/>-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rrn"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/f"
                        android:id="@+id/rrn"/>
                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_normal"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <Button
                    android:id="@+id/creditsale_BTN_clear"
                    android:layout_width="fill_parent"
                    android:layout_height="42dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="@string/Button9"
                    android:gravity="center"
                    android:text="@string/creditsale_singnatureview_clear"
                    android:textSize="20dp"
                    android:typeface="sans"
                    android:visibility="gone" />
                <!--<Button-->
                <!--android:id="@+id/done"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="60dp"-->
                <!--android:layout_alignParentLeft="true"-->
                <!--android:layout_weight="@string/Button9"-->
                <!--android:background="@drawable/red_click"-->
                <!--android:text="@string/close_sale"-->
                <!--android:textColor="#ffffff"-->
                <!--android:textSize="18sp"-->
                <!--android:textStyle="bold" />-->

                <ImageButton
                    android:id="@+id/creditsale_BTN_submitsignature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:visibility="gone"
                    android:background="@drawable/button_next_active"
                    android:enabled="false" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>



<RelativeLayout
    android:id="@+id/creditsale_RLT_print"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:clickable="true">


    <RelativeLayout
        android:id="@+id/creditsale_REL_print_action"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/margin_small"
        android:orientation="horizontal"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height_normal"
            android:background="@color/light_grey" />

        <ImageView
            android:id="@+id/creditsale_IMG_print"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_small"
            android:src="@drawable/print_receipt"
            android:clickable="false"
            />

        <com.intuition.selcom.mSwipe.CustomTextView
            android:id="@+id/creditsale_LBL_print"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/creditsale_IMG_print"
            android:clickable="false"
            android:paddingLeft="5dp"
            android:text="@string/creditsale_singnatureview_print"
            android:textColor="@color/grey"
            android:textSize="@dimen/label_font" />
    </RelativeLayout>

</RelativeLayout>

<LinearLayout
    android:id="@+id/done"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:layout_alignParentBottom="true"
    android:visibility="invisible"
    android:background="@color/ColorAccent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/payText"
        android:gravity="center"
        android:background="?android:attr/selectableItemBackground"
        android:text="@string/close_sale"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textColor="@color/white"/>

</LinearLayout>



</RelativeLayout>