<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="380dp"
    android:layout_height="wrap_content"
    android:background="#e6e6e6"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="#ffffff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/amount_tendered"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="15sp"
            android:textStyle="bold"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/amount_currency"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:text="@string/insert"
                android:textStyle="bold"
                android:textColor="#000000"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"/>
            <EditText
                android:layout_width="match_parent"
                android:id="@+id/amount"
                android:layout_height="match_parent"
                android:digits="@string/filter_amex_pin"
                android:layout_toLeftOf="@+id/tender"
                android:layout_toRightOf="@+id/amount_currency"
                android:layout_centerVertical="true"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:textSize="18sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:selectAllOnFocus="true"
                android:layout_margin="2dp"
                android:background="@drawable/light_black_click_shape_rounded_corners"
                android:elevation="2dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:hint="@string/error77"/>

            <Button
                android:layout_width="wrap_content"
                android:id="@+id/tender"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:text="@string/exact"
                android:visibility="visible"
                android:textStyle="bold" />

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="4dp">
        <TextView
            android:layout_width="wrap_content" android:id="@+id/duetext"
            android:layout_height="wrap_content"
            android:text="@string/due"
            android:textColor="#da4336"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/insert" android:id="@+id/rupeesym"
            android:textColor="#da4336"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dueamount"
            android:textColor="#da4336"
            android:textSize="15sp"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <Button
            android:layout_width="match_parent" android:id="@+id/button1"
            android:layout_height="66.5dp"
            android:layout_weight="@string/Button9"
            android:text="@string/Button9"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="1dp"/>
        <Button
            android:layout_width="match_parent" android:id="@+id/button2"
            android:layout_height="66.5dp"
            android:layout_weight="@string/Button9"
            android:text="@string/Button10"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"/>
        <Button
            android:layout_width="match_parent" android:id="@+id/button5"
            android:layout_height="66.5dp"
            android:layout_weight="@string/Button9"
            android:text="@string/Button6"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"/>
        <Button
            android:layout_width="match_parent" android:id="@+id/button10"
            android:layout_height="66.5dp"
            android:layout_weight="@string/Button9"
            android:text="@string/_10"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp" />
        <Button
            android:layout_width="match_parent" android:id="@+id/button20"
            android:layout_height="66.5dp"
            android:layout_weight="@string/Button9"
            android:text="@string/_20"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp" />
        <Button
            android:layout_width="match_parent" android:id="@+id/button50"
            android:layout_height="66.5dp"
            android:layout_weight="@string/Button9"
            android:text="@string/_50"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="0dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="@string/Button7"
        android:gravity="center"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="0dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp" android:id="@+id/button100"
            android:layout_height="66.5dp"
            android:layout_weight="@string/Button9"
            android:text="@string/_100"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="1dp" />
        <Button
            android:layout_width="0dp" android:id="@+id/button500"
            android:layout_height="66.5dp"
            android:layout_weight="@string/Button9"
            android:text="@string/_500"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp" />
        <Button
            android:layout_width="0dp" android:id="@+id/button1000"
            android:layout_height="66.5dp"
            android:layout_weight="@string/Button9"
            android:text="@string/_2000"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp" />


        <Button
            android:layout_width="0dp" android:id="@+id/button26cash"
            android:layout_height="66dp"
            android:layout_weight="2.69"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="6dp"
            android:text="@string/done"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:drawableLeft="@drawable/ic_done_white_24dp"
            android:paddingLeft="10dp"
            android:textColor="#ffffff"
            android:background="@drawable/red_click"/>
    </LinearLayout>
</LinearLayout>
