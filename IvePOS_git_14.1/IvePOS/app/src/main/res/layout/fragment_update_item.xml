<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/relativeLayout1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="#e6e6e6"
    xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical">


    <RelativeLayout
        android:layout_width="320dp" android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:background="#e6e6e6"
        android:layout_marginBottom="5dp">

        <ImageButton
            android:id="@+id/btncancel"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/light_black_click"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/subscription_prompt_cancel"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/title16"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/btncancel"
            android:layout_toLeftOf="@+id/refill"
            android:textSize="18sp"
            android:textStyle="bold"/>

            <RelativeLayout
                android:layout_width="match_parent" android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/btncancel" android:id="@+id/header"
                android:layout_toLeftOf="@+id/refill"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="wrap_content"
                    android:id="@+id/btndelete"
                    android:layout_toLeftOf="@+id/btnsave"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:text="@string/delete"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff" />

                <Button
                    android:id="@+id/btnsave"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_done_black_24dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ok"
                    android:textStyle="bold"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="@string/save"/>
            </RelativeLayout>

    </RelativeLayout>

    <LinearLayout android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0px"
        android:layout_height="0px" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:isScrollContainer="false"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent" android:orientation="vertical"
            android:layout_height="wrap_content" android:gravity="center_vertical"
            android:paddingLeft="15dp" android:paddingRight="15dp"
            android:paddingBottom="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="6dp"
            android:layout_centerInParent="true"
            android:id="@+id/progressbar"
            android:visibility="gone">

            <!--<ProgressBar-->
            <!--android:id="@+id/circle"-->
            <!--style="?android:attr/progressBarStyleLarge"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentTop="true"-->
            <!--android:layout_centerHorizontal="true" />-->

            <ProgressBar
                android:layout_width="wrap_content" android:visibility="visible"
                android:layout_height="wrap_content" android:id="@+id/circle"
                android:layout_below="@+id/imageView"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="10dp"
            android:id="@+id/content"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/image_click">
                    <TextView
                        android:layout_width="48dp"
                        android:text="II"
                        android:id="@+id/imagetext"
                        android:layout_height="48dp"
                        android:visibility="invisible"
                        android:gravity="center"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_margin="5dp"
                        android:background="@drawable/light_black_click_shape_circle"
                        android:elevation="2dp"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="48dp"
                        android:textColor="#000000"
                        android:src="@drawable/assign_image_11695"
                        android:layout_height="48dp"
                        android:textSize="15sp"
                        android:layout_margin="5dp"
                        android:id="@+id/get_image"
                        android:background="@drawable/white_click_shape_circle"
                        android:elevation="2dp"
                        android:visibility="invisible"/>

                    <Button
                        android:layout_width="48dp"
                        android:layout_height="24dp"
                        android:text="@string/remove"
                        android:textSize="12sp"
                        android:layout_margin="5dp"
                        style="@android:style/Widget.DeviceDefault.TextView"
                        android:background="@drawable/light_black_click"
                        android:layout_below="@+id/imagetext"
                        android:id="@+id/btnremovelogo"
                        android:textColor="#da4336"
                        android:textStyle="bold"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/image_click"
                    android:gravity="center_vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_itemname"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">

                        <EditText
                            android:layout_width="match_parent"
                            android:id="@+id/editText1"
                            android:selectAllOnFocus="true"
                            android:hint="@string/item_name_star"
                            android:textSize="15sp"
                            android:nextFocusDown="@id/editText2"
                            android:layout_height="wrap_content"
                            android:inputType="textNoSuggestions"
                            android:singleLine="true"
                            android:digits="abcdefghijklmnopqrstuvwxyz1234567890+-_:/@?*ABCDEFGHIJKLMNOPQRSTUVWXYZ. "/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/layout_price"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_weight="@string/Button9">

                            <EditText
                                android:layout_width="match_parent"
                                android:id="@+id/editText2"
                                android:hint="@string/price_star"
                                android:textSize="15sp"
                                android:selectAllOnFocus="true"
                                android:inputType="numberDecimal"
                                android:nextFocusDown="@id/editText3"
                                android:layout_height="wrap_content"
                                android:singleLine="true" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_weight="@string/Button9">

                            <EditText
                                android:layout_width="match_parent"
                                android:id="@+id/editText3"
                                android:hint="@string/quantity"
                                android:textSize="15sp"
                                android:inputType="numberDecimal"
                                android:selectAllOnFocus="true"
                                android:nextFocusDown="@id/barcodenum"
                                android:layout_height="wrap_content"
                                android:singleLine="true" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent" android:id="@+id/barr"
                android:layout_height="wrap_content" android:visibility="visible">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_height="wrap_content" android:id="@+id/layout_barcode"
                    android:layout_width="match_parent"
                    android:layout_toLeftOf="@+id/barcode_print">

                    <EditText
                        android:layout_width="match_parent"
                        android:id="@+id/barcodenum"
                        android:hint="@string/barcode_no"
                        android:textSize="15sp"
                        android:selectAllOnFocus="true"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:nextFocusDown="@id/discountvalue1"
                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890*_-()@.$/+% "/>

                </com.google.android.material.textfield.TextInputLayout>

                <ImageButton
                    android:id="@+id/barcode_print"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_margin="2dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_print_black_24dp"
                    android:elevation="2dp"
                    android:background="@drawable/light_black_click_shape_rounded_corners"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:visibility="gone">

                <!--<android.support.design.widget.TextInputLayout-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_toLeftOf="@+id/barcode_printtv">-->
                <LinearLayout
                    android:layout_width="match_parent" android:orientation="vertical"
                    android:layout_toLeftOf="@+id/barcode_printtv"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:paddingLeft="4dp"
                        android:paddingBottom="4dp"
                        android:textColor="#000000"
                        android:hint="@string/barcode_no"
                        android:textSize="12sp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_centerVertical="true"
                        android:hint="@string/barcode_no"
                        android:textSize="15sp"
                        android:paddingBottom="4dp"
                        android:paddingLeft="4dp"
                        android:selectAllOnFocus="true"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:nextFocusDown="@id/discountvalue1"/>
                </LinearLayout>

                <!--</android.support.design.widget.TextInputLayout>-->

                <ImageButton
                    android:id="@+id/barcode_printtv"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_margin="2dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_print_black_24dp"
                    android:elevation="2dp"
                    android:background="@drawable/light_black_click_shape_rounded_corners"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:weightSum="@string/Button5">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_discount"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="@string/Button11">
                    <EditText
                        android:layout_width="match_parent"
                        android:textColor="#000000"
                        android:selectAllOnFocus="true"
                        android:id="@+id/discountvalue1"
                        android:hint="@string/subtitle14"
                        android:textSize="15sp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:inputType="numberDecimal" />
                </com.google.android.material.textfield.TextInputLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="@string/Button9"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:gravity="bottom">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Spinner
                            android:id="@+id/rspercent1"
                            android:entries="@array/discount_type"
                            android:prompt="@string/choose_discount"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:paddingLeft="0dp" android:paddingRight="0dp"
                            android:paddingBottom="5dp" android:paddingTop="6dp"
                            android:textColor="#000000" android:ellipsize="end"
                            android:maxLines="@string/Button9"
                            android:layout_height="wrap_content"
                            android:text="%"
                            style="@style/Widget.AppCompat.Spinner.Underlined"/>

                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="@string/Button9"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:paddingLeft="4dp"
                        android:textColor="#000000"
                        android:hint="@string/action_category"
                        android:textSize="12sp"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content"
                            android:id="@+id/click">
                            <TextView
                                android:layout_width="match_parent"
                                android:textColor="#000000"
                                android:ellipsize="end"
                                android:maxLines="@string/Button9"
                                android:textSize="15sp"
                                android:layout_height="wrap_content"
                                style="@style/Widget.AppCompat.Spinner.Underlined"
                                android:id="@+id/chocolate_spinner"/>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="@string/Button9"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:paddingLeft="4dp"
                        android:textColor="#000000"
                        android:hint="@string/item_tax"
                        android:textSize="12sp"
                        android:layout_height="wrap_content" />
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content"
                            android:id="@+id/clicktax">

                            <TextView
                                android:layout_width="match_parent"
                                android:textColor="#000000"
                                android:ellipsize="end"
                                android:maxLines="@string/Button9"
                                android:textSize="15sp"
                                android:layout_height="wrap_content"
                                android:id="@+id/tax"
                                style="@style/Widget.AppCompat.Spinner.Underlined"/>

                        </LinearLayout>
                    </FrameLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_weight="@string/Button9"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:paddingLeft="4dp"
                    android:textColor="#000000"
                    android:hint="@string/variants"
                    android:textSize="12sp"
                    android:layout_height="wrap_content" />
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:id="@+id/click_variants">
                        <TextView
                            android:layout_width="match_parent"
                            android:textColor="#000000"
                            android:ellipsize="end"
                            android:maxLines="@string/Button9"
                            android:textSize="15sp"
                            android:layout_height="wrap_content"
                            style="@style/Widget.AppCompat.Spinner.Underlined"
                            android:id="@+id/variants"/>

                    </LinearLayout>
                </FrameLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/mySwitch"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:paddingLeft="4dp"
                        android:layout_marginBottom="8dp"
                        android:textColor="#000000"
                        android:hint="@string/item_no"
                        android:textSize="12sp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/editText4"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="5dp"
                        android:text="@string/Button9"
                        android:textSize="15sp"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:ellipsize="end"
                        android:maxLines="@string/Button9"/>
                </LinearLayout>

                <CheckBox
                    android:id="@+id/mySwitch" android:visibility="gone"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"
                    android:text="@string/favourite"
                    android:drawablePadding="5dp"
                    android:button="@null"
                    android:layout_gravity="end"
                    android:drawableRight="?android:attr/listChoiceIndicatorMultiple" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent" android:visibility="visible"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/mySwitch"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:paddingLeft="4dp"
                    android:layout_marginBottom="8dp"
                    android:textColor="#000000"
                    android:hint="@string/unit_type"
                    android:textSize="12sp"
                    android:layout_height="wrap_content" />
                <RadioGroup
                    android:layout_width="match_parent" android:id="@+id/radioGroup1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <RadioButton
                        android:id="@+id/unit_sav_dialog" android:layout_weight="@string/Button9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/unit"
                        android:padding="15dp"
                        android:textColor="#000000"
                        android:gravity="center_vertical"/>

                    <RadioButton
                        android:id="@+id/weight_sav_dialog" android:layout_weight="@string/Button9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/weight"
                        android:padding="15dp"
                        android:textColor="#000000"
                        android:gravity="center_vertical"/>
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"   android:id="@+id/add_ingredient"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:clickable="true"
                android:visibility="gone"
                android:background="@drawable/light_black_click_shape_rounded_corners"
                android:elevation="2dp"
                android:layout_margin="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ingredient"
                    android:visibility="visible"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/no_of_items"
                    android:layout_width="wrap_content"
                    android:minWidth="28dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/white_shape_circle"
                    android:visibility="visible"
                    android:text="@string/Button13"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="2dp" android:paddingRight="2dp"
                    android:textSize="15sp" android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="#000000"/>


            </LinearLayout>

        </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</LinearLayout>