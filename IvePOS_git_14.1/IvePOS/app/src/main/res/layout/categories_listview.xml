<?xml version="1.0"   encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" android:gravity="center_vertical"
    android:background="?android:attr/activatedBackgroundIndicator"
    android:orientation="horizontal"   >

    <TextView
        android:layout_width="60dp" android:id="@+id/code" android:text="@string/_1111"
        android:layout_height="wrap_content" android:padding="12dp" />

    <TextView
        android:id="@+id/name" android:text="@string/hii" android:layout_toRightOf="@+id/code"
        android:layout_toLeftOf="@+id/prio_value"
        android:layout_width="wrap_content" android:padding="12dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/prio_value" android:text="-" android:layout_alignParentRight="true"
        android:layout_width="wrap_content" android:padding="12dp"
        android:layout_height="wrap_content"/>



</RelativeLayout>