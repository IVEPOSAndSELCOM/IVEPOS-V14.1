                <!--</FrameLayout>-->
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/quantity"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">
                    <ImageButton
                        android:id="@+id/quantitydecrease"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content" android:textSize="18sp"
                        android:layout_height="64dp"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:text="-"
                        style="@android:style/Widget.DeviceDefault.Light.Button"
                        android:src="@drawable/ic_remove_black_24dp"
                        android:textStyle="bold"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/quantityadd"
                        android:layout_toRightOf="@+id/quantitydecrease">
                        <TextView
                            android:id="@+id/displayquantity" android:textColor="#000000"
                            android:layout_width="match_parent" android:singleLine="true"
                            android:layout_height="64dp"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:text="@string/_90"
                            style="@android:style/Widget.DeviceDefault.Light.EditText"
                            android:gravity="center"
                            android:padding="16dp"/>
