<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/relativeLayout1" android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:background="#e6e6e6"
    xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent" android:gravity="center_vertical"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/btncancel"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/mobile_no"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/btncancel"
            android:layout_toLeftOf="@+id/refill"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:src="@drawable/ic_send_black_24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ok"
            android:textStyle="bold"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/greenglow"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent" android:id="@+id/sms_id_send_layout"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:id="@+id/sms_id_send" android:inputType="number"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="@string/Button9"
                android:textSize="12sp"
                android:hint="@string/mobile_no"
                android:gravity="center_vertical"/>
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent" android:orientation="horizontal"
        android:layout_height="wrap_content" android:visibility="gone">
        <Button
            android:layout_width="0dp" android:layout_weight="@string/Button9" android:background="@drawable/ok"
            android:id="@+id/cancel"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/subscription_prompt_cancel" android:layout_marginRight="1dp"
            android:textStyle="bold"/>
        <Button
            android:layout_width="0dp" android:layout_weight="@string/Button9" android:background="@drawable/ok"
            android:id="@+id/ok"
            android:layout_height="wrap_content"
            android:padding="10dp" android:text="@string/settext38"
            android:layout_marginLeft="1dp"
            android:textStyle="bold"/>
    </LinearLayout>



</LinearLayout>