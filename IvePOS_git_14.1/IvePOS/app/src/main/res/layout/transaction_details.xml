                            android:layout_width="105dp" android:text="@string/card_no"
                            android:textColor="#000000"
                            android:textSize="15sp"
                            android:layout_height="wrap_content"  />
                        <TextView
                            android:layout_width="match_parent"
                            android:id="@+id/text1"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:textSize="15sp"
                            android:layout_height="wrap_content" android:singleLine="true"
                            android:gravity="right"
                            android:minWidth="130dp"
                            android:layout_marginLeft="10dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent" android:orientation="horizontal"
                        android:layout_height="wrap_content" android:gravity="center_vertical"
                        android:paddingLeft="20dp" android:paddingRight="20dp">
                        <TextView
                            android:layout_width="105dp" android:text="@string/transaction_no" android:textColor="#000000"
                            android:textSize="15sp"
                            android:layout_height="wrap_content"  />
                        <TextView
                            android:layout_width="match_parent"
                            android:id="@+id/text2"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:layout_height="wrap_content" android:singleLine="true"
                            android:gravity="right"
                            android:textSize="15sp"
                            android:minWidth="130dp"
                            android:layout_marginLeft="10dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent" android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">
                        <Button
                            android:layout_width="0dp"
                            android:layout_weight="@string/Button9"
                            android:id="@+id/send"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:visibility="gone"
                            android:layout_marginRight="1dp"
                            android:text="@string/send_sms_email"
                            android:textStyle="bold"/>
                        <Button
                            android:layout_width="0dp"
                            android:layout_weight="@string/Button9"
                            android:id="@+id/void_bt"
                            android:visibility="gone"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="@string/Void" android:layout_marginLeft="1dp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>


