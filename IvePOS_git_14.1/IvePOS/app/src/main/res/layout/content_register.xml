<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn=".activities.RegisterUserActivity">

    <RelativeLayout
        android:id="@+id/action"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/white"
        android:elevation="3dp">

        <ImageView
            android:id="@+id/leftarrow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:paddingLeft="16dp"
            android:paddingTop="4dp"
            android:paddingRight="16dp"
            android:paddingBottom="4dp"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:textStyle="bold"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/gotomainpage"
            android:layout_toRightOf="@+id/leftarrow"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_toStartOf="@+id/gotomainpage"
            android:layout_toEndOf="@+id/leftarrow">

            <TextView
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sign_up"
                android:textSize="18sp" />
            <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"-->
            <!--android:text="@string/recovery" />-->
        </LinearLayout>

        <ImageView
            android:id="@+id/linearLayout_overflow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:paddingLeft="12dp"
            android:paddingTop="15dp"
            android:paddingRight="12dp"
            android:paddingBottom="15dp"
            android:src="@drawable/ic_more_vert_black_24dp"
            android:paddingEnd="12dp"
            android:paddingStart="12dp"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/action">

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:text="@string/select_business_type"
                    android:paddingStart="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/layout_dine"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/white_rounded_corners"
                        android:elevation="2dp"
                        android:padding="20dp">

                        <RadioButton
                            android:id="@+id/radio_dine"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_dine_logo" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/dine_nospace" />
                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/layout_qsr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/white_rounded_corners"
                        android:elevation="2dp"
                        android:padding="20dp">

                        <RadioButton
                            android:id="@+id/radio_qsr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_qsr_logo" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/qsr_nospace" />
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/layout_retail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/white_rounded_corners"
                        android:elevation="2dp"
                        android:padding="20dp">

                        <RadioButton
                            android:id="@+id/radio_retail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_retail_logo" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/retail_nospace" />
                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/layout_qsr1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/white_rounded_corners"
                        android:elevation="2dp"
                        android:orientation="vertical"
                        android:padding="20dp"
                        android:visibility="invisible">

                    </LinearLayout>

                </LinearLayout>

            </RadioGroup>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:gravity="center_vertical"
                android:padding="6dp">

                <TextView
                    android:id="@+id/textViewRegUserCompanyLabel"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_centerHorizontal="true"
                    android:text=" "
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="15sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/editTextRegUserCompany_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewRegUserCompanyLabel"
                    android:layout_centerHorizontal="true">

                    <EditText
                        android:id="@+id/et_company"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_action_company"
                        android:drawablePadding="10dp"
                        android:hint="@string/company_name"
                        android:inputType="text"
                        android:maxLength="100"
                        android:drawableStart="@drawable/ic_action_company" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/textViewUserRegCompanyMessage"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_below="@+id/editTextRegUserCompany_input"
                    android:layout_centerHorizontal="true"
                    android:text=" "
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/alert"
                    android:textSize="10dp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="@drawable/white_rounded_corners"
                android:elevation="3dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/storelayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:gravity="center_vertical"
                    android:padding="6dp"
                    android:visibility="visible">

                    <EditText
                        android:id="@+id/et_store"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:digits="0123456789*,qwertzuiopasdfghjklyxcvbnm"
                        android:drawableLeft="@drawable/ic_action_store"
                        android:drawablePadding="10dp"
                        android:hint="@string/store_name"
                        android:inputType="text"
                        android:maxLength="100"
                        android:maxLines="1"
                        android:nextFocusDown="@id/spinner1"
                        android:drawableStart="@drawable/ic_action_store" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/devicelayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:padding="6dp"
                    android:visibility="visible">

                    <EditText
                        android:id="@+id/et_device"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/add_device"
                        android:digits="0123456789*,qwertzuiopasdfghjklyxcvbnm"
                        android:drawableLeft="@drawable/ic_action_device"
                        android:drawablePadding="10dp"
                        android:hint="@string/device_name"
                        android:inputType="text"
                        android:maxLength="100"
                        android:maxLines="1"
                        android:nextFocusDown="@id/editTextRegEmail"
                        android:layout_toStartOf="@+id/add_device"
                        android:drawableStart="@drawable/ic_action_device" />

                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/textViewRegEmailLabel"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_below="@+id/textViewUserRegCompanyMessage"
                android:layout_centerHorizontal="true"
                android:text=" "
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="15sp" />

            <!--<android.support.design.widget.TextInputLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:gravity="center_vertical">-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="@drawable/white_rounded_corners"
                android:elevation="3dp"
                android:orientation="vertical"
                android:padding="6dp">


                <EditText
                    android:id="@+id/et_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_icon_phone_96"
                    android:drawablePadding="10dp"
                    android:hint="@string/phone_number"
                    android:inputType="number"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:nextFocusDown="@id/et_email"
                    android:visibility="visible"
                    android:drawableStart="@drawable/ic_icon_phone_96" />

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_action_email"
                    android:drawablePadding="10dp"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:maxLength="50"
                    android:maxLines="1"
                    android:nextFocusDown="@id/et_password"
                    android:visibility="visible"
                    android:drawableStart="@drawable/ic_action_email" />

                <!--</android.support.design.widget.TextInputLayout>-->

                <TextView
                    android:id="@+id/textViewRegEmailMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/alert"
                    android:textSize="15sp"
                    android:visibility="gone" />


                <TextView
                    android:id="@+id/textViewRegUserPasswordLabel"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_below="@+id/textViewRegEmailMessage"
                    android:layout_centerHorizontal="true"
                    android:text=" "
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/et_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_action_password"
                        android:drawablePadding="10dp"
                        android:hint="@string/password"
                        android:inputType="textPassword"
                        android:maxLength="50"
                        android:maxLines="1"
                        android:nextFocusDown="@id/editTextRegconfirmPassword"
                        android:visibility="visible"
                        android:drawableStart="@drawable/ic_action_password" />

                    <ImageView
                        android:id="@+id/show_pass_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:alpha=".5"
                        android:onClick="ShowHidePass"
                        android:src="@drawable/ic_icon_eye"
                        android:layout_marginEnd="10dp"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>

                <!--<EditText-->
                <!--android:id="@+id/editTextRegPassword"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_below="@id/textViewRegUserPasswordLabel"-->
                <!--android:layout_centerHorizontal="true"-->
                <!--android:background="@drawable/text_border_selector"-->
                <!--android:hint="Enter Password"-->
                <!--android:inputType="textPassword"-->
                <!--android:visibility="visible"-->
                <!--android:maxLines="1"-->
                <!--android:nextFocusDown="@id/editTextRegconfirmPassword"/>-->

                <TextView
                    android:id="@+id/textViewUserRegPasswordMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/editTextRegPassword"
                    android:layout_centerHorizontal="true"
                    android:text="@string/password_must_contain_at_least_one_special_character_uppercase_letter_lower_case_letter_and_number"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/alert"
                    android:textSize="15sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textViewRegUserconfirmPasswordLabel"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_below="@+id/textViewRegEmailMessage"
                    android:layout_centerHorizontal="true"
                    android:text=" "
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/et_confirmpwd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_action_password"
                        android:drawablePadding="10dp"
                        android:hint="@string/confirm_password"
                        android:inputType="textPassword"
                        android:maxLength="50"
                        android:maxLines="1"
                        android:visibility="visible"
                        android:drawableStart="@drawable/ic_action_password" />

                    <ImageView
                        android:id="@+id/show__confi_pass_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:alpha=".5"
                        android:onClick="ShowHidePass_conf"
                        android:src="@drawable/ic_icon_eye"
                        android:layout_marginEnd="10dp"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>

                <!--<EditText-->
                <!--android:id="@+id/editTextRegconfirmPassword"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_below="@id/textViewRegUserconfirmPasswordLabel"-->
                <!--android:layout_centerHorizontal="true"-->
                <!--android:background="@drawable/text_border_selector"-->
                <!--android:hint="confirm Password"-->
                <!--android:inputType="textPassword"-->
                <!--android:visibility="visible" />-->

                <TextView
                    android:id="@+id/textViewUserRegconfirmPasswordMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/editTextRegPassword"
                    android:layout_centerHorizontal="true"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/alert"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="@drawable/white_rounded_corners"
                android:elevation="3dp"
                android:orientation="vertical"
                android:padding="6dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/note"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/password_should_contain_minimum_8_characters_atleast_1_number_1_capital_letter_1_small_letter_1_special_character"
                    android:textColor="#000000"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_signUp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/red_click"
                android:gravity="center"
                android:padding="12dp"
                android:text="@string/confirm"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_alignParentEnd="true" />

        </LinearLayout>
    </ScrollView>


    <RelativeLayout
        android:id="@+id/progressbar_register"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="#80000000"
        android:elevation="6dp"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/circle"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/progress_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:background="@drawable/white_shape_circle"
            android:padding="8dp" />

        <TextView
            android:id="@+id/progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/circle"
            android:layout_centerHorizontal="true"
            android:text="@string/loading"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />


    </RelativeLayout>
    <!--<Button-->
    <!--android:id="@+id/signUp"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_alignParentBottom="true"-->
    <!--android:layout_centerHorizontal="true"-->
    <!--android:text="Sign up"-->
    <!--android:textColor="@color/white"/>-->
</RelativeLayout>