<LinearLayout
    android:layout_width="320dp"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="#e6e6e6"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent" android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:background="#e6e6e6"
        android:layout_marginBottom="5dp">
        <Button
            android:id="@+id/canceledit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/light_black_click_shape_rounded_corners"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:text="@string/subscription_prompt_cancel"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/title6"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/okedit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/green_click_shape_rounded_corners"
            android:padding="10dp"
            android:src="@drawable/ic_done_white_24dp"
            android:text="@string/save"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent" android:orientation="horizontal"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_height="wrap_content" android:layout_weight="@string/Button9"
                    android:layout_width="match_parent" android:layout_marginRight="2dp">

                    <AutoCompleteTextView
                        android:layout_width="match_parent"
                        android:hint="@string/phone_no_10_digits"
                        android:maxLines="@string/Button9"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:nextFocusForward="@+id/cust_id_edit"
                        android:id="@+id/phonenoedit"
                        android:inputType="number"
                        android:imeOptions="actionNext"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_height="wrap_content" android:layout_weight="@string/Button9"
                    android:layout_width="match_parent">

                    <AutoCompleteTextView
                        android:layout_width="match_parent"
                        android:hint="Customer id"
                        android:maxLines="@string/Button9"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:nextFocusForward="@+id/nameedit"
                        android:id="@+id/cust_id_edit"
                        android:inputType="text"
                        android:imeOptions="actionNext"
                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890_-()@. "/>

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:hint="@string/customer_name" android:nextFocusForward="@+id/emailidedit"
                    android:maxLines="@string/Button9"
                    android:inputType="textPersonName"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:id="@+id/nameedit"
                    android:imeOptions="actionNext"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890_-()@. "/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <EditText
                    android:layout_width="match_parent"
                    android:hint="@string/email_id"
                    android:maxLines="@string/Button9"
                    android:layout_height="wrap_content"
                    android:nextFocusDown="@+id/addressedit"
                    android:textSize="15sp"
                    android:inputType="textEmailAddress"
                    android:id="@+id/emailidedit"  />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <EditText
                    android:layout_width="match_parent"
                    android:hint="@string/address"
                    android:layout_height="wrap_content"
                    android:maxLines="@string/Button11"
                    android:textSize="15sp"
                    android:id="@+id/addressedit"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890_-()@./#* "/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <EditText
                    android:layout_width="match_parent"
                    android:hint="@string/pincode"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:id="@+id/pincodeedit"
                    android:digits="1234567890"
                    android:maxLength="@string/Button7"
                    android:inputType="number"/>

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="#ffffff"
                android:elevation="2dp"
                android:layout_margin="2dp"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:padding="5dp"
                    android:layout_weight="@string/Button9"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/loyalty_points"
                        android:textColor="@color/red"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content" android:gravity="center"
                            android:layout_height="match_parent" android:id="@+id/total_points"
                            android:text="@string/Button13"/>
                        <TextView
                            android:layout_width="wrap_content" android:gravity="center"
                            android:layout_height="match_parent"
                            android:text=" ("/>
                        <TextView
                            android:layout_width="wrap_content" android:gravity="center"
                            android:layout_height="match_parent" android:id="@+id/inn"
                            android:text="@string/Rs_"/>
                        <TextView
                            android:layout_width="wrap_content" android:gravity="center"
                            android:layout_height="match_parent" android:id="@+id/total_amount"
                            android:text="@string/Button13"/>
                        <TextView
                            android:layout_width="wrap_content" android:gravity="center"
                            android:layout_height="match_parent"
                            android:text=")"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent" android:layout_weight="@string/Button9"
                    android:layout_height="wrap_content"
                    android:gravity="right">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <Button
                            android:layout_width="wrap_content" android:id="@+id/redeem_loyal_point"
                            android:layout_height="wrap_content" android:visibility="gone"
                            android:text="@string/redeem"
                            android:textColor="#ffffff"
                            android:background="@drawable/red_click_shape_rounded_corners"/>
                        <TextView
                            android:id="@+id/applied" android:visibility="gone"
                            android:layout_width="wrap_content" android:gravity="center"
                            android:layout_height="wrap_content" android:textColor="@color/ColorPrimary"
                            android:text="@string/applied_nclick_tick_button_to_continue"/>
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>