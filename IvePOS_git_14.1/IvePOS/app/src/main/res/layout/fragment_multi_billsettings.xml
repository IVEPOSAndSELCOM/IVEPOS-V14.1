<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#e6e6e6"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent" android:padding="10dp" android:id="@+id/linearLayout"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content" android:background="#666666">

        <Button
            android:id="@+id/edit_bill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:background="@drawable/red_click"
            android:drawableLeft="@drawable/ic_edit_white_24dp"
            android:drawablePadding="20dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:text="@string/title16"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="wrap_content" android:visibility="gone"
            android:layout_height="38dp"
            android:layout_centerVertical="true"
            android:background="@drawable/white_click_shape_rounded_corners"
            android:elevation="2dp"
            android:orientation="vertical"
            android:layout_margin="2dp">
            <TextView
                android:layout_width="wrap_content" android:id="@+id/text"
                android:layout_height="wrap_content"
                android:text="@string/font_size"
                android:layout_marginLeft="8dp"
                style="@style/TextAppearance.Design.Hint"/>
            <Spinner
                android:layout_width="wrap_content" android:id="@+id/print_size"
                android:layout_height="match_parent"
                android:entries="@array/print_size"
                android:paddingTop="8dp"/>
        </RelativeLayout>

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent" android:layout_below="@+id/linearLayout"
        android:layout_height="2dp" android:id="@+id/imageView"
        android:background="#7f7f7f"/>

    <ScrollView
        android:layout_width="match_parent" android:layout_below="@+id/imageView"
        android:layout_height="wrap_content" android:layout_marginBottom="0dp">

    <RelativeLayout
        android:layout_width="match_parent" android:paddingBottom="10dp"
        android:layout_height="match_parent" android:gravity="center" android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:paddingLeft="1dp" android:paddingRight="1dp"
            android:paddingTop="1dp" android:paddingBottom="1dp"
            android:layout_marginBottom="10dp"
            android:background="#7f7f7f">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="10dp" android:paddingRight="10dp"
                android:paddingTop="5dp" android:paddingBottom="10dp"
                android:background="#ffffff">
                <TextView
                    android:layout_width="match_parent" android:text="@string/bill_preview"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content" android:textColor="#000000"
                    android:paddingBottom="5dp"/>
                <ImageView
                    android:layout_width="match_parent" android:id="@+id/viewImagee"
                    android:layout_height="wrap_content" android:src="@drawable/print_logo"
                    android:layout_gravity="center" android:background="#ffffff"/>
                <TextView
                    android:layout_width="match_parent" android:id="@+id/compname"
                    android:layout_height="wrap_content"
                    android:text="@string/company_name"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_width="match_parent" android:id="@+id/address1"
                    android:layout_height="wrap_content"
                    android:text="@string/address_line_1"
                    android:textSize="15sp"
                    android:gravity="center_horizontal"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_width="match_parent" android:id="@+id/address2"
                    android:layout_height="wrap_content"
                    android:text="@string/address_line_2"
                    android:textSize="15sp"
                    android:gravity="center_horizontal"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_width="match_parent" android:id="@+id/address3"
                    android:layout_height="wrap_content"
                    android:text="@string/address_line_3"
                    android:textSize="15sp"
                    android:gravity="center_horizontal"
                    android:textColor="#000000"/>
                <LinearLayout
                    android:layout_width="match_parent" android:orientation="horizontal"
                    android:layout_height="wrap_content" android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/phone"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:textColor="#000000"/>
                    <TextView
                        android:layout_width="wrap_content" android:id="@+id/phoneno"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:textColor="#000000"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent" android:id="@+id/emailid"
                    android:layout_height="wrap_content" android:maxLines="@string/Button9" android:ellipsize="end"
                    android:text="@string/email"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_width="match_parent" android:id="@+id/website"
                    android:layout_height="wrap_content"
                    android:text="@string/website"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_width="match_parent" android:id="@+id/taxlineone"
                    android:layout_height="wrap_content"
                    android:text="@string/tax_license_nos"
                    android:gravity="center_horizontal"
                    android:textSize="15sp"
                    android:textColor="#000000"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="#7f7f7f"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:gravity="center"
                        android:orientation="horizontal"   >

                        <TextView
                            android:text="@string/bill_no" android:typeface="serif" android:paddingRight="10dp"
                            android:layout_width="wrap_content" android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/billnumb" android:text="yyyyMMdd_000TN"
                            android:layout_width="wrap_content" android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:gravity="center"
                        android:orientation="horizontal"   >

                        <TextView
                            android:id="@+id/date" android:text="@string/_30_sep_15"
                            android:layout_width="wrap_content" android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"/>
                        <TextView android:text=" ,"
                            android:layout_width="wrap_content" android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/time" android:text="@string/_12_58_pm"
                            android:layout_width="wrap_content" android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent" android:gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_weight="@string/Button9"
                                android:orientation="horizontal"
                                android:layout_height="wrap_content" >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/action_table"
                                    android:paddingRight="5dp"
                                    android:textSize="18sp"
                                    android:textColor="#000000"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/name_t"
                                    android:paddingRight="0dp"
                                    android:textSize="18sp"
                                    android:textColor="#000000"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_weight="@string/Button9"
                                android:orientation="horizontal"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="@string/type"
                                    android:gravity="center"
                                    android:textSize="18sp"
                                    android:textColor="#000000"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_weight="@string/Button9"
                                android:layout_gravity="right|center_vertical"
                                android:orientation="horizontal"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="@string/Button9"
                                    android:text="@string/mode"
                                    android:gravity="right|center_vertical"
                                    android:textSize="18sp"
                                    android:textColor="#000000"/>
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="#7f7f7f"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#cccccc"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="30dp"
                    android:paddingBottom="30dp"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bill_content"
                        android:textSize="15sp"
                        android:textColor="#000000"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#7f7f7f"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/thank_you_come_again_soon"
                    android:textSize="18sp"
                    android:gravity="center_horizontal"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_width="match_parent" android:id="@+id/billfooterone"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/bill_footer"
                    android:textSize="15sp"
                    android:gravity="start|center_horizontal"
                    android:textColor="#000000"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    </ScrollView>

</RelativeLayout>
