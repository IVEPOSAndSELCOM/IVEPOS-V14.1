<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".R_NewLogIn_BusinessType"
    android:background="@color/LightBlack">

    <RelativeLayout
        android:id="@+id/progressbar1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="#80000000"
        android:elevation="12dp"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/circle"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/progress_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:background="@drawable/white_shape_circle"
            android:padding="8dp" />

        <TextView
            android:id="@+id/progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/circle"
            android:layout_centerHorizontal="true"
            android:text="@string/loading"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <RelativeLayout

        android:id="@+id/action"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/white"
        android:elevation="5dp"
        >

        <ImageView
            android:id="@+id/leftarrow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:paddingLeft="4dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textStyle="bold"
            android:src="@drawable/ic_intuition_logo_green_72dp"
            />

        <!--            android:textStyle="bold" />-->

        <LinearLayout
            android:layout_width="76dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="66dp"
            android:layout_toRightOf="@+id/leftarrow"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"-->
            <!--android:text="@string/recovery" />-->
            <TextView
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="71dp"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="18sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/linearLayout_overflow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:paddingLeft="12dp"
            android:paddingTop="15dp"
            android:paddingRight="12dp"
            android:paddingBottom="15dp"
            android:src="@drawable/ic_more_vert_black_24dp" />



    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="660dp"
        android:layout_marginTop="70dp">

        <RelativeLayout
            android:id="@+id/relativeLayoutfsf"
            android:layout_width="380dp"
            android:layout_height="320dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="100dp"
            android:background="@drawable/r_new_login_style"
            android:elevation="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="251dp"
                android:text="@string/select_business_type"
                android:textAlignment="center"
                android:textColor="@color/ivepos_newlogin_black"
                android:textSize="25dp"
                android:textStyle="bold" />
            <View
                android:layout_marginStart="30dp"
                android:background="@color/ivepos_newlogin_black"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="30dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="95dp"
                android:orientation="horizontal">

                <RadioButton

                    android:id="@+id/radio_dine"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/r_new_login_radiounclicked"
                    android:button="@color/trans"
                    android:drawableTop="@drawable/dining_room"
                    android:elevation="20dp"
                    android:paddingTop="6dp"
                    android:text="@string/dine_nospace"
                    android:textAlignment="center"
                    android:textColor="#2a1218"
                    android:textSize="16dp"
                    android:textStyle="bold" />


                <RadioButton
                    android:id="@+id/radio_qsr"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/r_new_login_radiounclicked"
                    android:button="@color/trans"
                    android:drawableTop="@drawable/baseline_fastfood_24"
                    android:elevation="20dp"
                    android:paddingTop="10dp"
                    android:text="Fast food"
                    android:textAlignment="center"
                    android:textColor="#2a1218"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/radio_retail"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/r_new_login_radiounclicked"
                    android:button="@color/trans"
                    android:drawableTop="@drawable/baseline_shopping_cart_24"
                    android:elevation="20dp"
                    android:paddingTop="6dp"
                    android:text="@string/retail_nospace"
                    android:textAlignment="center"
                    android:textColor="#2a1218"
                    android:textSize="16dp"
                    android:textStyle="bold" />




            </RadioGroup>


            <Button
                android:id="@+id/login1"
                android:layout_width="175dp"
                android:layout_height="50dp"
                android:layout_marginStart="100dp"
                android:layout_marginTop="220dp"
                android:background="@drawable/r_new_login_button2"
                android:elevation="10dp"
                android:text="Request OTP"
                android:textAllCaps="false"
                android:textColor="@color/ivepos_newlogin_black"
                android:textSize="18dp"
                android:textStyle="normal" />





        </RelativeLayout>




    </ScrollView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="480dp"
        android:gravity="center"
        android:layout_marginStart="120dp"

        >


        <TextView
            android:id="@+id/seconds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingLeft="7dp"

            android:paddingTop="10dp"
            android:text="" />

    </RelativeLayout>




</RelativeLayout>