<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="320dp"
    android:gravity="center_horizontal"
    android:layout_height="wrap_content" android:background="#e6e6e6">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:src="@drawable/ic_backup_success_green_48dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:gravity="center_horizontal">
        <!--<ImageView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginLeft="15dp"-->
            <!--android:src="@drawable/ic_check_circle_black_48dp"/>-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/refund"
            android:textSize="15sp"
            android:layout_marginLeft="0dp" />
        <TextView
            android:layout_width="wrap_content" android:id="@+id/inn"
            android:layout_height="wrap_content"
            android:text="@string/Rs"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/refund_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_123"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginLeft="3dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="@string/to_the_customer"
            android:textSize="15sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="match_parent" android:layout_weight="@string/Button9"
            android:layout_height="wrap_content" android:layout_marginRight="1dp"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff"
            android:text="@string/e_mail_receipt" android:id="@+id/gomail"
            android:textStyle="bold"
            android:padding="10dp"
            android:background="@drawable/red_click"/>
        <Button
            android:layout_width="match_parent" android:layout_weight="@string/Button9"
            android:layout_height="wrap_content" android:layout_marginLeft="1dp"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff"
            android:text="@string/done" android:id="@+id/gohome"
            android:textStyle="bold"
            android:padding="10dp"
            android:background="@drawable/red_click"/>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/billa" android:visibility="gone">
        <LinearLayout
            android:layout_width="wrap_content" android:id="@+id/include"
            android:layout_height="wrap_content">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <include android:id="@+id/f_viewreturnsemail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    layout="@layout/refunds_receipt_print1"/>
            </ScrollView>
        </LinearLayout>

        <!--<LinearLayout-->
        <!--android:layout_width="wrap_content" android:id="@+id/splitempty"-->
        <!--android:layout_height="wrap_content">-->
        <!--<ScrollView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content">-->
        <!--<include android:id="@+id/f_viewsplitempty"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--layout="@layout/split_bill_empty"/>-->
        <!--</ScrollView>-->
        <!--</LinearLayout>-->

        <LinearLayout
            android:layout_width="wrap_content" android:id="@+id/imageview"
            android:layout_height="wrap_content">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imageViewPicture"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </ScrollView>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>