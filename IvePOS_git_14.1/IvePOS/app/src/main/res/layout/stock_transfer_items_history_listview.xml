<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp"
        android:layout_margin="12dp">
        <LinearLayout
            android:id="@+id/title_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="@string/Button10"
            android:gravity="center_vertical"
            android:padding="6dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/date_time"
                    android:layout_width="0dp"
                    android:layout_weight="@string/Button9"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="12dp">

                    <TextView
                        android:layout_width="match_parent" android:id="@+id/date"
                        android:layout_height="wrap_content"
                        android:text="@string/date"/>

                    <TextView
                        android:layout_width="match_parent" android:id="@+id/time"
                        android:layout_height="wrap_content"
                        android:text="@string/time_title"/>


                </LinearLayout>



                <LinearLayout
                    android:id="@+id/paid_pending"
                    android:layout_width="0dp"
                    android:layout_weight="@string/Button9"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp"
                    android:paddingRight="12dp">

                    <TextView
                        android:layout_width="wrap_content" android:id="@+id/to_store"
                        android:layout_height="wrap_content"
                        android:text="@string/to_store"/>

                    <TextView
                        android:layout_width="wrap_content" android:id="@+id/to_device"
                        android:layout_height="wrap_content"
                        android:text="@string/to_device"/>


                </LinearLayout>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/LightBlack"
                app:cardCornerRadius="6dp"
                app:cardElevation="0dp">
                <TableLayout android:layout_gravity="right"
                    android:orientation="vertical"
                    android:id="@+id/lytpedido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp">
                </TableLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>