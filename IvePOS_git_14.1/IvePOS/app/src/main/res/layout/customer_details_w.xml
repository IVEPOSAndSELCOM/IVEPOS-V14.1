<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:elevation="4dp"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/back_activity"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="?android:attr/actionBarItemBackground"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_arrow_back_black_24dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/back_activity"
            android:layout_toEndOf="@+id/back_activity"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="@string/Button9"
                android:ellipsize="end"
                android:text="Customer Details"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"/>

        </LinearLayout>

    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#5d5d5d"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/itemtabhead">

                <TableRow>
                    <TextView
                        android:text="Name: "
                        android:gravity="left"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:padding="8dp"/>

                    <TextView
                        android:id="@+id/custname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableBottom="@color/black"
                        android:gravity="left"
                        android:padding="8dp"
                        android:layout_weight="@string/Button9"
                        android:text="Customer Name"
                        android:textSize="16dp" />

                </TableRow>

                <TableRow>
                    <TextView
                        android:text="Reg Phone number: "
                        android:gravity="left"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:padding="8dp"/>
                    <TextView
                        android:id="@+id/custphno"
                        android:text="Registered phone number"
                        android:textSize="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableBottom="@color/black"
                        android:gravity="left"
                        android:layout_weight="@string/Button9"
                        android:padding="8dp"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="Phone number: "
                        android:gravity="left"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:padding="8dp"/>
                    <TextView
                        android:id="@+id/getcustphno"
                        android:textSize="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableBottom="@color/black"
                        android:gravity="left"
                        android:layout_weight="@string/Button9"
                        android:padding="8dp"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="@string/mail"
                        android:gravity="left"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:padding="8dp"/>
                    <TextView
                        android:id="@+id/custemail"
                        android:text="Customer E-mail"
                        android:textSize="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableBottom="@color/black"
                        android:gravity="left"
                        android:layout_weight="@string/Button9"
                        android:padding="8dp"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="Address: "
                        android:gravity="left"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:padding="8dp"/>

                    <TextView
                        android:id="@+id/custadd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableBottom="@color/black"
                        android:gravity="left"
                        android:layout_weight="@string/Button9"
                        android:padding="8dp"
                        android:text="Customer Address"
                        android:textSize="16dp" />



                </TableRow>

                <TableRow>
                    <TextView
                        android:text="Delivery area: "
                        android:gravity="left"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:padding="8dp"/>

                    <TextView
                        android:id="@+id/custdarea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableBottom="@color/black"
                        android:gravity="left"
                        android:layout_weight="@string/Button9"
                        android:padding="8dp"
                        android:text="Customer Delivery area"
                        android:textSize="16dp" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="Deli instruction: "
                        android:gravity="left"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:padding="8dp"/>
                    <TextView
                        android:id="@+id/custdins"
                        android:text="Customer delivery instruction"
                        android:textSize="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableBottom="@color/black"
                        android:gravity="left"
                        android:layout_weight="@string/Button9"
                        android:padding="8dp"/>
                </TableRow>
            </TableLayout>


        </LinearLayout>
    </ScrollView>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#5d5d5d"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#5d5d5d"
            android:layout_margin="6dp"/>

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/cancel"
            android:layout_height="match_parent"
            android:padding="6dp"
            android:gravity="center"
            android:layout_weight="@string/Button9"
            android:text="Back"
            style="@style/TextAppearance.AppCompat.Button"/>

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#5d5d5d"
            android:layout_margin="6dp"/>
    </LinearLayout>

</LinearLayout>