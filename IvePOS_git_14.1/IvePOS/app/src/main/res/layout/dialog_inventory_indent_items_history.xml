<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/relativeLayout1"
    android:layout_width="320dp"
    android:layout_height="wrap_content" android:background="#e6e6e6"
    xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent" android:gravity="center_vertical"
        android:layout_height="60dp" android:orientation="horizontal" android:background="#e6e6e6">

        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="?android:attr/selectableItemBackground"
            android:id="@+id/closetext"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_vertical"/>
        <LinearLayout
            android:layout_toRightOf="@+id/closetext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content" android:id="@+id/item_ro"
                android:textSize="15sp" android:textStyle="bold"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:text="@string/itemname"  />
            <LinearLayout
                android:layout_width="match_parent" android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content" android:id="@+id/total_listings"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"
                    android:text="@string/_21"  />
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"
                    android:text="@string/listings"  />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:background="@drawable/white_rounded_corners"
        android:elevation="2dp">


        <LinearLayout
            android:layout_width="match_parent" android:gravity="center_vertical"
            android:layout_height="wrap_content" android:orientation="horizontal"
            android:paddingTop="6dp"
            android:paddingBottom="6dp">

            <LinearLayout
                android:id="@+id/linea_last" android:layout_weight="@string/Button9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="12sp" android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"
                    android:text="@string/avg_price"  />
                <LinearLayout
                    android:layout_width="match_parent" android:orientation="horizontal"
                    android:layout_height="wrap_content" android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content" android:id="@+id/inn"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:layout_height="wrap_content"
                        android:text="@string/Rs"  />
                    <TextView
                        android:layout_width="wrap_content" android:id="@+id/avg_price"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:layout_height="wrap_content"
                        android:text="@string/listings"  />
                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:layout_width="1dp" android:layout_toRightOf="@+id/linea_last"
                android:layout_height="match_parent" android:layout_margin="4dp"
                android:background="@color/DarkBlack"
                android:id="@+id/lineq1"/>

            <LinearLayout
                android:layout_toRightOf="@+id/lineq1"
                android:layout_width="match_parent" android:layout_weight="@string/Button9"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="12sp" android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"
                    android:text="@string/total_qty"  />
                <LinearLayout
                    android:layout_width="match_parent" android:orientation="horizontal"
                    android:layout_height="wrap_content" android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content" android:id="@+id/tot_qty"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:layout_height="wrap_content"
                        android:text="@string/listings"  />
                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:layout_width="1dp" android:layout_toRightOf="@+id/linea_last"
                android:layout_height="match_parent" android:layout_margin="4dp"
                android:background="@color/DarkBlack"
                android:id="@+id/line1"/>

            <LinearLayout
                android:layout_toRightOf="@+id/line1"
                android:layout_width="match_parent" android:layout_weight="@string/Button9"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="12sp" android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"
                    android:text="@string/total_cost"  />
                <LinearLayout
                    android:layout_width="match_parent" android:orientation="horizontal"
                    android:layout_height="wrap_content" android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content" android:id="@+id/inn1"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:layout_height="wrap_content"
                        android:text="@string/Rs"  />
                    <TextView
                        android:layout_width="wrap_content" android:id="@+id/tot_price"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:layout_height="wrap_content"
                        android:text="@string/listings"  />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent" android:gravity="center_vertical"
            android:layout_height="wrap_content" android:orientation="horizontal"
            android:paddingTop="6dp" android:id="@+id/ingr" android:visibility="visible"
            android:paddingBottom="6dp">

            <LinearLayout
                android:layout_toRightOf="@+id/line1"
                android:layout_width="match_parent" android:layout_weight="@string/Button9"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="12sp" android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"
                    android:text="@string/wastage_qty"  />
                <LinearLayout
                    android:layout_width="match_parent" android:orientation="horizontal"
                    android:layout_height="wrap_content" android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content" android:id="@+id/wast_qty"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:layout_height="wrap_content"
                        android:text="@string/listings"  />
                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:layout_width="1dp" android:layout_toRightOf="@+id/linea_last"
                android:layout_height="match_parent" android:layout_margin="4dp"
                android:background="@color/DarkBlack"
                android:id="@+id/line2"/>

            <LinearLayout
                android:layout_toRightOf="@+id/line2"
                android:layout_width="match_parent" android:layout_weight="@string/Button9"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="12sp" android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"
                    android:text="@string/wastage_cost"  />
                <LinearLayout
                    android:layout_width="match_parent" android:orientation="horizontal"
                    android:layout_height="wrap_content" android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content" android:id="@+id/inn2"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:layout_height="wrap_content"
                        android:text="@string/Rs"  />
                    <TextView
                        android:layout_width="wrap_content" android:id="@+id/wast_price"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:layout_height="wrap_content"
                        android:text="@string/listings"  />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent" android:background="@color/LightBlack"
            android:layout_height="wrap_content" android:visibility="gone"
            android:padding="8dp">
            <LinearLayout
                android:layout_width="wrap_content" android:id="@+id/first"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content" android:textSize="12sp"
                        android:layout_height="wrap_content"
                        android:text="@string/lasttransaction_date"
                        android:id="@+id/qty"/>

                    <TextView
                        android:id="@+id/x"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" , "
                        android:layout_centerVertical="true"
                        android:textColor="@color/DarkBlack"
                        android:textSize="12sp"
                        android:layout_toRightOf="@+id/qty"/>

                    <TextView
                        android:id="@+id/itemname" android:textSize="12sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/x"
                        android:layout_toLeftOf="@+id/total_price"
                        android:text="@string/time"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content" android:id="@+id/indiv_price"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/DarkBlack"
                        android:text="@string/vendor_name"/>

                </LinearLayout>

            </LinearLayout>
            ///////////////////////////////////////
            <LinearLayout
                android:layout_width="match_parent" android:id="@+id/second"
                android:layout_height="wrap_content" android:layout_toRightOf="@+id/first"
                android:orientation="vertical" android:layout_alignParentRight="true"
                android:gravity="right">
                <LinearLayout
                    android:layout_width="wrap_content" android:gravity="right"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content" android:textColor="@color/DarkBlack"
                        android:layout_height="wrap_content" android:textSize="12sp"
                        android:text="@string/qty"
                        android:id="@+id/qty1"/>

                    <TextView
                        android:id="@+id/x1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/x"
                        android:layout_centerVertical="true"
                        android:textColor="@color/DarkBlack"
                        android:textSize="12sp"
                        android:layout_toRightOf="@+id/qty1"/>

                    <TextView
                        android:textColor="@color/DarkBlack"
                        android:layout_width="match_parent" android:textSize="12sp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/x1"
                        android:layout_toLeftOf="@+id/total_price"
                        android:text="@string/price"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="@string/total"/>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent" android:visibility="gone"
            android:layout_height="1dp"
            android:background="@color/MediumBlack"/>

        <LinearLayout
            android:layout_width="match_parent" android:background="@color/LightBlack"
            android:layout_height="wrap_content">
            <ListView
                android:layout_width="match_parent" android:id="@+id/dialog_list_items"
                android:layout_height="wrap_content"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>

