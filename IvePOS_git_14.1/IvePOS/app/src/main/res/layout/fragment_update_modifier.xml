                <!--android:id="@+id/btnremovelogo"-->
                <!--android:layout_margin="2dp"-->
                <!--android:textColor="#000000"-->
                <!--android:textStyle="bold"/>-->

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>