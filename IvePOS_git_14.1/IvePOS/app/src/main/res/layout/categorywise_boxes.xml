<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TableLayout android:id="@+id/tabla_cuerpo" android:layout_height="match_parent" android:layout_width="match_parent">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="@string/Button9"
                android:weightSum="8.5">
                <TextView
                    android:id="@+id/sno"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:gravity="start|center_vertical"
                    android:text="@string/s_no"
                    android:paddingLeft="5dp" android:paddingRight="5dp"
                    android:paddingTop="12dp" android:paddingBottom="12dp"/>
                <TextView
                    android:id="@+id/num"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="@string/Button11"
                    android:gravity="start|center_vertical"
                    android:text="@string/item_name"
                    android:paddingLeft="5dp" android:paddingRight="5dp"
                    android:paddingTop="12dp" android:paddingBottom="12dp"/>
                <!--<TextView-->
                    <!--android:id="@+id/itemname"-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:layout_weight="1.5"-->
                    <!--android:gravity="start|center_vertical"-->
                    <!--android:text="@string/item_no"-->
                    <!--android:paddingLeft="5dp" android:paddingRight="5dp"-->
                    <!--android:paddingTop="12dp" android:paddingBottom="12dp"/>-->
                <TextView
                    android:id="@+id/quantity"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="@string/Button10"
                    android:text="@string/qty_sold"
                    android:paddingLeft="5dp" android:paddingRight="5dp"
                    android:paddingTop="12dp" android:paddingBottom="12dp"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    >
                    <TextView
                        android:layout_width="wrap_content" android:layout_height="match_parent"
                        android:id="@+id/inn"
                        android:paddingLeft="5dp" android:paddingRight="3dp"
                        android:paddingTop="12dp" android:paddingBottom="12dp"
                        android:gravity="center_vertical"
                        android:text="@string/insert"/>
                    <TextView
                        android:layout_width="wrap_content" android:id="@+id/sales"
                        android:layout_height="match_parent" android:gravity="center_vertical"
                        android:text="@string/Sales"
                        android:paddingRight="5dp"
                        android:paddingTop="12dp" android:paddingBottom="12dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3"
                    >
                    <TextView
                        android:layout_width="wrap_content" android:id="@+id/salesper"
                        android:layout_height="match_parent" android:gravity="center_vertical"
                        android:text="@string/percentage"
                        android:paddingLeft="5dp" android:paddingRight="3dp"
                        android:paddingTop="12dp" android:paddingBottom="12dp"/>
                    <TextView
                        android:layout_width="wrap_content" android:layout_height="match_parent"

                        android:paddingRight="5dp"
                        android:paddingTop="12dp" android:paddingBottom="12dp"
                        android:gravity="center_vertical"
                        android:text="%"/>
                </LinearLayout>
            </LinearLayout>
        </TableRow>
    </TableLayout>
</LinearLayout>