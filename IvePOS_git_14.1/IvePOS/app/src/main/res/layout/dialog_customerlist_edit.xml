<LinearLayout
    android:layout_width="320dp"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="#e6e6e6"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent" android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:background="#e6e6e6"
        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/title6"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/canceledit"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <ImageButton
            android:layout_width="wrap_content" android:background="@drawable/ok"
            android:text="@string/delete" android:src="@drawable/ic_account_balance_black_24dp"
            android:textStyle="bold" android:padding="15dp"
            android:layout_toLeftOf="@+id/delete" android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_height="60dp"
            android:id="@+id/delete_edit"
            android:textColor="#ffffff"/>

        <ImageButton
            android:layout_width="wrap_content" android:background="@drawable/red_click"
            android:text="@string/delete" android:src="@drawable/ic_delete_forever_white_24dp"
            android:textStyle="bold" android:padding="15dp"
            android:layout_toLeftOf="@+id/okedit" android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_height="60dp"
            android:id="@+id/delete"
            android:textColor="#ffffff"/>

        <ImageButton
            android:id="@+id/okedit"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ok"
            android:padding="15dp"
            android:src="@drawable/ic_done_black_24dp"
            android:text="@string/save"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/canceledit"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:background="@drawable/light_black_click"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/subscription_prompt_cancel"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_height="wrap_content" android:layout_weight="@string/Button9"
                    android:layout_width="match_parent" android:layout_marginRight="2dp">

                    <AutoCompleteTextView
                        android:layout_width="match_parent"
                        android:hint="@string/phone_no_10_digits"
                        android:maxLines="@string/Button9"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:nextFocusDown="@+id/nameedit"
                        android:id="@+id/phonenoedit"
                        android:inputType="number"
                        android:imeOptions="actionNext"
                        android:maxLength="10"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_height="wrap_content" android:layout_weight="@string/Button9"
                    android:layout_width="match_parent">

                    <AutoCompleteTextView
                        android:layout_width="match_parent"
                        android:hint="Customer id"
                        android:maxLines="@string/Button9"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:nextFocusDown="@+id/nameedit"
                        android:id="@+id/cust_id_edit"
                        android:inputType="text"
                        android:imeOptions="actionNext"
                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890_-()@. "/>

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <EditText
                    android:layout_width="match_parent"
                    android:hint="@string/customer_name"
                    android:maxLines="@string/Button9"
                    android:inputType="textPersonName"
                    android:nextFocusDown="@+id/emailidedit"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:id="@+id/nameedit"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890_-()@. "  />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <EditText
                    android:layout_width="match_parent"
                    android:hint="@string/email_id"
                    android:maxLines="@string/Button9"
                    android:layout_height="wrap_content"
                    android:nextFocusDown="@+id/addressedit"
                    android:textSize="15sp"
                    android:inputType="textEmailAddress"
                    android:id="@+id/emailidedit"  />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <EditText
                    android:layout_width="match_parent"
                    android:hint="@string/address"
                    android:layout_height="wrap_content"
                    android:maxLines="@string/Button11"
                    android:textSize="15sp"
                    android:id="@+id/addressedit"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890_-()@./#* "/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <EditText
                    android:layout_width="match_parent"
                    android:hint="@string/pincode"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:id="@+id/pincodeedit"
                    android:digits="1234567890"
                    android:maxLength="@string/Button7"
                    android:inputType="number"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginLeft="4dp"
                android:layout_centerVertical="true"
                android:hint="@string/date_of_birth"/>
            <TextView
                android:id="@+id/dobedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:hint="Select date"
                style="@style/Widget.AppCompat.Spinner.Underlined"/>

            <LinearLayout
                android:layout_width="match_parent" android:gravity="center"
                android:layout_height="match_parent" android:padding="5dp"
                android:background="#ffffff"
                android:elevation="2dp"
                android:layout_margin="2dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/loyalty_points"
                    android:textColor="@color/red"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content" android:gravity="center"
                        android:layout_height="match_parent" android:id="@+id/total_points"
                        android:text="@string/Button13"/>
                    <TextView
                        android:layout_width="wrap_content" android:gravity="center"
                        android:layout_height="match_parent"
                        android:text=" ("/>
                    <TextView
                        android:layout_width="wrap_content" android:gravity="center" android:id="@+id/rs"
                        android:layout_height="match_parent"
                        android:text="@string/Rs_"/>
                    <TextView
                        android:layout_width="wrap_content" android:gravity="center"
                        android:layout_height="match_parent" android:id="@+id/total_amount"
                        android:text="@string/Button13"/>
                    <TextView
                        android:layout_width="wrap_content" android:gravity="center"
                        android:layout_height="match_parent"
                        android:text=")"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>