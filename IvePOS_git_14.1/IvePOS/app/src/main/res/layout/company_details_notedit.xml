<LinearLayout
    android:layout_width="320dp"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="#e6e6e6"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent" android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:background="#e6e6e6"
        android:layout_marginBottom="5dp">
        <ImageButton
            android:id="@+id/btncancel"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/light_black_click"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/subscription_prompt_cancel"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/nameedit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/company_details"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/btncancel"
            android:layout_toLeftOf="@+id/btnsave"
            android:textSize="18sp"
            android:textStyle="bold"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="match_parent" android:paddingLeft="10dp"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.Design.Hint" android:textColor="@color/ColorAccent"
                android:layout_centerVertical="true"
                android:text="@string/company_name"/>
            <TextView
                android:layout_width="match_parent" android:padding="10dp"
                android:maxLines="@string/Button9"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:nextFocusDown="@+id/nameedit"
                android:id="@+id/company_name"/>

            <TextView
                android:layout_width="match_parent" android:paddingLeft="10dp"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.Design.Hint" android:textColor="@color/ColorAccent"
                android:layout_centerVertical="true"
                android:text="@string/store_name"/>
            <TextView
                android:layout_width="match_parent" android:padding="10dp"
                android:maxLines="@string/Button9"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:nextFocusDown="@+id/nameedit"
                android:id="@+id/store_name"/>

            <TextView
                android:layout_width="match_parent" android:paddingLeft="10dp"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.Design.Hint" android:textColor="@color/ColorAccent"
                android:layout_centerVertical="true"
                android:text="@string/device_name"/>
            <TextView
                android:layout_width="match_parent" android:padding="10dp"
                android:maxLines="@string/Button9"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:nextFocusDown="@+id/nameedit"
                android:id="@+id/device_name"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>