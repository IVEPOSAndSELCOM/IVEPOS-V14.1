            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">
            <ImageButton
                android:id="@+id/quantitydecrease"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content" android:textSize="18sp"
                android:layout_height="62dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                style="@android:style/Widget.DeviceDefault.Light.Button"
                android:src="@drawable/ic_remove_black_24dp"
                android:text="-"
                android:textColor="#ffffff"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/quantityadd"
                android:layout_toRightOf="@+id/quantitydecrease">
                <EditText
                    android:id="@+id/displayquantity" android:textColor="#000000"
                    android:layout_width="match_parent" android:singleLine="true"
                    android:layout_height="62dp"
                    android:textSize="18sp" android:inputType="numberDecimal"
                    android:textStyle="bold"
                    android:text="@string/_90"
                    android:selectAllOnFocus="true"
                    android:imeOptions="actionGo"
                    android:gravity="center"
                    android:padding="16dp"/>
            </LinearLayout>
            <ImageButton
                android:id="@+id/quantityadd"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content" android:textSize="18sp"
                android:layout_height="62dp"
                style="@android:style/Widget.DeviceDefault.Light.Button"
                android:src="@drawable/ic_add_black_24dp"
                android:text="+"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:textColor="#ffffff"
                android:textStyle="bold"/>
