<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    >
    <ImageView
        android:id="@+id/bhimupi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bhimupi"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:background="@android:color/white"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pay_using_any_upi_app"
        android:textStyle="bold"
        android:layout_gravity="center"
     />

    <ImageView
        android:id="@+id/wallet_logos"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:src="@drawable/wallet_logos"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="20dp"

        android:background="@android:color/white"
        android:layout_gravity="left"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:src="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/white"

     />

    <Button
        android:id="@+id/getTxnStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/get_status"
        android:visibility="visible"
        />

    <ImageView
        android:id="@+id/poweredby"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:src="@drawable/poweredby"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:background="@android:color/white"

        />




</LinearLayout>