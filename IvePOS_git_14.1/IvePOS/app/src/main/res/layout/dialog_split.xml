<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/relativeLayout1" android:layout_width="320dp"
    android:layout_height="wrap_content" android:background="#e6e6e6"
    xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent" android:gravity="center_vertical"
        android:layout_height="wrap_content" android:orientation="horizontal" android:background="#e6e6e6">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent" android:gravity="center_vertical"
            android:padding="15dp" android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:textSize="18sp" android:textStyle="bold"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_call_split_black_24dp"
                android:drawablePadding="10dp"
                android:text="@string/split"  />
            <TextView
                android:layout_width="wrap_content" android:text="  ("
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_height="wrap_content"  />
            <TextView
                android:layout_width="wrap_content" android:text="@string/Rs" android:id="@+id/inn"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_height="wrap_content"  />
            <TextView
                android:layout_width="wrap_content" android:id="@+id/splittotalvalue"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content" android:text=")"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_height="wrap_content"  />
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent" android:gravity="center_vertical"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/ic_clear_black_18dp" android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="@drawable/light_black_click"
                android:id="@+id/closetext"
                android:layout_height="match_parent"
                android:layout_gravity="right|center_vertical"/>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp" android:paddingRight="10dp">
        <RadioGroup
            android:layout_width="match_parent" android:id="@+id/splitgroup"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton
                android:layout_width="match_parent" android:id="@+id/btntwo"
                android:layout_height="wrap_content"
                android:text="@string/split_bill_by_2"
                android:textSize="15sp"
                style="@android:style/Widget.DeviceDefault.Light.CompoundButton.RadioButton"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:textColor="#000000"
                android:gravity="left|center_vertical"/>
            <LinearLayout
                android:layout_width="match_parent" android:id="@+id/edittexttwo"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="@string/Button9"
                    android:layout_marginRight="1dp"
                    android:padding="1dp">
                    <EditText
                        android:layout_width="match_parent" android:id="@+id/split21"
                        android:layout_height="wrap_content" android:inputType="number"
                        android:hint="Enter split1" android:selectAllOnFocus="true"
                        style="@android:style/Widget.DeviceDefault.Light.EditText"
                        android:textSize="15sp"
                        android:paddingTop="15dp" android:paddingBottom="15dp"
                        android:paddingLeft="5dp" android:paddingRight="5dp"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="@string/Button9"
                    android:layout_marginLeft="1dp"
                    android:padding="1dp">
                    <TextView
                        android:layout_width="match_parent" android:id="@+id/split22"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:paddingTop="15dp" android:paddingBottom="15dp"
                        android:paddingLeft="5dp" android:paddingRight="5dp"/>
                </FrameLayout>
            </LinearLayout>
            <RadioButton
                android:layout_width="match_parent"
                android:id="@+id/btnthree"
                android:layout_height="wrap_content"
                android:text="@string/split_bill_by_3"
                android:textSize="15sp"
                style="@android:style/Widget.DeviceDefault.Light.CompoundButton.RadioButton"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:textColor="#000000"
                android:gravity="left|center_vertical"/>
            <LinearLayout
                android:layout_width="match_parent" android:id="@+id/edittextthree"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="@string/Button9"
                    android:layout_marginRight="1dp"
                    android:padding="1dp">
                    <EditText
                        android:layout_width="match_parent" android:id="@+id/split31"
                        android:layout_height="wrap_content" android:inputType="number"
                        android:hint="Enter split1" android:selectAllOnFocus="true"
                        android:textSize="15sp"
                        style="@android:style/Widget.DeviceDefault.Light.EditText"
                        android:paddingTop="15dp" android:paddingBottom="15dp"
                        android:paddingLeft="5dp" android:paddingRight="5dp"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="@string/Button9"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:padding="1dp">
                    <EditText
                        android:layout_width="match_parent" android:id="@+id/split32"
                        android:layout_height="wrap_content" android:inputType="number"
                        android:hint="Enter split2" android:selectAllOnFocus="true"
                        android:textSize="15sp"
                        style="@android:style/Widget.DeviceDefault.Light.EditText"
                        android:paddingTop="15dp" android:paddingBottom="15dp"
                        android:paddingLeft="5dp" android:paddingRight="5dp"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="@string/Button9"
                    android:layout_marginLeft="1dp"
                    android:padding="1dp">
                    <TextView
                        android:layout_width="match_parent" android:id="@+id/split33"
                        android:layout_height="wrap_content" android:textColor="#000000"
                        android:textSize="15sp" android:text="@string/Button9"
                        android:paddingTop="15dp" android:paddingBottom="15dp"
                        android:paddingLeft="5dp" android:paddingRight="5dp"/>
                </FrameLayout>
            </LinearLayout>
        </RadioGroup>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent" android:id="@+id/splitclear"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/clear_selection"
        style="@android:style/Widget.DeviceDefault.Light.Button"
        android:padding="15dp"
        android:layout_margin="10dp"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/splitcancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dp"
            android:layout_weight="@string/Button9"
            android:text="@string/subscription_prompt_cancel"
            android:textStyle="bold"
            android:background="@drawable/ok"
            android:padding="10dp"/>
        <Button
            android:id="@+id/splitapply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_weight="@string/Button9"
            android:text="@string/save"
            android:textStyle="bold"
            android:background="@drawable/ok"
            android:padding="10dp"/>
    </LinearLayout>
</LinearLayout>
