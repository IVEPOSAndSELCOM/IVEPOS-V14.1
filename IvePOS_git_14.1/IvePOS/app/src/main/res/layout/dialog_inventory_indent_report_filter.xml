<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/relativeLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:background="#e6e6e6"
    xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical">
    <RelativeLayout
        android:layout_width="320dp" android:gravity="center_vertical"
        android:layout_height="60dp" android:orientation="horizontal" android:background="#e6e6e6">

        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="?android:attr/selectableItemBackground"
            android:id="@+id/closetext"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_vertical"/>
        <LinearLayout
            android:layout_toRightOf="@+id/closetext"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:textSize="18sp" android:textStyle="bold"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:text="@string/filter_menu_empty"  />
        </LinearLayout>

        <Button
            android:id="@+id/quantityapply_filter"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/ok"
            android:text="@string/apply"
            android:textStyle="bold" />

    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingLeft="15dp" android:paddingRight="15dp"
            android:paddingBottom="10dp">
            <RadioGroup
                android:layout_width="match_parent" android:id="@+id/filter_selection"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <RadioButton
                    android:layout_width="match_parent" android:textColor="#000000"
                    android:layout_height="wrap_content" android:id="@+id/working_hours"
                    android:text="@string/working_hours"
                    android:textSize="15sp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"/>

                <RadioButton
                    android:layout_width="match_parent" android:textColor="#000000"
                    android:layout_height="wrap_content" android:id="@+id/custom_time"
                    android:text="@string/custom_time"
                    android:textSize="15sp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.4"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="0dp"
                                android:layout_marginRight="0dp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:id="@+id/relativeLayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="2dp"
                                    android:layout_marginLeft="2dp"
                                    android:layout_marginRight="0.5dp"
                                    android:layout_marginTop="2dp"
                                    android:layout_weight="0.9"
                                    android:background="@drawable/white_click_shape_left_rounded_corners"
                                    android:elevation="2dp">

                                    <TextView
                                        style="@style/TextAppearance.Design.Hint"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:text="@string/from" />

                                    <TextView
                                        android:id="@+id/editText1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@null"
                                        android:ellipsize="end"
                                        android:maxLines="@string/Button9"
                                        android:paddingBottom="3dp"
                                        android:paddingLeft="5dp"
                                        android:paddingRight="5dp"
                                        android:paddingTop="3dp"
                                        android:singleLine="true"
                                        android:text="@string/hiiii"
                                        android:textColor="#000000"
                                        android:textSize="15sp"
                                        android:visibility="gone" />
                                    <!--<ImageView-->
                                    <!--android:layout_width="wrap_content"-->
                                    <!--android:layout_height="wrap_content"-->
                                    <!--android:src="@drawable/ic_arrow_drop_down_black_18dp"-->
                                    <!--android:layout_centerVertical="true"-->
                                    <!--android:layout_alignParentRight="true" />-->

                                    <TextView
                                        android:id="@+id/editText11"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:background="?android:attr/selectableItemBackground"
                                        android:ellipsize="end"
                                        android:gravity="center_vertical"
                                        android:maxLines="@string/Button9"
                                        android:paddingBottom="3dp"
                                        android:paddingLeft="5dp"
                                        android:paddingRight="3dp"
                                        android:paddingTop="13dp"
                                        android:singleLine="true"
                                        android:text="@string/_name"
                                        android:textColor="#000000"
                                        android:textSize="12sp" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="2dp"
                                    android:layout_marginLeft="0.5dp"
                                    android:layout_marginRight="2dp"
                                    android:layout_marginTop="2dp"
                                    android:layout_weight="1.1"
                                    android:background="@drawable/white_click_shape_right_rounded_corners"
                                    android:elevation="2dp">

                                    <TextView
                                        style="@style/TextAppearance.Design.Hint"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:hint="@string/from"
                                        android:visibility="gone" />

                                    <TextView
                                        android:id="@+id/editText_from_day_hide"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@null"
                                        android:ellipsize="end"
                                        android:maxLines="@string/Button9"
                                        android:paddingBottom="3dp"
                                        android:paddingLeft="5dp"
                                        android:paddingRight="5dp"
                                        android:paddingTop="3dp"
                                        android:singleLine="true"
                                        android:text="@string/hiiii"
                                        android:textColor="#000000"
                                        android:textSize="15sp"
                                        android:visibility="gone" />
                                    <!--<ImageView-->
                                    <!--android:layout_width="wrap_content"-->
                                    <!--android:layout_height="wrap_content"-->
                                    <!--android:src="@drawable/ic_arrow_drop_down_black_18dp"-->
                                    <!--android:layout_centerVertical="true"-->
                                    <!--android:layout_alignParentRight="true" />-->

                                    <TextView
                                        android:id="@+id/editText_from_day_visible"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:background="?android:attr/selectableItemBackground"
                                        android:ellipsize="end"
                                        android:gravity="center_vertical"
                                        android:maxLines="@string/Button9"
                                        android:paddingBottom="3dp"
                                        android:paddingLeft="5dp"
                                        android:paddingRight="5dp"
                                        android:paddingTop="13dp"
                                        android:singleLine="true"
                                        android:text="@string/_name"
                                        android:textColor="#000000"
                                        android:textSize="12sp" />

                                </RelativeLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.4"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="0dp"
                                android:layout_marginRight="0dp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="2dp"
                                    android:layout_marginLeft="2dp"
                                    android:layout_marginRight="0.5dp"
                                    android:layout_marginTop="2dp"
                                    android:layout_weight="0.9"
                                    android:background="@drawable/white_click_shape_left_rounded_corners"
                                    android:elevation="2dp">

                                    <TextView
                                        style="@style/TextAppearance.Design.Hint"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:text="@string/To" />

                                    <TextView
                                        android:id="@+id/editText2"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@null"
                                        android:ellipsize="end"
                                        android:gravity="center_vertical"
                                        android:maxLines="@string/Button9"
                                        android:paddingBottom="3dp"
                                        android:paddingLeft="5dp"
                                        android:paddingRight="5dp"
                                        android:paddingTop="3dp"
                                        android:singleLine="true"
                                        android:text="@string/hiii"
                                        android:textColor="#000000"
                                        android:textSize="15sp"
                                        android:visibility="gone" />
                                    <!--<ImageView-->
                                    <!--android:layout_width="wrap_content"-->
                                    <!--android:layout_height="wrap_content"-->
                                    <!--android:src="@drawable/ic_arrow_drop_down_black_18dp"-->
                                    <!--android:layout_centerVertical="true"-->
                                    <!--android:layout_alignParentRight="true"/>-->

                                    <TextView
                                        android:id="@+id/editText22"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:background="?android:attr/selectableItemBackground"
                                        android:ellipsize="end"
                                        android:gravity="center_vertical"
                                        android:maxLines="@string/Button9"
                                        android:paddingBottom="3dp"
                                        android:paddingLeft="5dp"
                                        android:paddingRight="3dp"
                                        android:paddingTop="13dp"
                                        android:singleLine="true"
                                        android:text="@string/_name"
                                        android:textColor="#000000"
                                        android:textSize="12sp" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="2dp"
                                    android:layout_marginLeft="0.5dp"
                                    android:layout_marginRight="2dp"
                                    android:layout_marginTop="2dp"
                                    android:layout_weight="1.1"
                                    android:background="@drawable/white_click_shape_right_rounded_corners"
                                    android:elevation="2dp">

                                    <TextView
                                        style="@style/TextAppearance.Design.Hint"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:hint="@string/To"
                                        android:visibility="gone" />

                                    <TextView
                                        android:id="@+id/editText_to_day_hide"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@null"
                                        android:ellipsize="end"
                                        android:gravity="center_vertical"
                                        android:maxLines="@string/Button9"
                                        android:paddingBottom="3dp"
                                        android:paddingLeft="5dp"
                                        android:paddingRight="5dp"
                                        android:paddingTop="3dp"
                                        android:singleLine="true"
                                        android:text="@string/hiii"
                                        android:textColor="#000000"
                                        android:textSize="15sp"
                                        android:visibility="gone" />
                                    <!--<ImageView-->
                                    <!--android:layout_width="wrap_content"-->
                                    <!--android:layout_height="wrap_content"-->
                                    <!--android:src="@drawable/ic_arrow_drop_down_black_18dp"-->
                                    <!--android:layout_centerVertical="true"-->
                                    <!--android:layout_alignParentRight="true"/>-->

                                    <TextView
                                        android:id="@+id/editText_to_day_visible"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:background="?android:attr/selectableItemBackground"
                                        android:ellipsize="end"
                                        android:gravity="center_vertical"
                                        android:maxLines="@string/Button9"
                                        android:paddingBottom="3dp"
                                        android:paddingLeft="5dp"
                                        android:paddingRight="5dp"
                                        android:paddingTop="13dp"
                                        android:singleLine="true"
                                        android:text="@string/_name"
                                        android:textColor="#000000"
                                        android:textSize="12sp" />

                                </RelativeLayout>
                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

                <RadioButton
                    android:layout_width="match_parent" android:textColor="#000000"
                    android:layout_height="wrap_content" android:id="@+id/all_time"
                    android:text="@string/all_time"
                    android:textSize="15sp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp" />
                <RadioButton
                    android:layout_width="match_parent" android:textColor="#000000"
                    android:layout_height="wrap_content" android:id="@+id/pending_list"
                    android:text="@string/pending_only"
                    android:textSize="15sp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp" />
                <RadioButton
                    android:layout_width="match_parent" android:textColor="#000000"
                    android:layout_height="wrap_content" android:id="@+id/paid_list"
                    android:text="@string/paid_only"
                    android:textSize="15sp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp" />
                <RadioButton
                    android:layout_width="match_parent" android:textColor="#000000"
                    android:layout_height="wrap_content" android:id="@+id/other_dues"
                    android:text="@string/based_on_due_dates_n_expired_till_today"
                    android:textSize="15sp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp" />

                <EditText
                    android:layout_width="match_parent" android:singleLine="true"
                    android:layout_height="wrap_content" android:visibility="gone"
                    android:hint="Enter other reason..." android:id="@+id/otherentry"
                    android:textSize="15sp"
                    android:paddingTop="10dp" android:paddingBottom="10dp"
                    android:paddingLeft="5dp" android:paddingRight="5dp"/>

            </RadioGroup>

        </LinearLayout>
    </ScrollView>

</LinearLayout>

