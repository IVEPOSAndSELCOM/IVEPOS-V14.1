<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp" android:orientation="vertical"
        android:layout_marginRight="8dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sublist_paid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01 Nov 17"
                android:textSize="12sp"
                android:textColor="@color/DarkBlack"/>

            <TextView
                android:id="@+id/sublist_paid2" android:layout_below="@+id/sublist_paid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:09 Am"
                android:textSize="12sp"
                android:textColor="@color/DarkBlack"/>

            <TextView
                android:layout_width="wrap_content" android:id="@+id/sublist_paid3"
                android:layout_height="wrap_content" android:layout_alignParentRight="true"
                android:text="@string/_9999"
                android:textSize="12sp"
                android:textColor="@color/DarkBlack"/>

        </RelativeLayout>



    </LinearLayout>
</LinearLayout>