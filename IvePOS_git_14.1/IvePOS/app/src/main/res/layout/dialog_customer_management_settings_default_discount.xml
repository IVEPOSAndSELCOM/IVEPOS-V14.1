<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/relativeLayout1"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:background="#e6e6e6"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:padding="15dp"
            android:text="@string/discount_default"/>
        <FrameLayout
            android:layout_width="match_parent" android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical">
            <Switch
                android:id="@+id/mySwitch" android:saveEnabled="false"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right|center_vertical"/>

        </FrameLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent" android:orientation="horizontal"
                android:layout_height="wrap_content" android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent" android:id="@+id/def_dis_amount_l"
                        android:layout_height="wrap_content">
                        <EditText
                            android:layout_width="match_parent"
                            android:id="@+id/def_dis_amount"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:maxLines="@string/Button9"
                            android:inputType="number"
                            android:maxLength="@string/Button5"
                            android:hint="Discount eligibility in amount"
                            android:textSize="15sp"
                            android:gravity="center_vertical"/>
                    </com.google.android.material.textfield.TextInputLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical" >

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_height="wrap_content" android:id="@+id/def_dis_value_l"
                            android:layout_width="200dp">

                            <EditText
                                android:layout_width="match_parent"
                                android:textColor="#000000"
                                android:selectAllOnFocus="true"
                                android:id="@+id/def_dis_value"
                                android:hint="@string/subtitle14"
                                android:textSize="15sp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:inputType="numberDecimal" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="bottom"
                            android:layout_marginBottom="0dp"
                            android:layout_marginLeft="0dp"
                            android:layout_marginRight="0dp">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <Spinner
                                    android:id="@+id/rspercent1"
                                    android:entries="@array/discount_type"
                                    android:prompt="@string/choose_discount"
                                    android:layout_width="match_parent"
                                    android:gravity="center"
                                    android:textSize="15sp"
                                    android:paddingLeft="0dp"
                                    android:paddingRight="0dp"
                                    android:paddingBottom="8dp"
                                    android:paddingTop="3dp"
                                    android:textColor="#000000"
                                    android:ellipsize="end"
                                    android:maxLines="@string/Button9"
                                    android:layout_height="wrap_content"
                                    android:text="%"
                                    style="@style/Widget.AppCompat.Spinner.Underlined"/>

                            </RelativeLayout>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/white_rounded_corners"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/note"
                    android:textStyle="bold"
                    android:textColor="#da4336"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/if_eligibility_amount_is_0_or_none_discount_will_be_applied_to_all_the_customer_bills"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/search_content">
                <Button
                    android:layout_width="match_parent" android:id="@+id/cancel"
                    android:layout_height="wrap_content"
                    android:layout_weight="@string/Button9"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:background="@drawable/ok"
                    android:text="@string/subscription_prompt_cancel"
                    android:layout_marginRight="1dp"/>
                <Button
                    android:layout_width="match_parent" android:id="@+id/savetime"
                    android:layout_height="wrap_content"
                    android:layout_weight="@string/Button9"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:background="@drawable/ok"
                    android:text="@string/save"
                    android:layout_marginLeft="1dp"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>