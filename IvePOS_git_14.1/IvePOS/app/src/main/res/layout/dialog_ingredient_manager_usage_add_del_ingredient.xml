    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/white_rounded_corners"
        android:elevation="2dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/custombar_return_wrapper"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/custombar_return"
                android:contentDescription="back"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@drawable/white_click"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_search_black_24dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_toLeftOf="@+id/custombar_del_wrapper"
            android:layout_toStartOf="@+id/custombar_del_wrapper"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="start|center_vertical">
            <EditText
                android:id="@+id/custombar_text"
                android:layout_width="match_parent"
                android:textSize="15sp"
                android:paddingLeft="44dp"
                android:paddingTop="15dp" android:paddingBottom="15dp"
                android:layout_height="wrap_content"
                android:hint="@string/search_for_ingredient"
                android:textColor="#000000"
                android:singleLine="true"
                android:background="#00000000"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"  android:id="@+id/custombar_del_wrapper"
            android:visibility="invisible"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/searchicons_pressed">
            <ImageView
                android:layout_width="wrap_content"
                android:padding="12dp"
                android:contentDescription="clear text"
                android:background="@drawable/white_click"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_clear_grey_24dp" />
        </LinearLayout>

    </RelativeLayout>

    <ListView
        android:id="@+id/list" android:background="#ffffff"
        android:layout_width="match_parent" android:layout_margin="10dp"
        android:layout_height="match_parent" android:elevation="2dp"
        android:choiceMode="multipleChoice"/>

</LinearLayout>