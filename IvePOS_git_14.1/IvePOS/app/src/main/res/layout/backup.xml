<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp" android:paddingBottom="5dp"
            android:paddingLeft="5dp" android:paddingRight="5dp"
            android:background="#e6e6e6">
            <RelativeLayout
                android:id="@+id/greenglow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_backup_green_circle_72dp"/>
                <ImageView
                    android:layout_width="wrap_content" android:id="@+id/circle"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_backup_green_48dp"
                    android:visibility="visible"/>
                <ImageView
                    android:layout_width="wrap_content" android:id="@+id/tick"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_backup_success_green_48dp"
                    android:visibility="invisible"/>
                <ImageView
                    android:layout_width="wrap_content" android:id="@+id/error"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_backup_failure_green_48dp"
                    android:visibility="invisible"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/greenglow"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/app_settingsdata"
                    android:text="@string/app_data_and_settings"
                    android:textSize="15sp"
                    android:checked="true"
                    android:gravity="right|center_vertical" />
                <CheckBox
                    android:layout_width="match_parent"
                    android:textColor="#000000"
                    android:layout_height="wrap_content" android:id="@+id/salesdata"
                    android:text="@string/sales_data" android:checked="true"
                    android:textSize="15sp"
                    android:gravity="left|center_vertical" />

                <Button
                    android:layout_width="match_parent" android:id="@+id/btnrestore"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:padding="15dp"
                    android:layout_centerHorizontal="true"
                    android:drawablePadding="10dp"
                    android:text="@string/backup_now"
                    android:textStyle="bold"
                    android:textColor="#ffffff"/>
            </LinearLayout>

        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#7f7f7f"/>

        <ListView
            android:layout_width="match_parent" android:id="@+id/listView"
            android:layout_height="wrap_content"/>

    </LinearLayout>
<!--    ///restore layout-->
    <LinearLayout
        android:layout_width="wrap_content" android:id="@+id/restore"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:visibility="gone">
        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#7f7f7f"/>
        <LinearLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#e6e6e6"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent" android:gravity="center_vertical"
                android:layout_height="wrap_content" android:orientation="horizontal"
                android:background="#e6e6e6">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_restore_black_24dp"
                        android:padding="15dp"/>
                    <TextView
                        android:layout_width="wrap_content" android:textSize="18sp" android:textStyle="bold" android:textColor="#000000"
                        android:layout_height="wrap_content" android:text="@string/action_restore" android:layout_marginLeft="10dp" />
                </LinearLayout>
                <FrameLayout
                    android:layout_width="match_parent" android:gravity="center_vertical"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="wrap_content" android:src="@drawable/ic_clear_black_18dp" android:paddingLeft="15dp"
                        android:paddingRight="15dp" android:background="@drawable/light_black_click" android:id="@+id/closetext"
                        android:layout_height="match_parent" android:layout_gravity="right|center_vertical"/>
                </FrameLayout>
            </LinearLayout>
            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#e6e6e6"
                android:visibility="visible">
                <LinearLayout
                    android:layout_width="match_parent" android:orientation="vertical"
                    android:layout_height="wrap_content" android:paddingTop="20dp"
                    android:paddingLeft="10dp" android:paddingRight="10dp">
                    <LinearLayout
                        android:layout_width="match_parent" android:orientation="horizontal"
                        android:layout_height="wrap_content" android:gravity="center_vertical">
                        <TextView
                            android:layout_width="105dp"
                            android:text="@string/backup_point"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="180dp" android:background="#ffffff"
                            android:paddingLeft="5dp" android:paddingRight="5dp"
                            android:paddingTop="8dp" android:paddingBottom="8dp"
                            android:id="@+id/editText1"
                            android:text="@string/_14_11_2014_03_30_pm"
                            android:layout_height="wrap_content" android:singleLine="true"
                            android:textSize="15sp" android:hint="Enter item name..."
                            android:layout_marginLeft="10dp" android:ellipsize="end"
                            android:maxLines="@string/Button9"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/greenglow"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">
                        <CheckBox
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/app_settingsdata1"
                            android:text="@string/app_data_and_settings"
                            android:textSize="15sp"
                            android:gravity="left|center_vertical"/>
                        <CheckBox
                            android:layout_width="match_parent" android:textColor="#000000"
                            android:layout_height="wrap_content" android:id="@+id/salesdata1"
                            android:layout_marginTop="10dp"
                            android:text="@string/sales_data"
                            android:textSize="15sp"
                            android:gravity="left|center_vertical" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal">
                            <Button
                                android:layout_width="match_parent" android:id="@+id/cancelside"
                                android:layout_height="wrap_content"
                                android:layout_weight="@string/Button9"
                                android:layout_marginRight="1dp"
                                android:padding="15dp"
                                android:layout_centerHorizontal="true"
                                android:drawablePadding="10dp"
                                android:text="@string/subscription_prompt_cancel"
                                android:textStyle="bold"
                                android:textColor="#ffffff"/>
                            <Button
                                android:layout_width="match_parent" android:id="@+id/restorenow"
                                android:layout_height="wrap_content"
                                android:layout_weight="@string/Button9"
                                android:layout_marginLeft="1dp"
                                android:padding="15dp"
                                android:layout_centerHorizontal="true"
                                android:drawablePadding="10dp"
                                android:text="@string/restore_now"
                                android:textStyle="bold"
                                android:textColor="#ffffff"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>