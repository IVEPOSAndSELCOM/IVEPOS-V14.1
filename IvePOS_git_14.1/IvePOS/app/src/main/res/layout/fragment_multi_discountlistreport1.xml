<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_above="@+id/options_frame">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:weightSum="3.3"
            android:background="#e6e6e6"
            android:paddingTop="3dp"
            android:paddingBottom="3dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="@string/Button9">
                <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:hint="@string/from"-->
                    <!--style="@style/TextAppearance.Design.Hint"-->
                    <!--android:layout_marginLeft="5dp"/>-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/white_rounded_corners"
                        android:elevation="2dp"
                        android:layout_margin="2dp"
                        android:id="@+id/relativeLayout">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="@string/from"
                            style="@style/TextAppearance.Design.Hint"
                            android:layout_marginLeft="5dp"/>

                        <TextView
                            android:layout_width="match_parent" android:text="@string/hiiii"
                            android:background="@null" android:visibility="gone"
                            android:textColor="#000000" android:ellipsize="end"
                            android:paddingLeft="5dp" android:paddingRight="5dp"
                            android:paddingBottom="3dp" android:paddingTop="3dp"
                            android:maxLines="@string/Button9" android:textSize="15sp"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:id="@+id/editText1"/>
                        <!--<ImageView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:src="@drawable/ic_arrow_drop_down_black_18dp"-->
                        <!--android:layout_centerVertical="true"-->
                        <!--android:layout_alignParentRight="true" />-->

                        <TextView
                            android:layout_width="match_parent"
                            android:text="@string/_name"
                            style="@style/Widget.AppCompat.Spinner"
                            android:textColor="#000000" android:ellipsize="end"
                            android:paddingLeft="5dp" android:paddingRight="5dp"
                            android:paddingBottom="3dp" android:paddingTop="13dp"
                            android:maxLines="@string/Button9" android:textSize="15sp"
                            android:layout_height="40dp"
                            android:singleLine="true"
                            android:id="@+id/editText11"/>

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="@string/Button9">
                <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:hint="@string/To"-->
                    <!--style="@style/TextAppearance.Design.Hint"-->
                    <!--android:layout_marginLeft="5dp"/>-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/white_rounded_corners"
                        android:elevation="2dp"
                        android:layout_margin="2dp"
                        android:id="@+id/relativeLayout1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="@string/To"
                            style="@style/TextAppearance.Design.Hint"
                            android:layout_marginLeft="5dp"/>

                        <TextView
                            android:layout_width="match_parent" android:text="@string/hiii" android:visibility="gone"
                            android:background="@null" android:gravity="center_vertical"
                            android:textColor="#000000" android:ellipsize="end"
                            android:paddingLeft="5dp" android:paddingRight="5dp"
                            android:paddingBottom="3dp" android:paddingTop="3dp"
                            android:maxLines="@string/Button9" android:textSize="15sp"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:id="@+id/editText2"/>
                        <!--<ImageView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:src="@drawable/ic_arrow_drop_down_black_18dp"-->
                        <!--android:layout_centerVertical="true"-->
                        <!--android:layout_alignParentRight="true"/>-->

                        <TextView
                            android:layout_width="match_parent" android:text="@string/_name"
                            style="@style/Widget.AppCompat.Spinner"
                            android:gravity="center_vertical"
                            android:textColor="#000000" android:ellipsize="end"
                            android:paddingLeft="5dp" android:paddingRight="5dp"
                            android:paddingBottom="3dp" android:paddingTop="13dp"
                            android:maxLines="@string/Button9" android:textSize="15sp"
                            android:layout_height="40dp"
                            android:singleLine="true"
                            android:id="@+id/editText22"/>

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="@string/Button9">
                <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:hint="Listing"-->
                    <!--style="@style/TextAppearance.Design.Hint"-->
                    <!--android:layout_marginLeft="5dp"/>-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/white_rounded_corners"
                        android:elevation="2dp"
                        android:layout_margin="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Listing"
                            style="@style/TextAppearance.Design.Hint"
                            android:layout_marginLeft="5dp"/>

                        <Spinner
                            android:entries="@array/cancellation"
                            android:prompt="@string/choose_cancellation"
                            android:layout_width="match_parent"
                            android:paddingLeft="0dp" android:paddingRight="0dp"
                            android:paddingBottom="3dp" android:paddingTop="13dp"
                            android:textColor="#000000" android:ellipsize="end"
                            android:maxLines="@string/Button9" android:textSize="15sp"
                            android:layout_height="40dp"
                            android:spinnerStyle="@android:style/Widget.Spinner.DropDown"
                            android:singleLine="true"
                            android:id="@+id/chocolate_spinner"/>
                        <!--<ImageView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:src="@drawable/ic_arrow_drop_down_black_18dp"-->
                        <!--android:layout_centerVertical="true"-->
                        <!--android:layout_alignParentRight="true"/>-->
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <Button
                android:layout_width="0dp" android:id="@+id/okok"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:layout_marginLeft="0dp"
                android:text="@string/go"
                android:textColor="#ffffff"
                android:textStyle="bold"/>
        </LinearLayout>
        <!--<ImageView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:background="#7f7f7f"/>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#e6e6e6"
                android:paddingTop="3dp" android:paddingBottom="3dp"
                android:paddingRight="5dp" android:paddingLeft="5dp">
                <LinearLayout
                    android:id="@+id/total_discount."
                    android:layout_width="wrap_content"
                    android:layout_height="46dp"
                    android:layout_marginLeft="5dp"
                    android:background="#a3e0dc"
                    android:paddingLeft="5dp" android:paddingRight="5dp"
                    android:paddingTop="5dp" android:paddingBottom="5dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/total_discount"
                        android:textSize="15sp" android:paddingRight="5dp"
                        android:textStyle="bold"
                        android:textColor="#000000"/>
                    <TextView
                        android:id="@+id/totaldiscount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:text="@string/Button13"
                        android:textColor="#000000"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/total_discount.">
                    <RelativeLayout
                        android:id="@+id/search_bar"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:orientation="horizontal"
                        android:background="@drawable/white_rounded_corners"
                        android:elevation="2dp"
                        android:layout_margin="2dp"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical">
                        <ImageView
                            android:id="@+id/search_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_search_black_24dp"
                            android:textSize="15sp"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            style="@style/ButtonText"/>
                        <EditText
                            android:id="@+id/searchView"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:background="#ffffff"
                            android:imeOptions="actionSearch"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/search_icon"
                            android:layout_toLeftOf="@+id/delete_icon"
                            android:hint="Search bill no/discount code"
                            android:paddingLeft="10dp" android:paddingRight="10dp"
                            android:paddingTop="5dp" android:paddingBottom="5dp"
                            android:textSize="15sp"
                            android:singleLine="true"/>
                        <ImageView
                            android:id="@+id/delete_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_clear_black_18dp"
                            android:background="@drawable/white_click"
                            android:clickable="true"
                            android:textSize="15sp"
                            android:paddingLeft="10dp" android:paddingRight="10dp"
                            android:paddingTop="5dp" android:paddingBottom="5dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:visibility="visible"
                            style="@style/ButtonText"/>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#7f7f7f"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="8.5"
            android:background="#7f7f7f">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:paddingLeft="5dp" android:paddingRight="5dp"
                android:paddingTop="8dp" android:paddingBottom="8dp"
                android:gravity="start|center_vertical"
                android:background="#e6e6e6"
                android:text="@string/s_no_"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="@string/Button9"
                android:paddingLeft="5dp" android:paddingRight="5dp"
                android:paddingTop="8dp" android:paddingBottom="8dp"
                android:gravity="start|center_vertical"
                android:background="#e6e6e6"
                android:text="@string/date"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="@string/Button9"
                android:paddingLeft="5dp" android:paddingRight="5dp"
                android:paddingTop="8dp" android:paddingBottom="8dp"
                android:gravity="start|center_vertical"
                android:background="#e6e6e6"
                android:text="@string/time_title"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:paddingLeft="5dp" android:paddingRight="5dp"
                android:paddingTop="8dp" android:paddingBottom="8dp"
                android:gravity="start|center_vertical"
                android:background="#e6e6e6"
                android:text="@string/bill_no"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:paddingLeft="5dp" android:paddingRight="5dp"
                android:paddingTop="8dp" android:paddingBottom="8dp"
                android:gravity="start|center_vertical"
                android:background="#e6e6e6"
                android:text="@string/code"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="@string/Button9"
                android:paddingLeft="5dp" android:paddingRight="5dp"
                android:paddingTop="8dp" android:paddingBottom="8dp"
                android:gravity="start|center_vertical"
                android:background="#e6e6e6"
                android:text="@string/subtitle14"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="@string/Button9"
                android:paddingLeft="5dp" android:paddingRight="5dp"
                android:paddingTop="8dp" android:paddingBottom="8dp"
                android:gravity="start|center_vertical"
                android:background="#e6e6e6"
                android:text="@string/sale"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="@string/Button9"
                android:paddingLeft="5dp" android:paddingRight="5dp"
                android:paddingTop="8dp" android:paddingBottom="8dp"
                android:gravity="start|center_vertical"
                android:background="#e6e6e6"
                android:text="@string/subtitle14"
                android:textStyle="bold"/>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#7f7f7f"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/listView"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/options_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#e6e6e6"
        android:visibility="gone"
        android:isScrollContainer="false">

        <RelativeLayout
            android:id="@+id/sales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="@string/Button9"
            android:gravity="center"
            android:padding="8dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_pie_chart_black_24dp"
                android:text="@string/Sales"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="@string/Button9"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_widgets_black_24dp"
                android:text="@string/title2"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="@string/Button9"
            android:gravity="center"
            android:padding="8dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_group_black_24dp"
                android:text="@string/seller"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="@string/Button9"
            android:gravity="center"
            android:padding="8dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_returns_refunds_black_24dp"
                android:text="@string/refund"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/discount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="@string/Button9"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true">

            <LinearLayout
                android:id="@+id/image5"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:background="@drawable/green_shape_circle">
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_local_offer_black_24dp"/>
            </LinearLayout>

            <TextView
                android:layout_below="@+id/image5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/subtitle14"
                android:textColor="#00a99d"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>