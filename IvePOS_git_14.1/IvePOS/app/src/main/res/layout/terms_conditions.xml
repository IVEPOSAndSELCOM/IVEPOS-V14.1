<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="320dp"
    android:layout_height="wrap_content" android:background="#e6e6e6">
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="wrap_content" android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:drawablePadding="10dp"
                android:layout_height="wrap_content"
                android:text="@string/terms_and_conditions"
                android:padding="15dp" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="300dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_height="wrap_content">
                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:text="@string/warning_items_may_be_in_the_tables_n" android:textColor="#000000"-->
                <!--android:textStyle="bold"-->
                <!--android:layout_height="wrap_content" />-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/camera_to_take_the_picture_of_the_items_etc_to_be_attached_with_products_and_to_scan_the_barcodes_n"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="15sp"
                    android:text="@string/contacts_this_app_collects_contact_information_like_number_of_contacts_on_the_device_with_a_phone_number_for_sending_bills_invoices_to_customers_and_without_a_phone_number_n"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="15sp"
                    android:text="@string/storage_this_app_collects_storage_permission_for_saving_reports_in_local_device_storage_n"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="15sp"
                    android:text="@string/location_this_app_collects_location_details_to_verify_your_location_and_current_address_to_ensure_serviceability_and_to_identify_unusual_activity_to_prevent_against_any_fraud_n"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="15sp"
                    android:text="@string/sms_this_app_collects_sms_data_like_sender_names_sms_body_received_time_to_understand_your_income_spending_patterns_and_automatically_fetch_your_expenses_bills_credits_we_do_not_read_any_personal_or_otp_messages_n"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="15sp"
                    android:text="@string/apps_aws_mobileclient_sdk_collects_details_of_your_installed_applications_to_validate_and_authenticate_user_n"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="15sp"
                    android:text="@string/calendar_this_app_collects_event_data_on_your_calendar_for_saving_customer_s_date_of_birth_etc_n"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </ScrollView>

        <!--<TextView-->
        <!--android:layout_width="match_parent" android:gravity="center" android:textColor="#000000"-->
        <!--android:layout_height="wrap_content" android:text="@string/size_116x95_px" android:singleLine="true"/>-->


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent" android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <Button
            android:layout_width="match_parent"
            android:background="@drawable/ok"
            android:id="@+id/agree"
            android:layout_height="wrap_content"
            android:text="@string/agree"
            android:padding="10dp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>