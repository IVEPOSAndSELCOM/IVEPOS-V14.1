<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical" >
  	<LinearLayout
        android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:orientation="horizontal">
    	<RelativeLayout
        android:layout_width="fill_parent" android:layout_height="wrap_content">
        <!-- This is for the info image -->
        <ImageView
            android:id="@+id/imageView1" 
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@android:drawable/ic_menu_info_details" />
        <!-- Title -->
        
        <TextView android:id="@+id/cardsalecustomdlg_LBL_title"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_centerInParent="true"
	        android:textSize="22dip" android:text="@string/card_sale" android:textColor="#343434"
            android:textStyle="bold" android:typeface="sans" />
    	</RelativeLayout>
    </LinearLayout>
    
    <!-- Underline with this bluish color -->
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#00ffff" />
    <!-- The message -->
	<LinearLayout android:layout_width ="fill_parent" android:layout_height = "fill_parent"
     	     android:layout_margin="5dp">
	<TextView android:id="@+id/cardsalecustomdlg_LBL_lblTxStatus"
   		android:textSize="17dp" android:textColor="#777777"
        android:typeface="sans"
   		android:layout_width="100dp" android:layout_height="wrap_content"
       	android:text="@string/status"/>
    <TextView android:id="@+id/cardsalecustomdlg_LBL_TxStatus"
    	android:layout_width="wrap_content" android:layout_height="wrap_content"      
        android:typeface="sans"
        android:textColor="#000000"
        android:textSize="22dp"
        android:text=""/>
    </LinearLayout>
   
  	<LinearLayout android:layout_width ="fill_parent" android:layout_height = "fill_parent"
  	    android:layout_margin="5dp">
     <TextView android:id="@+id/cardsalecustomdlg_LBL_lblAuthNo"
    		android:textSize="17dp" android:textColor="#777777"
        	android:typeface="sans"
        	android:layout_width="100dp" android:layout_height="wrap_content"
            android:text="@string/invoiceno"/>
     <TextView android:id="@+id/cardsalecustomdlg_LBL_AuthNo"
         android:layout_width="wrap_content" android:layout_height="wrap_content"
         android:textColor="#000000"
         android:textSize="22dp"
         android:text=""/>
     </LinearLayout>
 	    		    	
 	 <LinearLayout android:layout_width ="fill_parent" android:layout_height = "fill_parent"
 	     android:layout_margin="7dp">
      <TextView android:id="@+id/cardsalecustomdlg_LBL_lblRRNo"
   		android:textSize="17dp" android:textColor="#777777"
        android:typeface="sans"
       	android:layout_width="100dp" android:layout_height="wrap_content"
        android:text="@string/voucher_no"/>
     <TextView android:id="@+id/cardsalecustomdlg_LBL_RRNo"
         android:layout_width="wrap_content" android:layout_height="wrap_content"
         android:textColor="#000000"
         android:textSize="22dp"
         android:text=""/>
     </LinearLayout>
 	 <LinearLayout android:id="@+id/cardhistory_LNR_buttons"
	    android:orientation="horizontal"
	    android:layout_width="fill_parent" android:layout_height="wrap_content"
	    android:gravity="center_horizontal" android:textColor="#f2f2f2">
	  	<Button android:id="@+id/cardsalecustomdlg_BTN_ok"
		    android:layout_width="100dp" android:layout_height="44dp"
		    android:textColor="#ffffff"
			android:background="@drawable/roundrectblue" android:text="@string/Ok"  android:gravity="center"
			android:typeface="sans" android:layout_marginRight="5dp" android:layout_marginTop="5dp" android:layout_marginBottom="5dp"
			android:textSize="20dp"/>
	   				    
	</LinearLayout>
</LinearLayout>