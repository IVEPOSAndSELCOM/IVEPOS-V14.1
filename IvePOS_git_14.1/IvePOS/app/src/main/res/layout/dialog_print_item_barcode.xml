<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/relativeLayout1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="#e6e6e6"
    xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical">

    <RelativeLayout
        android:layout_width="320dp" android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:background="#e6e6e6"
        android:layout_marginBottom="5dp">

        <ImageButton
            android:id="@+id/btncancel"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/light_black_click"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/print"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/btncancel"
            android:layout_toLeftOf="@+id/refill"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnsave"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:src="@drawable/ic_done_black_24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ok"
            android:textStyle="bold"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/print"/>

    </RelativeLayout>

    <LinearLayout android:focusable="true"
        android:focusableInTouchMode="true" android:layout_width="0px"
        android:layout_height="0px" />


    <LinearLayout
        android:layout_width="match_parent" android:orientation="vertical"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp" android:paddingRight="15dp"
        android:paddingBottom="10dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutcatname_dialog"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:id="@+id/editText1"
                android:selectAllOnFocus="true"
                android:hint="No. of prints"
                android:textSize="15sp" android:inputType="number"
                android:nextFocusDown="@id/editText2"
                android:layout_height="wrap_content"
                android:singleLine="true"/>

        </com.google.android.material.textfield.TextInputLayout>

        <ScrollView
            android:layout_width="match_parent" android:isScrollContainer="false"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/white_click_shape_rounded_corners"
                android:layout_margin="2dp"
                android:elevation="2dp"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content" android:id="@+id/compname"
                    android:layout_height="wrap_content"
                    android:text="@string/company_name" android:maxLength="30" android:ellipsize="end"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:textStyle="bold"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_toLeftOf="@+id/rs"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/item_name" android:maxLength="20" android:ellipsize="end"
                        android:id="@+id/itemname"/>

                    <TextView
                        android:layout_width="wrap_content" android:text="@string/rs" android:id="@+id/rs"
                        android:layout_height="wrap_content" android:layout_toLeftOf="@+id/bar_price"/>
                    <TextView
                        android:layout_width="wrap_content" android:id="@+id/bar_price"
                        android:layout_height="wrap_content" android:layout_toLeftOf="@+id/dd"
                        android:layout_centerVertical="true" android:maxLength="@string/Button7"
                        android:text="@string/price"/>
                    <TextView
                        android:layout_width="wrap_content" android:text="/-"
                        android:layout_height="wrap_content" android:id="@+id/dd"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_marginTop="5dp"
                            android:layout_width="240dp"
                            android:id="@+id/barCodeImage"
                            android:layout_height="48dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:id="@+id/barvalue"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:text="@string/barcode_no"/>

                    </LinearLayout>

                    <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:text="@string/price"/>-->

                </RelativeLayout>


            </LinearLayout>
        </ScrollView>


    </LinearLayout>


</LinearLayout>