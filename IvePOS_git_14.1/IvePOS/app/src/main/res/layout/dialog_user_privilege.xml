            android:saveEnabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingRight="20dp"
            android:layout_gravity="right|center_vertical"
            android:checked="false" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="#ffffff">
        <ImageView
            android:layout_width="wrap_content" android:id="@+id/ima3"
            android:layout_height="wrap_content" android:padding="12dp"
            android:src="@drawable/settings_nocircle_greyscale_24dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:layout_width="match_parent" android:layout_toRightOf="@+id/ima3"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Settings access"
                android:gravity="center"
                android:textSize="15sp"/>
        </LinearLayout>
        <Switch
            android:id="@+id/mySwitch_set"
            android:saveEnabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingRight="20dp"
            android:layout_gravity="right|center_vertical"
            android:checked="false" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="#ffffff">
        <ImageView
            android:layout_width="wrap_content" android:id="@+id/ima4"
            android:layout_height="wrap_content" android:padding="12dp"
