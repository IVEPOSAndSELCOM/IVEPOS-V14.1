            android:layout_gravity="right|center_vertical"
            android:checked="false" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="#ffffff">
        <ImageView
            android:layout_width="wrap_content" android:id="@+id/ima6"
            android:layout_height="wrap_content" android:padding="12dp"
            android:src="@drawable/ingredients_micro_inventory_nocircle_grayscale_24dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:layout_width="match_parent" android:layout_toRightOf="@+id/ima6"
            android:layout_height="wrap_content"
