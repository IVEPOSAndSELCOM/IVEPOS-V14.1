<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/relativeLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#e6e6e6"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="320dp" android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:background="#e6e6e6">
        <ImageButton
            android:id="@+id/btncancel"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/light_black_click"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/subscription_prompt_cancel"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content" android:id="@+id/user"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/action_user"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/btncancel"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <ImageButton
            android:id="@+id/btnsave"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:src="@drawable/ic_done_black_24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ok"
            android:textStyle="bold"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/submit"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="#ffffff">
        <ImageView
            android:layout_width="wrap_content" android:id="@+id/ima"
            android:layout_height="wrap_content" android:padding="12dp"
            android:src="@drawable/ic_returns_refunds_black_24dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:layout_width="match_parent" android:layout_toRightOf="@+id/ima"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content" android:id="@+id/time_dis"
                android:layout_height="wrap_content"
                android:hint="Returns/Refunds access"
                android:gravity="center"
                android:textSize="15sp"/>
        </LinearLayout>
        <Switch
            android:id="@+id/mySwitch_rr"
            android:saveEnabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingRight="20dp"
            android:layout_gravity="right|center_vertical"
            android:checked="false" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="#ffffff">
        <ImageView
            android:layout_width="wrap_content" android:id="@+id/ima1"
            android:layout_height="wrap_content" android:padding="12dp"
            android:src="@drawable/products_nocircle_grayscale_24dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:layout_width="match_parent" android:layout_toRightOf="@+id/ima1"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Product and tax access"
                android:gravity="center"
                android:textSize="15sp"/>
        </LinearLayout>
        <Switch
            android:id="@+id/mySwitch_pt"
            android:saveEnabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingRight="20dp"
            android:layout_gravity="right|center_vertical"
            android:checked="false" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="#ffffff">
        <ImageView
            android:layout_width="wrap_content" android:id="@+id/ima2"
            android:layout_height="wrap_content" android:padding="12dp"
            android:src="@drawable/reports_nocircle_greysacle_24dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:layout_width="match_parent" android:layout_toRightOf="@+id/ima2"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">
