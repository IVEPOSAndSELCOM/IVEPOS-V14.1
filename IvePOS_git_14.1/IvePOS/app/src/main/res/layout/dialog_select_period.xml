<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp" android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent" android:orientation="horizontal"
        android:layout_height="wrap_content" android:gravity="center_vertical" android:background="#ffffff">


        <LinearLayout
            android:layout_width="264dp"
            android:layout_height="match_parent" android:gravity="left|center_vertical">
            <TextView
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title18"
                android:textColor="#000000"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:paddingLeft="20dp"
                android:singleLine="true"
                android:background="#00000000"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent" android:id="@+id/linearLayout" android:background="#ffffff"
        android:layout_height="wrap_content" android:minHeight="200dp"
        android:orientation="vertical">
        <RadioGroup
            android:layout_width="match_parent" android:id="@+id/filter_selection"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingLeft="10dp">

            <RadioButton
                android:layout_width="match_parent" android:textColor="#000000"
                android:layout_height="wrap_content" android:id="@+id/working_hours"
                android:text="@string/working_hours_n_today"
                android:textSize="15sp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"/>

            <RadioButton
                android:layout_width="match_parent" android:textColor="#000000"
                android:layout_height="wrap_content" android:id="@+id/this_week"
                android:text="@string/this_week"
                android:textSize="15sp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp" />
            <RadioButton
                android:layout_width="match_parent" android:textColor="#000000"
                android:layout_height="wrap_content" android:id="@+id/this_month"
                android:text="@string/this_month"
                android:textSize="15sp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp" />

            <RadioButton
                android:layout_width="match_parent" android:textColor="#000000"
                android:layout_height="wrap_content" android:id="@+id/this_year"
                android:text="@string/this_year"
                android:textSize="15sp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"/>

            <RadioButton
                android:layout_width="match_parent" android:textColor="#000000"
                android:layout_height="wrap_content" android:id="@+id/all_time"
                android:text="@string/all_time"
                android:textSize="15sp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp" />
            <RadioButton
                android:layout_width="match_parent" android:textColor="#000000"
                android:layout_height="wrap_content" android:id="@+id/dialog_custom"
                android:text="@string/custom"
                android:textSize="15sp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp" />


        </RadioGroup>
    </LinearLayout>
</LinearLayout>
