<LinearLayout
    android:layout_width="320dp"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="#e6e6e6"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent" android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:background="#e6e6e6"
        android:layout_marginBottom="5dp">
        <ImageButton
            android:id="@+id/canceledit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/light_black_click_shape_rounded_corners"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:text="@string/subscription_prompt_cancel"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center" android:layout_marginLeft="10dp"
            android:text="@string/Pay" android:layout_toRightOf="@+id/canceledit"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:textStyle="bold"/>


        <ImageButton
            android:id="@+id/okedit_bank" android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/ic_print_black_24dp"
            android:layout_toLeftOf="@+id/okedit_pay"
            android:layout_centerVertical="true"
            android:background="@drawable/green_click_shape_rounded_corners"
            android:textStyle="bold"
            android:padding="10dp"
            android:text="@string/save"/>
        <ImageButton
            android:id="@+id/okedit_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/ic_done_black_24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/green_click_shape_rounded_corners"
            android:textStyle="bold"
            android:padding="10dp"
            android:text="@string/save"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/date_and_time" android:paddingLeft="4dp"
                    style="@style/TextAppearance.Design.Hint"/>
                <LinearLayout
                    android:layout_width="match_parent" android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">
                    <TextView
                        android:layout_width="match_parent" android:text="@string/_01nov17" style="@style/Widget.AppCompat.Spinner.Underlined"
                        android:layout_height="wrap_content" android:layout_weight="@string/Button9"
                        android:textSize="15sp"
                        android:id="@+id/editText11"/>

                    <TextView
                        android:layout_width="match_parent" android:text="@string/hiiii"
                        android:background="@null" android:visibility="gone"
                        android:textColor="#000000" android:ellipsize="end"
                        android:paddingLeft="5dp" android:paddingRight="5dp"
                        android:paddingBottom="3dp" android:paddingTop="3dp"
                        android:maxLines="@string/Button9" android:textSize="15sp"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:id="@+id/editText1"/>


                    <TextView
                        android:layout_width="match_parent" android:text="@string/_12_00_am" style="@style/Widget.AppCompat.Spinner.Underlined"
                        android:layout_height="wrap_content" android:layout_weight="@string/Button9"
                        android:textSize="15sp"
                        android:id="@+id/editText_from_day_visible"/>

                    <TextView
                        android:layout_width="match_parent" android:text="@string/hiiii"
                        android:background="@null" android:visibility="gone"
                        android:textColor="#000000" android:ellipsize="end"
                        android:paddingLeft="5dp" android:paddingRight="5dp"
                        android:paddingBottom="3dp" android:paddingTop="3dp"
                        android:maxLines="@string/Button9" android:textSize="15sp"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:id="@+id/editText_from_day_hide"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent" android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp">



                <com.google.android.material.textfield.TextInputLayout
                    android:layout_height="wrap_content" android:id="@+id/payyy"
                    android:layout_width="match_parent"
                    android:layout_weight="@string/Button9">

                    <EditText
                        android:layout_width="match_parent"
                        android:hint="@string/Pay"
                        android:inputType="numberDecimal"
                        android:layout_height="wrap_content"
                        android:maxLines="@string/Button9"
                        android:textSize="15sp"
                        android:id="@+id/pay_amount"/>

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>