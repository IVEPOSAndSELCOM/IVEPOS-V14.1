        android:layout_height="wrap_content"
        android:gravity="center" android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/quantitycancel" android:visibility="visible"
            android:layout_width="match_parent" android:layout_weight="@string/Button9"
            android:layout_height="wrap_content"
            android:text="@string/subscription_prompt_cancel"
            android:textStyle="bold" android:layout_marginRight="1dp"
            android:background="@drawable/ok"
            android:padding="10dp"/>
        <Button
            android:id="@+id/quantityremove" android:visibility="visible"
            android:layout_width="match_parent" android:layout_weight="@string/Button9"
            android:layout_height="wrap_content"
            android:text="@string/remove_modifier"
            android:textStyle="bold" android:layout_marginLeft="1dp"
            android:background="@drawable/red_click"
            android:padding="10dp"
            android:textColor="#ffffff"/>
    </LinearLayout>

