<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#e6e6e6">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/change_username_pic"
            android:layout_centerVertical="true" android:id="@+id/itemname"
            android:textSize="18sp" android:layout_toLeftOf="@+id/closetext"
            android:textStyle="bold" android:textColor="#000000"
            android:text="@string/modifier_name"
            android:layout_marginLeft="15dp" />
        <ImageView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_clear_black_18dp" android:padding="15dp"
            android:background="@drawable/light_black_click"
            android:id="@+id/closetext"
            android:layout_gravity="right|center_vertical"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="320dp" android:gravity="center_vertical"
        android:layout_height="wrap_content" android:orientation="horizontal"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:background="#e6e6e6">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">


            <TextView
                android:layout_width="wrap_content" android:id="@+id/itemindivprice"
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:text="@string/modifiername"  />
            <TextView
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:text="@string/x"  />

            <TextView
                android:layout_width="wrap_content" android:id="@+id/itemquan"
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:text="@string/modifierquan"  />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000000"
                    android:textSize="15sp" android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:text="@string/Rs"  />
                <TextView
                    android:layout_width="wrap_content" android:id="@+id/price"
                    android:textColor="#000000"
                    android:textSize="15sp" android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:text="@string/price"  />
            </LinearLayout>

        </LinearLayout>

