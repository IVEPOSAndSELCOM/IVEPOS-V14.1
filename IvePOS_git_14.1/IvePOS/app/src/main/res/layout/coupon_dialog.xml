<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout1"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:background="@color/LightBlack"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="320dp" android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <ImageButton
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/light_black_click"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/subscription_prompt_cancel"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/cancel"
            android:layout_toLeftOf="@+id/pay"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/due"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/coupon"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/walletpay"
                android:layout_toRightOf="@+id/due"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rupeesym"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/DarkBlack"
                    android:gravity="center"
                    android:text="@string/Rs"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/fulltotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/DarkBlack"
                    android:gravity="center"
                    android:paddingRight="10dp"
                    android:text="@string/_10000"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <ImageButton
            android:id="@+id/pay"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:src="@drawable/ic_done_black_24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ok"
            android:textStyle="bold"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/submit"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/mobikwik"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp">



        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:id="@+id/etmobile_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="left"
                android:textSize="12sp"
                android:hint="@string/phone_no_10_digits"
                android:inputType="number"
                android:maxLength="10"
                android:maxLines="@string/Button9"
                android:imeOptions="actionNext"
                android:nextFocusDown="@id/cust_id_edit" />
            <requestFocus />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:id="@+id/cust_id_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Customer id"
                android:textSize="12sp"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLines="@string/Button9"
                android:nextFocusDown="@id/et_cust_name"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890_-()@. "/>

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/t1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:id="@+id/et_cust_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="left"
                android:textSize="12sp"
                android:hint="@string/customer_name"
                android:maxLines="@string/Button9"
                android:imeOptions="actionNext"
                android:nextFocusDown="@id/et_credit_amt"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890_-()@. " />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/et_credit_num_lay">

            <EditText
                android:id="@+id/et_credit_amt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="left"
                android:textSize="12sp"
                android:hint="Credit Amount"
                android:inputType="numberDecimal"
                android:maxLength="10"
                android:maxLines="@string/Button9"
                android:imeOptions="actionNext"
                android:nextFocusDown="@id/et_check_num" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent" android:id="@+id/et_check_num_lay"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_check_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="left"
                android:textSize="12sp"
                android:hint="@string/cheque_number"
                android:inputType="numberDecimal"
                android:maxLines="@string/Button9"
                android:imeOptions="actionNext"
                android:nextFocusDown="@id/emailidedit"
                android:maxLength="20" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/emailidedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/email_id"
                android:inputType="textEmailAddress"
                android:maxLines="@string/Button9"
                android:textSize="12sp"
                android:imeOptions="actionNext"
                android:nextFocusDown="@+id/addressedit" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/addressedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/address"
                android:textSize="12sp"
                android:maxLines="@string/Button11"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890_-()@./#* "/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/pincodeedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/pincode"
                android:textSize="12sp"
                android:digits="1234567890"
                android:maxLength="@string/Button7"
                android:inputType="number"/>
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="#ffffff"
            android:elevation="2dp"
            android:layout_margin="2dp"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:padding="5dp"
                android:layout_weight="@string/Button9"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/loyalty_points"
                    android:textColor="@color/red"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content" android:gravity="center"
                        android:layout_height="match_parent" android:id="@+id/total_points"
                        android:text="@string/Button13"/>
                    <TextView
                        android:layout_width="wrap_content" android:gravity="center"
                        android:layout_height="match_parent"
                        android:text=" ("/>
                    <TextView
                        android:layout_width="wrap_content" android:gravity="center"
                        android:layout_height="match_parent" android:id="@+id/inn"
                        android:text="@string/Rs_"/>
                    <TextView
                        android:layout_width="wrap_content" android:gravity="center"
                        android:layout_height="match_parent" android:id="@+id/total_amount"
                        android:text="@string/Button13"/>
                    <TextView
                        android:layout_width="wrap_content" android:gravity="center"
                        android:layout_height="match_parent"
                        android:text=")"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent" android:layout_weight="@string/Button9"
                android:layout_height="wrap_content"
                android:gravity="right">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:layout_width="wrap_content" android:id="@+id/redeem_loyal_point"
                        android:layout_height="wrap_content" android:visibility="gone"
                        android:text="@string/redeem"
                        android:textColor="#ffffff"
                        android:background="@drawable/red_click_shape_rounded_corners"/>
                    <TextView
                        android:id="@+id/applied" android:visibility="gone"
                        android:layout_width="wrap_content" android:gravity="center"
                        android:layout_height="wrap_content" android:textColor="@color/ColorPrimary"
                        android:text="@string/applied_nclick_tick_button_to_continue"/>
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>