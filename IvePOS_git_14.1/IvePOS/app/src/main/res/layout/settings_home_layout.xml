<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent" android:id="@+id/action"
        android:layout_height="match_parent" android:orientation="vertical">

        <RelativeLayout
            android:background="@color/ColorPrimary"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize">

            <ImageView
                android:layout_width="wrap_content" android:id="@+id/leftarrow"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:text="@string/back"
                android:background="?android:attr/actionBarItemBackground"
                android:src="@drawable/ic_arrow_back_black_24dp"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recovery_settings"
                android:textColor="@color/black"
                android:layout_toLeftOf="@+id/gotomainpage"
                android:layout_toRightOf="@+id/leftarrow"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:paddingLeft="16dp"
                android:textSize="18sp"
                android:textStyle="bold"/>

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingLeft="20dp"
                        android:textStyle="bold"
                        android:text="@string/bluetooth_printer_auto_connect"
                        android:textSize="12sp"
                        android:layout_alignParentTop="true" />
                    <Spinner
                        android:id="@+id/auto_connect"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/auto_stockk"
                        android:paddingTop="32dp"
                        android:paddingLeft="12dp"
                        android:paddingBottom="10dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:textColor="#000000" android:ellipsize="end"
                        android:maxLines="@string/Button9" android:textSize="15sp"
                        android:singleLine="true"
                        android:spinnerMode="dialog"/>
                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e6e6e6"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/syncnow"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingLeft="20dp"
                android:paddingBottom="20dp"
                android:textStyle="bold"
                android:text="@string/action_syncnow"
                android:textSize="12sp"
                android:layout_alignParentTop="true"
                android:background="?android:attr/selectableItemBackground"/>
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e6e6e6"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/signout"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingLeft="20dp"
                android:paddingBottom="20dp"
                android:textStyle="bold"
                android:text="@string/signout"
                android:textSize="12sp"
                android:layout_alignParentTop="true"
                android:background="?android:attr/selectableItemBackground"/>
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">
        <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/progressbar1" android:background="#004165"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_centerInParent="true"
            card_view:cardCornerRadius="80dp"
            android:visibility="visible"
            >

            <!--       <ProgressBar
                    android:id="@+id/circle1"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@android:color/white"
                    android:progressBackgroundTint="@android:color/black"
                    android:visibility="gone"
                    />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/progress_text1" android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/syncing_now" />

                    <ProgressBar
                        android:id="@+id/updatebar"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="120dp"
                        android:layout_height="8dp"
                        android:layout_margin="5dp"
                        android:progressDrawable="@drawable/progress_drawable" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ProgressBar
                            style="?android:attr/progressBarStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true" />

                        <TextView
                            android:id="@+id/tv_perc" android:textColor="#004165"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:textSize="12sp"
                            android:text="@string/_0Per" />
                    </RelativeLayout>

                </LinearLayout>


                <TextView
                    android:id="@+id/tv_salesdata"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@string/sales_data"
                    android:visibility="gone" />

                <ProgressBar
                    android:id="@+id/updatebarsales"
                    style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:visibility="gone" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>


</LinearLayout>