<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout1"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:background="#e6e6e6"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="320dp" android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:background="#e6e6e6"
        android:layout_marginBottom="5dp">

        <ImageButton
            android:id="@+id/btncancel"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/light_black_click"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/subscription_prompt_cancel"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content" android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/btncancel"
            android:text="@string/title16"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <RelativeLayout
            android:layout_width="match_parent" android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/btncancel" android:id="@+id/header"
            android:layout_toLeftOf="@+id/refill"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:id="@+id/btndelete"
                android:layout_toLeftOf="@+id/btnsave"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:text="@string/delete"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textStyle="bold"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/btnsave"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:src="@drawable/ic_done_black_24dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ok"
                android:textStyle="bold"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="@string/save"/>
        </RelativeLayout>


    </RelativeLayout>

    <LinearLayout android:focusable="true"
        android:focusableInTouchMode="true" android:layout_width="0px"
        android:layout_height="0px" />


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#e6e6e6"
        android:isScrollContainer="false"
        android:visibility="visible">
        <RelativeLayout
            android:layout_width="match_parent" android:orientation="vertical"
            android:layout_height="wrap_content" android:gravity="center_vertical"
            android:paddingLeft="15dp" android:paddingRight="15dp"
            android:paddingBottom="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="6dp"
                android:layout_centerInParent="true"
                android:id="@+id/progressbar"
                android:visibility="gone">

                <!--<ProgressBar-->
                    <!--android:id="@+id/circle"-->
                    <!--style="?android:attr/progressBarStyleLarge"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_alignParentTop="true"-->
                    <!--android:layout_centerHorizontal="true" />-->

                <ProgressBar
                    android:layout_width="wrap_content" android:visibility="visible"
                    android:layout_height="wrap_content" android:id="@+id/circle"
                    android:layout_below="@+id/imageView"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent" android:orientation="vertical"
                android:layout_height="match_parent"
                android:elevation="6dp"
                android:layout_centerInParent="true"
                android:id="@+id/content"
                android:visibility="visible">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layouttaxname_dialog"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">

                    <EditText
                        android:layout_width="match_parent"
                        android:id="@+id/editText1"
                        android:selectAllOnFocus="true"
                        android:hint="Tax name*"
                        android:textSize="15sp"
                        android:digits="ABCDEFGHIJLKMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"
                        android:nextFocusDown="@id/editText1_HSN"
                        android:layout_height="wrap_content"
                        android:singleLine="true"/>

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layoutHSNname_dialog" android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">

                    <EditText
                        android:layout_width="match_parent"
                        android:id="@+id/editText1_HSN"
                        android:selectAllOnFocus="true"
                        android:hint="@string/hsn_code"
                        android:textSize="15sp"
                        android:nextFocusDown="@id/editText2"
                        android:layout_height="wrap_content"
                        android:singleLine="true"/>

                </com.google.android.material.textfield.TextInputLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:id="@+id/layoutvalue_dialog"
                        android:layout_toLeftOf="@+id/barcode_print">

                        <EditText
                            android:layout_width="match_parent"
                            android:id="@+id/editText2"
                            android:hint="Tax value"
                            android:imeOptions="actionDone"
                            android:textSize="15sp"
                            android:inputType="numberDecimal"
                            android:selectAllOnFocus="true"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:nextFocusDown="@id/discountvalue1"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/barcode_print"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_margin="2dp"
                        android:text="%"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/light_black_click_shape_rounded_corners"/>

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent" android:visibility="gone"
                    android:orientation="vertical" android:id="@+id/select_items"
                    android:layout_weight="@string/Button9"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:paddingLeft="4dp"
                        android:textColor="#000000"
                        android:hint="@string/item_tax"
                        android:textSize="12sp"
                        android:layout_height="wrap_content" />
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content"
                            android:id="@+id/clicktax">
                            <TextView
                                android:layout_width="match_parent"
                                android:textColor="#000000"
                                android:ellipsize="end"
                                android:maxLines="@string/Button9"
                                android:textSize="15sp"
                                android:layout_height="wrap_content"
                                style="@style/Widget.AppCompat.Spinner.Underlined"
                                android:id="@+id/tax"/>

                        </LinearLayout>
                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/mySwitch"
                    android:gravity="center_vertical"

                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:paddingLeft="4dp"
                        android:layout_marginBottom="8dp"
                        android:textColor="#000000"
                        android:hint="@string/type"
                        android:textSize="12sp"
                        android:layout_height="wrap_content" />
                    <RadioGroup
                        android:layout_width="match_parent" android:id="@+id/radioGroup1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <RadioButton
                            android:id="@+id/btnglobal" android:layout_weight="@string/Button9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/globaltax"
                            android:padding="15dp"
                            android:textColor="#000000"
                            android:gravity="center_vertical"/>

                        <RadioButton
                            android:id="@+id/btnitem" android:layout_weight="@string/Button9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/itemtax"
                            android:padding="15dp"
                            android:textColor="#000000"
                            android:gravity="center_vertical"/>
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent" android:id="@+id/tax_seletion"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/white_click_shape_rounded_corners"
                    android:elevation="2dp" android:paddingLeft="6dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="2dp">
                    <!--<CheckBox-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content" android:id="@+id/select_dine_in"-->
                    <!--android:text="@string/dine_in_nospace"-->
                    <!--android:textSize="15sp"-->
                    <!--android:checked="true"-->
                    <!--android:gravity="right|center_vertical" />-->
                    <CheckBox
                        android:layout_width="match_parent"
                        android:textColor="#000000"
                        android:paddingLeft="4dp" android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:layout_height="wrap_content" android:id="@+id/select_dine_in"
                        android:text="@string/general_nospace" android:checked="true"
                        android:textSize="15sp"
                        android:gravity="left|center_vertical" />
                    <CheckBox
                        android:layout_width="match_parent" android:visibility="gone"
                        android:textColor="#000000"
                        android:paddingLeft="4dp" android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:layout_height="wrap_content" android:id="@+id/select_take_away"
                        android:text="@string/dine_in_nospace" android:checked="true"
                        android:textSize="15sp"
                        android:gravity="left|center_vertical" />
                    <CheckBox
                        android:layout_width="match_parent"
                        android:textColor="#000000"
                        android:paddingLeft="4dp" android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:layout_height="wrap_content" android:id="@+id/select_home_delivery"
                        android:text="@string/home_delivery_nospace" android:checked="true"
                        android:textSize="15sp"
                        android:gravity="left|center_vertical" />
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>
</LinearLayout>
