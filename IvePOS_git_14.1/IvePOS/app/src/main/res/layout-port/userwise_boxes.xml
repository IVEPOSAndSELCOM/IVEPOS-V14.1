<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableLayout
        android:id="@+id/tabla_cuerpo"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="7.5">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.4"
                
                android:paddingLeft="5dp" android:paddingRight="5dp"
                android:paddingTop="6dp" android:paddingBottom="6dp"
                android:gravity="start|center_vertical"
                android:id="@+id/sno"
                android:textSize="12sp"
                android:text="@string/textview"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.3"
                
                android:paddingLeft="5dp" android:paddingRight="5dp"
                android:paddingTop="6dp" android:paddingBottom="6dp"
                android:gravity="start|center_vertical"
                android:id="@+id/username"
                android:textSize="12sp"
                android:text="@string/textview"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.9">
                <TextView
                    android:layout_width="wrap_content" android:layout_height="match_parent"
                    android:paddingLeft="5dp" android:paddingRight="3dp"
                    android:paddingTop="6dp" android:paddingBottom="6dp"
                    android:textSize="12sp" android:visibility="gone" android:id="@+id/inn"
                    android:gravity="center_vertical"
                    android:text="@string/insert"/>
                <TextView
                    android:layout_width="match_parent" android:layout_height="match_parent"
                    android:paddingLeft="5dp" android:paddingRight="5dp"
                    android:paddingTop="6dp" android:paddingBottom="6dp"
                    android:gravity="start|center_vertical"
                    android:id="@+id/sales"
                    android:textSize="12sp"
                    android:text="@string/subtitle14"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.9"
                android:gravity="end|center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content" android:layout_height="match_parent"
                    android:paddingLeft="5dp" android:paddingRight="3dp"
                    android:paddingTop="6dp" android:paddingBottom="6dp"
                    android:id="@+id/salesper"
                    android:textSize="12sp"
                    android:text="@string/_99_99"/>
                <!--<TextView-->
                    <!--android:layout_width="wrap_content" android:layout_height="match_parent"-->
                    <!--android:paddingRight="5dp"-->
                    <!--android:paddingTop="6dp" android:paddingBottom="6dp"-->
                    <!--android:gravity="center_vertical"-->
                    <!--android:textSize="12sp"-->
                    <!--android:text="%"/>-->
            </LinearLayout>
        </TableRow>
    </TableLayout>
</LinearLayout>
