<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#e6e6e6"
                android:padding="3dp">
                <LinearLayout
                    android:id="@+id/records_no."
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#a3e0dc"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:layout_margin="2dp"
                    android:elevation="2dp"
                    android:layout_centerVertical="true"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Customers"
                        android:textColor="#000000"
                        style="@style/TextAppearance.Design.Hint"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/count"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:text="@string/Button13"
                        android:textColor="#000000"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/feedback_rating"
                    android:layout_toRightOf="@+id/records_no."
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#a3e0dc"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:layout_margin="2dp"
                    android:elevation="2dp"
                    android:layout_centerVertical="true"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/approval_rating"
                        android:textColor="#000000"
                        style="@style/TextAppearance.Design.Hint"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:id="@+id/rating"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:text="@string/Button13"
                            android:textColor="#000000"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:text="%"
                            android:textColor="#000000"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/feedback_rating">
                    <RelativeLayout
                        android:id="@+id/search_bar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:background="@drawable/white_rounded_corners"
                        android:elevation="2dp"
                        android:layout_margin="2dp"
                        android:gravity="center_vertical"
                        android:layout_toLeftOf="@+id/records_no.">
                        <ImageView
                            android:id="@+id/search_icon" android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_search_black_24dp"
                            android:textSize="15sp"
                            android:paddingLeft="5dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            style="@style/ButtonText"/>
                        <EditText
                            android:id="@+id/searchView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/white_rounded_corners"
                            android:imeOptions="actionSearch"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            android:layout_toLeftOf="@+id/delete_icon"
                            android:hint="Search Name/phone/Cust. id"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textSize="12sp"
                            android:singleLine="true"/>
                        <ImageView
                            android:id="@+id/delete_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_clear_black_18dp"
                            android:background="@drawable/white_click"
                            android:clickable="true"
                            android:textSize="15sp"
                            android:paddingLeft="10dp" android:paddingRight="10dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:visibility="visible"
                            style="@style/ButtonText"/>
                    </RelativeLayout>
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/septum"
            android:layout_below="@+id/header_below"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#7f7f7f"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                android:layout_width="wrap_content" android:visibility="visible"
                android:layout_height="wrap_content" android:id="@+id/proceed_button"
                android:layout_below="@+id/imageView"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_centerHorizontal="true"/>

            <LinearLayout
                android:layout_width="match_parent" android:orientation="vertical"
                android:layout_height="wrap_content" android:id="@+id/rela"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/list_header"
                    android:layout_below="@+id/ascdesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#e6e6e6">

                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp">

                        <TextView
                            android:layout_width="wrap_content" android:id="@+id/cust_idd"
                            android:layout_height="wrap_content"
                            android:maxLines="@string/Button9"
                            android:lines="@string/Button9"
                            android:ellipsize="end"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:gravity="start|center_vertical"
                            android:textSize="12sp"
                            android:text="@string/cust_id"/>

                        <TextView
                            android:layout_width="wrap_content" android:id="@+id/name"
                            android:layout_height="wrap_content"
                            android:lines="@string/Button10"
                            android:maxLines="@string/Button10"
                            android:ellipsize="end"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:textSize="12sp"
                            android:gravity="start"
                            android:text="@string/name_nospace"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="@string/Button9"
                        android:orientation="vertical"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp">
                        <TextView
                            android:layout_width="wrap_content" android:id="@+id/idd"
                            android:layout_height="match_parent" android:visibility="gone"
                            android:gravity="start|center_vertical"
                            android:textSize="12sp"
                            android:text="@string/No_"/>

                        <TextView
                            android:layout_width="wrap_content" android:id="@+id/address"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:textSize="12sp"
                            android:gravity="start|center_vertical"
                            android:text="@string/address"/>

                        <TextView
                            android:layout_width="wrap_content" android:id="@+id/pincode"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:textSize="12sp"
                            android:gravity="start|center_vertical"
                            android:text="@string/pincode"/>

                        <TextView
                            android:layout_width="wrap_content" android:id="@+id/phone"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:textSize="12sp"
                            android:gravity="start|center_vertical"
                            android:text="@string/settext83"/>

                        <TextView
                            android:layout_width="wrap_content" android:id="@+id/emailid"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:textSize="12sp"
                            android:gravity="start|center_vertical"
                            android:text="@string/email"/>
                    </LinearLayout>

