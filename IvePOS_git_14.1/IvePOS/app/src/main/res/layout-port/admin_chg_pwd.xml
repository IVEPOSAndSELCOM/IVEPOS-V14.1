<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent" android:layout_weight="@string/Button9"
        android:layout_height="match_parent" android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:id="@+id/masteradmin">
                <ImageView
                    android:layout_width="wrap_content" android:src="@drawable/ic_madmin_black_24dp"
                    android:layout_height="wrap_content" android:id="@+id/imageView"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/master_admin" android:layout_toRightOf="@+id/imageView"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textSize="15sp"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e6e6e6"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent" android:background="?android:attr/selectableItemBackground"
                android:layout_height="wrap_content"  android:id="@+id/localadmin"
                android:padding="20dp">
                <ImageView
                    android:layout_width="wrap_content" android:src="@drawable/ic_ladmin_black_24dp"
                    android:layout_height="wrap_content" android:id="@+id/imageView1" />
                <TextView
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:text="@string/local_admin" android:layout_toRightOf="@+id/imageView1"
                    android:layout_marginLeft="20dp"
                    android:textSize="15sp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true" />
            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>

