<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:background="#e6e6e6">
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/masteradmin"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:layout_weight="@string/Button9"
            android:gravity="center"
            android:padding="6dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/green_shape_circle">

                <ImageView
                    android:src="@drawable/ic_madmin_black_24dp"
                    android:layout_width="18dp"
                    android:layout_height="18dp"/>

            </LinearLayout>


            <TextView
            android:text="@string/master_admin"
            android:textColor="@color/ColorPrimary"
                android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent" android:id="@+id/localadmin"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:orientation="vertical"
            android:background="?android:attr/selectableItemBackground"
            android:layout_weight="@string/Button9"
            android:gravity="center_vertical">
            <ImageView
                android:src="@drawable/ic_ladmin_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
            <TextView
            android:text="@string/local_admin"
            android:textColor="#666666"
                android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/madmin_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/madin_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_madmin_crown_green_36dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="8dp"
                        android:layout_alignParentTop="true"/>
                    <TextView
                        android:id="@+id/masteradmin_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="@string/master_admin_n_control_panel"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_centerHorizontal="true" />
                    <ImageView
                        android:id="@+id/user_header_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/ic_madmin_black_36dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/masteradmin_text"/>
                    <RelativeLayout
                        android:id="@+id/full_name_pane"
                        android:layout_width="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_below="@+id/user_header_icon"
                        android:layout_margin="10dp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/proceed_button"
                            android:layout_centerVertical="true">

                            <EditText
                                android:id="@+id/editText1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Full name"
                                android:textSize="15sp"
                                android:maxLines="@string/Button9"
                                android:inputType="textPersonName"/>

                        </com.google.android.material.textfield.TextInputLayout>

                        <Button
                            android:id="@+id/proceed_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/save"
                            android:textStyle="bold"
                            android:layout_alignParentRight="true"
                            android:textColor="#ffffff"/>

                    </RelativeLayout>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:background="#7f7f7f"
                        android:layout_below="@+id/full_name_pane"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/madin_header">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="@string/Button9">
                                <Button
                                    android:layout_width="match_parent" android:id="@+id/changeusername"
                                    android:layout_height="wrap_content"
                                    android:drawableTop="@drawable/ic_person_black_24dp"
                                    style="@style/TextAppearance.AppCompat.Button"
                                    android:background="@drawable/green_click_shape_rounded_corners"
                                    android:padding="15dp"
                                    android:layout_margin="10dp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:text="@string/change_username" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="@string/Button9">
                            <Button
                                android:layout_width="match_parent" android:id="@+id/changepassword"
                                android:layout_height="wrap_content"
                                android:drawableTop="@drawable/ic_password_black_24dp"
                                style="@style/TextAppearance.AppCompat.Button"
                                android:background="@drawable/green_click_shape_rounded_corners"
                                android:padding="15dp"
                                android:layout_margin="10dp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:text="@string/title33"/>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/madmin_wrapper"
                android:layout_margin="8dp"
                android:elevation="2dp"
                android:background="@drawable/light_black_rounded_corners">

                <LinearLayout
                    android:id="@+id/re" android:background="?android:attr/selectableItemBackground"
                    android:layout_width="match_parent" android:orientation="horizontal"
                    android:layout_height="wrap_content" android:padding="5dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="wrap_content" android:id="@+id/ima1"
                        android:layout_height="wrap_content"
                        android:src="@drawable/user_nocircle_48dp"/>
                    <RelativeLayout
                        android:layout_width="wrap_content" android:paddingLeft="15dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content" android:id="@+id/text" android:textSize="15sp"
                            android:layout_height="wrap_content" android:textStyle="bold"
                            android:text="@string/user_privileges_console"/>
                        <TextView
                            android:layout_width="wrap_content" android:layout_below="@+id/text"
                            android:layout_height="wrap_content" android:textSize="12sp"
                            android:text="@string/manage_user_permissions"/>
                    </RelativeLayout>

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent" android:id="@+id/ima"
                    android:layout_height="1dp" android:layout_below="@+id/re"
                    android:background="#7f7f7f"/>

                <RelativeLayout
                    android:id="@+id/note_header" android:layout_below="@+id/ima"
                    android:layout_width="match_parent" android:paddingTop="5dp"
                    android:paddingLeft="5dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/note_pic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_description_black_24dp"
                        android:padding="5dp"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/note_pic"
                        android:layout_marginLeft="0dp"
                        android:text="@string/note"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/note_header"
                    android:paddingLeft="10dp" android:paddingRight="5dp"
                    android:paddingBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_1_password_must_contain_4_digits_n2_username_and_password_can_be_changed_separately_and_independent_n3_if_you_forgot_your_login_credentials_contact_software_developer_for_recovery"/>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>