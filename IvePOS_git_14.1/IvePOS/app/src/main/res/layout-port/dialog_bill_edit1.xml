<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:background="#e6e6e6">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:background="#e6e6e6">
        <RelativeLayout
            android:layout_width="match_parent" android:gravity="center_vertical"
            android:layout_height="60dp"
            android:background="#e6e6e6"
            android:layout_marginBottom="5dp">

            <ImageView
                android:id="@+id/closedialog"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/ic_arrow_back_black_24dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="@string/subscription_prompt_cancel"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title16"
                android:layout_toRightOf="@+id/closedialog"
                android:layout_toLeftOf="@+id/remove"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <Button
                android:layout_width="wrap_content"
                android:text="@string/remove_logo"
                android:layout_height="wrap_content"
                android:id="@+id/remove"
                android:layout_toLeftOf="@+id/savedetais"
                android:layout_centerVertical="true"/>

            <ImageView
                android:id="@+id/savedetais"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:src="@drawable/ic_done_black_24dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ok"
                android:textColor="#000000"
                android:textStyle="bold"
                android:text="@string/save"/>
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_rounded_corners"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:padding="5dp"
                    android:elevation="2dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/add_logo"
                        android:layout_centerVertical="true"
                        android:orientation="vertical"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_marginTop="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Receipt width" />
                        <RadioGroup
                            android:id="@+id/radios"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="5dp">
                            <RadioButton
                                android:id="@+id/btntwo"
                                android:layout_width="match_parent"
                                android:layout_weight="@string/Button9"
                                android:layout_height="wrap_content"
                                android:text="@string/_2_inch"
                                android:textColor="#000000"/>
                            <RadioButton
                                android:id="@+id/btnthree"
                                android:layout_width="match_parent"
                                android:layout_weight="@string/Button9"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="0dp"
                                android:text="@string/_3_inch"
                                android:textColor="#000000"/>
                            <RadioButton
                                android:id="@+id/btnfour"
                                android:layout_width="match_parent"
                                android:layout_weight="@string/Button9"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="0dp"
                                android:text="@string/a4"
                                android:textColor="#000000"/>

                        </RadioGroup>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="1dp"
                        android:layout_height="96dp"
                        android:layout_centerVertical="true"
                        android:background="#7f7f7f"
                        android:layout_toLeftOf="@+id/add_logo"/>

                    <LinearLayout
                        android:id="@+id/add_logo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="Add logo"
                                android:textSize="12sp"/>
                            <ImageView
                                android:id="@+id/viewImagee"
                                android:background="?android:attr/selectableItemBackground"
                                android:layout_width="192dp"
                                android:layout_height="56dp"
                                android:layout_marginTop="2dp"
                                android:src="@drawable/print_logo"
                                android:layout_gravity="center"/>

                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="0dp">
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/compnameedit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="@string/Button9"
                            android:inputType="text"
                            android:hint="@string/company_name"
                            android:textSize="15sp"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/addressedit1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="@string/Button9"
                            android:inputType="text"
                            android:hint="Address line1"
                            android:textSize="15sp"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/addressedit2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="@string/Button9"
                            android:inputType="text"
                            android:hint="Address line2"
                            android:textSize="15sp"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/addressedit3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="@string/Button9"
                            android:inputType="text"
                            android:hint="Address line3"
                            android:textSize="15sp"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/phonenoedit"
                            android:inputType="phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="@string/Button9"
                            android:textSize="15sp"
                            android:hint="@string/phone_no"
                            android:imeOptions="actionNext"
                            android:nextFocusForward="@id/emailidedit"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/emailidedit"
                            android:inputType="textEmailAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="@string/Button9"
                            android:hint="@string/email"
                            android:textSize="15sp"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/websiteedit"
                            android:inputType="textWebEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="@string/Button9"
                            android:hint="@string/website"
                            android:textSize="15sp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/taxlineoneedit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="@string/Button11"
                            android:hint="@string/tax_license_nos"
                            android:textSize="15sp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/billfooteroneedit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="@string/Button11"
                            android:hint="@string/bill_footer"
                            android:textSize="15sp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</LinearLayout>