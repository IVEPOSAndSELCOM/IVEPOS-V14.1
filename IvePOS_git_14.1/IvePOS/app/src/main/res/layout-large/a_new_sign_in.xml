<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/LightBlack"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout

        android:id="@+id/action"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/white"
        android:elevation="5dp"
        >

        <ImageView
            android:id="@+id/leftarrow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:paddingLeft="4dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textStyle="bold"
            android:src="@drawable/ic_intuition_logo_green_72dp"
            />

        <!--            android:textStyle="bold" />-->

        <LinearLayout
            android:layout_width="76dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="66dp"
            android:layout_toLeftOf="@+id/gotomainpage"
            android:layout_toRightOf="@+id/leftarrow"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"-->
            <!--android:text="@string/recovery" />-->
            <TextView
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="71dp"
                android:layout_height="wrap_content"
                android:text="@string/ivepos"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/gotomainpage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:text=""
            android:onClick="signUp"
            android:padding="12dp"
            android:textColor="@color/ColorAccentDark"
            android:textStyle="bold" />

    </RelativeLayout>


    <ScrollView
        android:background="@color/LightBlack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/action"
        >


        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/LightBlack"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            >

            <RelativeLayout
                android:id="@+id/mainpage"
                android:layout_width="1000dp"
                android:layout_height="450dp"
                android:gravity="center|top"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"

                android:background="@drawable/r_new_login_style"
                android:elevation="10dp"
                >


                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:textColor="@color/ivepos_newlogin_black"
                    android:text="Sign in / Sign-up"
                    android:textSize="25sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_marginTop="55dp"
                    android:orientation="vertical"
                    android:gravity="center|top">

                    <com.hbb20.CountryCodePicker
                        android:id="@+id/countryCode_picker"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginStart="-285dp"
                        android:layout_marginTop="5dp"
                        app:ccp_showFullName="false"
                        app:ccp_showNameCode="true"
                        android:background="@drawable/r_new_login_trans_background"
                        android:elevation="10dp"
                        app:ccp_textSize="14dp" />

                    <EditText
                        android:id="@+id/et_phone_number"
                        android:layout_width="700dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/r_new_login_style"
                        android:drawablePadding="10dp"
                        android:elevation="10dp"
                        android:ems="10"
                        android:hint="@string/error25"
                        android:inputType="phone"
                        android:maxLines="@string/Button9"
                        android:nextFocusDown="@id/et_email"
                        android:paddingStart="10dp"
                        android:textColorHint="#005d50"
                        android:textSize="20dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="230dp"
                    android:elevation="15dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/checkBoxPolicy"
                        style="@style/CustomCheckboxStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="5dp"
                        android:checked="true" />

                    <TextView
                        android:id="@+id/linkone"
                        android:layout_width="657dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="3dp"
                        android:textSize="20sp"
                        android:text="@string/linkterm"
                        android:textColorLink="@color/blue" />


                </LinearLayout>


                <Button
                    android:layout_centerHorizontal="true"
                    android:id="@+id/btypeph"
                    android:layout_width="227dp"
                    android:layout_height="53dp"
                    android:layout_marginTop="350dp"
                    android:layout_marginEnd="73dp"
                    android:background="@drawable/r_new_login_button2"
                    android:elevation="10dp"
                    android:enabled="true"
                    android:text="@string/next"
                    android:textAllCaps="false"
                    android:textColor="#005d50" />

                <LinearLayout
                    android:id="@+id/InvisBtn"
                    android:layout_width="1000dp"
                    android:layout_height="450dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/r_new_login_style"
                    android:elevation="5dp"
                    android:gravity="center|top"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="201dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/sign_in"
                        android:textColor="@color/ivepos_newlogin_black"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:textSize="25sp"

                        />

                    <EditText
                        android:id="@+id/editTextUserId"
                        android:layout_width="700dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="75dp"
                        android:background="@drawable/r_new_login_style"
                        android:drawablePadding="50dp"
                        android:elevation="5dp"
                        android:hint="Enter your Email Address"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="10dp"
                        android:textSize="20sp"
                        android:selectAllOnFocus="true"
                        android:singleLine="true"
                        android:textColorHint="#005d50" />

                    <Button

                        android:id="@+id/nextemailbtn"
                        android:layout_width="227dp"
                        android:layout_height="53dp"
                        android:layout_marginTop="175dp"
                        android:background="@drawable/r_new_login_button2"
                        android:elevation="10dp"
                        android:text="@string/next"
                        android:textAllCaps="false"
                        android:textColor="#005d50" />

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="121dp"
                android:visibility="visible"
                android:layout_marginTop="520dp"
                android:layout_marginBottom="212dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/hiddenemaillayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible"
                    android:gravity="center_horizontal"
                    >
                    <Button
                        android:visibility="visible"
                        android:id="@+id/signup3"
                        android:layout_width="227dp"
                        android:layout_height="53dp"
                        android:background="@drawable/r_new_buttonstyle2"
                        android:drawablePadding="30dp"
                        android:elevation="5dp"
                        android:enabled="true"
                        android:text="@string/login_with_e_mail"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/ivepos_newlogin_black"
                        android:textSize="16dp" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/hiddenloginbtton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:gravity="center_horizontal"
                    >
                    <Button

                        android:id="@+id/signup4"
                        android:layout_width="227dp"
                        android:layout_height="53dp"
                        android:background="@drawable/r_new_buttonstyle2"
                        android:drawablePadding="30dp"
                        android:elevation="10dp"
                        android:enabled="true"
                        android:text="Login with Your Phone no."
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/ivepos_newlogin_black"
                        android:textSize="16dp" />

                </LinearLayout>

            </RelativeLayout>




            <LinearLayout

                android:id="@+id/linn"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="600dp"
                android:layout_marginBottom="4dp"
                android:background="@color/LightBlack"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/copy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@color/LightBlack"
                    android:gravity="center"
                    android:paddingBottom="4dp"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/copy1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@color/LightBlack"
                    android:gravity="center"
                    android:paddingBottom="4dp"
                    android:textSize="12sp" />
            </LinearLayout>



        </RelativeLayout>

    </ScrollView>







</RelativeLayout>




